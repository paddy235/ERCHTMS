    <script>
        $(function () {
            $('#toggle-btn').click(function () {
                var $this = $(this);
                if ($this.hasClass('active')) {
                    $this.removeClass('active');
                    $('.toggle').eq(1).hide()
                    $('.toggle').eq(0).fadeIn();
                } else {
                    $this.addClass('active');
                    $('.toggle').eq(0).hide()
                    $('.toggle').eq(1).fadeIn();
                }
            });
            $('.my_checkbox span').click(function () {
                $(this).toggleClass("checkbox");
            });
            $('.download_btn').click(function () {
                $('.login_box').hide();
                $('.download_box').fadeIn();
            });
            $('.down_close').click(function () {
                $('.download_box').hide();
                $('.login_box').fadeIn();
            });
        })
    </script>
