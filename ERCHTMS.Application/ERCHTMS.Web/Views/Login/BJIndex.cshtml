                                        });
                                    }
                                    else {
                                        arr = item.htnum.split(',');
                                        if (arr[0] != 0) {
                                            img.parent().find(".importAccident").css({ "background-color": "#f08200" });
                                            img.parent().find(".importAccident").show();
                                            html += "<li>一般隐患：<a onclick=\"newTab({id:'67fdd0b7-6629-48dc-a70f-3eb7ba2df1f0',title:'一般隐患',url: '../HiddenTroubleManage/HTBaseInfo/Index?ChangeStatus=" + encodeURIComponent("未整改结束") + "&mode=ybqbyh&code=" + areaCode + "'})\" title='点击查看详情'>" + arr[0] + "</a></li>";
                                        }
                                        if (arr[1] != 0) {
                                            img.parent().find(".importAccident").css({ "background-color": "red" });
                                            img.parent().find(".importAccident").show();
                                            html += "<li>重大隐患：<a onclick=\"newTab({id:'67fdd0b7-6629-48dc-a70f-3eb7ba2df1f0',title:'重大隐患',url: '../HiddenTroubleManage/HTBaseInfo/Index?ChangeStatus=" + encodeURIComponent("未整改结束") + "&mode=bigHt&code=" + areaCode + "'})\" title='点击查看详情'>" + arr[1] + "</a></li>";
                                        }
                                    }

                                }
                                if (item.fxnum != null) {
                                    if (item.fxnum.length > 0) {
                                        arr = item.fxnum.split(',');
                                        $(arr).each(function (k, num) {
                                            var grade = ""
                                            if (k == 0) {
