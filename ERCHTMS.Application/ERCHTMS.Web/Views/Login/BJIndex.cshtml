        //查看区域下的风险，隐患及作业信息
        function initDlg() {
            $("img[sno]").each(function (i,img) {
                $(img).parent().click(function () {
                    $(".riskDialog").show();
                    $.get(apiUrl + "basedata/GetRiskInfoByCode", { code: $(img).attr("sno"), orgCode: "00005001001001001" }, function (json) {
                        if (json.code == 0) {
                            var html = "";
                            var colors = ["blueColor", "yellowColor", "orangeColor", "redColor"];
                            $(json.data.risk).each(function (i, item) {
                                
                                html += '<div class="riskitem fl '+colors[i]+'">'+item.grade+'：'+item.num+'个</div>';
                            });
                            $("#risk").html(html);

                            html = "";
                            colors = ["blueColor","redColor"];
                            $(json.data.ht).each(function (i, item) {
                                html += '<div class="riskitem fl ' + colors[i] + '">' + item.name + '：' + item.num + '个</div>';
                            });
                            $("#ht").html(html);
                            html = "";
                            $(json.data.work).each(function (k, item1) {
                                var grade = getLevel(item1.RiskTypeValue);
                                html += '<tr class="risk_level' + grade + ' row0"><td>' + (k + 1) + '</td><td>' + cutString(item1.WorkDept, 12) + '</td><td>' + cutString(item1.WorkType, 10) + '</td><td>' + cutString(item1.WorkPlace, 10) + '</td><td>' + cutString(item1.WorkContent, 29) + '</td><td>' + item1.RiskType + '</td><td>' + cutString(item1.WorkTutelagePerson, 8) + '</td><td>' + cutString(item1.AuditUserName, 4) + '</td></tr>';
                            });
                            $("#work").find(".row0").remove();
                            $("#work").append(html);
                           
                        }
                       
                    });
                    
                });
            });
