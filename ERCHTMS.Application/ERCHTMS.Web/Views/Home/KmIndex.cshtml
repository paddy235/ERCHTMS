<body class="full" style="overflow: hidden;">


    <div id="container2"></div>

    <div id="container3"></div>

    <script>

        var year = "@DateTime.Now.Year";
        var DeptCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptCode";

        var returnCitySN;
        //初始化加载
        $(function () {
            LoadContainer();
            loadbreakYear();
        });

        //获取隐患接口信息
        function LoadContainer() {
            var queryJson = {
                deptCode: DeptCode,
                year: year,
                hidPoint: "",
                hidRank: "请选择"
            };
            $.ajax({
                type: "get",
                url: "../../HiddenTroubleManage/HTStatistics/QueryChangeSituationTendencyKm",
                data: { queryJson: JSON.stringify(queryJson) },
                success: function (data) {
                    if (!!data) {
                        var nData = eval("(" + data + ")");
                        //加载图表
                        // LoadContainer2(nData);
                        bindcont(nData);
                      
                    }
                }
            });
        }

        //获取违章接口信息
        function loadbreakYear() {
            var queryJson = {
                deptCode: DeptCode,
                year: year,
                levelGroups: "一般违章,较严重违章,严重违章",
                DepartmentName: ""
            };
            $.ajax({
                type: "post",
                url: '../../LllegalManage/LllegalStatistics/QueryLllegalNumberLineKm',
                data: { queryJson: JSON.stringify(queryJson) },
                success: function (data) {
                    if (!!data) {
                        var nData = eval("(" + data + ")");
                        //加载图表
                        bindBreakYear(nData);
                    }
                }
            });
        }

        //隐患月度趋势图
        function bindcont(data) {
            $('#container2').highcharts({
                chart: {
                    zoomType: 'xy'
                },
                title: {
                    text: '隐患月度趋势'
                },
                xAxis: {
                    categories: ['1月', '2月', '3月', '4月', '5月', '6月',
                         '7月', '8月', '9月', '10月', '11月', '12月']
                },
                yAxis: [
                    { // Primary yAxis
                        labels: {
                            format: '{value}%',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        title: {
                            text: '整改率%',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        min: 0,
                        max: 100,
                    }, { // Secondary yAxis
                        title: {
                            text: '',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        labels: {
                            format: '{value}',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        opposite: true
                    }

                ],
                exporting: {
                    enabled: false
                },
                credits: {
                    enabled: false
                },
                tooltip: {
                    crosshairs: true,
                    shared: true
                },
                series: data
        , lang: { noData: "暂无数据可显示" },
                noData: {
                    position: {
                        align: 'center',
                        verticalAlign: 'middle'
                    },
                    attr: {
                        'stroke-width': 1
                    },
                    style: {
                        fontWeight: 'bold',
                        fontSize: '15px',
                        color: '#202030'
                    }
                }
            });
        }

        //违章月度趋势图
        function bindBreakYear(data) {
            $('#container3').highcharts({
                chart: {
                    zoomType: 'spline'
                },
                title: {
                    text: '违章月度趋势'
                },
                xAxis: {
                    categories: ['1月', '2月', '3月', '4月', '5月', '6月',
                         '7月', '8月', '9月', '10月', '11月', '12月']
                },
                yAxis: [
                    { // Primary yAxis
                        labels: {
                            format: '{value}%',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        title: {
                            text: '整改率%',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        min: 0,
                        max: 100,
                    }, { // Secondary yAxis
                        title: {
                            text: '',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        labels: {
                            format: '{value}',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        opposite: true
                    }

                ],
                exporting: {
                    enabled: false
                },
                credits: {
                    enabled: false
                },
                tooltip: {
                    crosshairs: true,
                    shared: true
                },
                series: data
        , lang: { noData: "暂无数据可显示" },
                noData: {
                    position: {
                        align: 'center',
                        verticalAlign: 'middle'
                    },
                    attr: {
                        'stroke-width': 1
                    },
                    style: {
                        fontWeight: 'bold',
                        fontSize: '15px',
                        color: '#202030'
                    }
                }
            });
        }

    </script>

    <style>
        #container2 {
            width: 100%;
            /*height: 100%;*/
        }
        #container3 {
            width: 100%;
            /*height: 90%;*/
            padding-bottom:80px;
            margin-bottom:80px;
        }

    </style>



</body>
</html>