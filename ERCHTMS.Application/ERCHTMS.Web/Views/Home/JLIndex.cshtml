                            });
                            $("#hdtrouble").append(html);
                            //表格滚动条
                            var scrollParam = {
                                autohidemode: true,
                                cursorcolor: "#d0ebfc",
                                cursorwidth: "5px",
                                cursorborder: "none",
                                cursorborderradius: "2.5px"
                            }
                            $("#hdtrouble").niceScroll(scrollParam);
                        }
                        else {
                            $("#troubleTable").hide();
                        }
                    }
                }
            });
        }
