        //减少天数
        function SubtractDays(date, value) {
            var d = new Date(date);
            d.setDate(d.getDate() - value);
            var m = d.getMonth() + 1;
            return d.getFullYear() + "-" + m + "-" + d.getDate();
        }
        //未整改隐患
        function LoadNoChangeHidList()
        {
            $.ajax({
                type: "get",
                url: "../Desktop/GetNoChangeHidList?code=",  //获取柱状图
                success: function (data) {
                    if (!!data) {

                        var ndata = eval("(" + data + ")");

                        var html = "";
                        if (ndata.resultdata.length > 0) {
                            $("#troubleTable").show();
                            $(ndata.resultdata).each(function (index, ele) {


                                //标记
                                var filepath = !!ele.filepath ? ele.filepath.split(',')[0].replace("~", "..") : "";
                                var curdate = now;
                                var changedeadine = ele.changedeadine; //整改截止时间
                                var status = "";
                                if (!!changedeadine) {

                                    var d1 = new Date(curdate.replace(/\-/g, "\/"));  //当前时间

                                    var d2 = new Date(changedeadine.replace(/\-/g, "\/"));  //整改截止时间

                                    var d3 = new Date(SubtractDays(changedeadine, 3).replace(/\-/g, "\/")); //提前三天

                                    var d4 = new Date(SubtractDays(changedeadine, 5).replace(/\-/g, "\/")); //提前五天

                                    //逾期未整改
                                    if (d1 > d2) {
                                        status = "<span class=\"red\">已逾期</span>";
                                    }
                                    //即将到期未整改
                                    //一般隐患
                                    if (ele.rankname == "一般隐患" && d3 <= d1 && d1 <= d2) {
                                        status = "<span class=\"orange\">即将到期</span>";
                                    }
                                }
                                html += "<tr onclick=\"viewdata('" + ele.id + "','" + ele.addtype + "','" + ele.workstream + "')\"><td width='150px'><div class=\"img-wrap\"> <img src=\"" + filepath + "\" >" + status + "</div></td>";
