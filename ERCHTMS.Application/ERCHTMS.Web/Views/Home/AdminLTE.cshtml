    <script>

    var contentPath = '@Url.Content("~")'.substr(0, '@Url.Content("~")'.length - 1);
    var currUserDeptCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptCode";
    var currUserOrgCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeCode";
    var currUserOrgId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
    var currUserId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId";
    var currUserAccount = "@ERCHTMS.Code.OperatorProvider.Provider.Current().Account";
    var currUserDeptName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptName";
    var currUserOrgName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeName";
    var currUserRoleName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName";
          var IsOpenPassword =
            "@(new ERCHTMS.Busines.SystemManage.DataItemDetailBLL().GetItemValue("IsOpenPassword") == "true" && ERCHTMS.Code.OperatorProvider.Provider.Current().AccountType == "1" ? new ERCHTMS.Busines.SystemManage.DataItemDetailBLL().GetItemValue("indexOutUrl") : "")";
        $(function () {
            var color = top.$.cookie('SettingColor');
            if (color != undefined && color != null) {
                $(".skin-blue .main-header .logo:hover").css('background', color);
                $(".skin-blue .main-header .logo").css('background', color);
                $(".skin-blue .main-header .navbar .sidebar-toggle:hover").css('background', color);
                $("nav.navbar.navbar-static-top").css('background', color);
                $(".skin-blue .main-header .navbar").css('background', color);
            } else {
                $(".skin-blue .main-header .logo:hover").css('background', "#222d32");
                $(".skin-blue .main-header .logo").css('background', "##222d32");
                $(".skin-blue .main-header .navbar .sidebar-toggle:hover").css('background', "#222d32");
                $("nav.navbar.navbar-static-top").css('background', "##222d32");
                $(".skin-blue .main-header .navbar").css('background', "##222d32");
            }
            IMInit({
                url: "@BSFramework.Util.Config.GetValue("SignalRUrl")",
            userId: currUserId,
            userName: "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserName"
        });
        var photo = "@ERCHTMS.Code.OperatorProvider.Provider.Current().Photo";
        if (photo.length > 0) {
            $(".photo").attr("src", ".." + photo);
        }


    });
    function SkinIndex() {
        dialogOpenFrame({
            id: "Form",
            title: '个性化设置-皮肤设置',
            url: '/Home/SkinIndex',
            width: "580px",
            height: "350px",
            callBack: function (iframeId) {
            }
        });
    }
    </script>
</head>
<body class="hold-transition skin-blue sidebar-mini" style="overflow: hidden;">
    <div id="ajax-loader" style="cursor: progress; position: fixed; top: -50%; left: -50%; width: 200%; height: 200%; background: #fff; z-index: 10000; overflow: hidden;">
        <img src="~/Content/images/ajax-loader.gif" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; margin: auto;" />
    </div>
    <div class="wrapper">
        <!--头部信息-->
        <header class="main-header">
            <a href="#" class="logo">
                <span class="logo-mini"></span>
                <span class="logo-lg"><strong></strong></span>
            </a>
            <nav class="navbar navbar-static-top">
                <a class="sidebar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                         
                        <li class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o "></i>
                                <span class="label label-success">4</span>
                            </a>
                        </li>
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-warning">10</span>
                            </a>
                        </li>
                        <li class="dropdown tasks-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-flag-o"></i>
                                <span class="label label-danger">9</span>
                            </a>  
                        </li>
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Content/images/head/user2-160x160.jpg" class="user-image photo" id="photo" alt="User Image">
                                <span class="hidden-xs">administrator</span>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a class="menuItem" data-id="userInfo" href="../PersonCenter/Index"><i class="fa fa-user"></i>个人设置</a></li>
                                <li><a class="menuItem" data-id="userInfo" onclick="SkinIndex()"><i class=" fa fa-trash-o"></i>更换皮肤</a></li>
                                <li><a class="menuItem" data-id="userInfo" href="@(new ERCHTMS.Busines.SystemManage.DataItemDetailBLL().GetItemValue("IsOpenPassword") == "true" && ERCHTMS.Code.OperatorProvider.Provider.Current().AccountType == "1" ? new ERCHTMS.Busines.SystemManage.DataItemDetailBLL().GetItemValue("UpdatePassWordUrl") : "../PersonCenter/Index?pwd")"><i class="fa fa-trash-o"></i>修改密码</a></li>
                                <li class="divider"></li>
                                <li><a href="javascript:void();" onclick="$.index.indexOut(IsOpenPassword)"><i class="ace-icon fa fa-power-off"></i>安全退出</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!--左边导航-->
        <div class="main-sidebar">
            <div class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/images/head/user2-160x160.jpg" class="img-circle photo" alt="User Image" style="width:40px; height:45px;">
                    </div>
                    <div class="pull-left info">
                        <p>@ERCHTMS.Code.OperatorProvider.Provider.Current().UserName</p>
                        <a><i class="fa fa-circle text-success"></i>在线</a>
                    </div>
                </div>
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Search...">
                        <span class="input-group-btn">
                            <a class="btn btn-flat"><i class="fa fa-search"></i></a>
                        </span>
                    </div>
                </form>
                <ul class="sidebar-menu" id="sidebar-menu">
                    <li class="header">导航菜单</li>
                </ul>
            </div>
        </div>
        <!--中间内容-->
        <div id="content-wrapper" class="content-wrapper">
            <div class="content-tabs">
                <button class="roll-nav roll-left tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs menuTabs">
                    <div class="page-tabs-content" style="margin-left: 0px;">
                        <a href="javascript:;" class="menuTab active" data-id="AdminLTEDesktop">欢迎首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right tabRight">
                    <i class="fa fa-forward" style="margin-left: 3px;"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown tabClose" data-toggle="dropdown">
                        页签操作<i class="fa fa-caret-down" style="padding-left: 3px;"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a class="tabReload" href="javascript:void();">刷新当前</a></li>
                        <li><a class="tabCloseCurrent" href="javascript:void();">关闭当前</a></li>
                        <li><a class="tabCloseAll" href="javascript:void();">全部关闭</a></li>
                        <li><a class="tabCloseOther" href="javascript:void();">除此之外全部关闭</a></li>
                    </ul>
                </div>
                <button class="roll-nav roll-right fullscreen"><i class="fa fa-arrows-alt"></i></button>
            </div>
            <div class="content-iframe" style="overflow: hidden;">
                <div class="mainContent" id="content-main">
                    <iframe class="LRADMS_iframe" width="100%" height="100%" src="AdminLTEDesktop" frameborder="0" data-id="AdminLTEDesktop"></iframe>
                </div>
            </div>
        </div>
    </div>
    <div id="loading_background" class="loading_background" style="display: none;"></div>
    <div id="loading_manage">
        请稍候,正在努力加载中…
    </div>
    <!--聊天窗口start-->
    <a id="btn_message" href="#" class="message-prompt" title="消息提醒"><i id="icon_message" class="fa fa-commenting"></i></a>
    <div class="message-wrap">
        <div class="message-content">
            <div class="message-header">
                企业内部微信
                <div class="message-close">
                    <a href="javascript:;">×</a>
                </div>
            </div>
            <div class="message-body">
                <div class="message-body-search">
                    <input type="text" class="search-text" placeholder="搜索：同事名称、讨论组名称">
                    <i class="fa fa-search"></i>
                </div>
                <div class="message-body-container">
                    <div class="message-nav" style="display: block;">
                        <ul>
                            <li id="nav-contact-tab" class="active">
                                <a title="联系人"><i class="fa fa-user"></i></a>
                            </li>
                            <li id="nav-group-tab">
                                <a title="讨论组"><i class="fa fa-users" style="font-size: 20px;"></i></a>
                            </li>
                            <li id="nav-last-tab">
                                <a title="最近回话"><i class="fa fa-comment"></i><span class="message-count">2</span></a>
                            </li>
                        </ul>
                    </div>
                    <div class="message-group" style="height: 335px; overflow: auto; overflow-x: hidden;">
                        <ul id="message-contact-list"></ul>
                        <ul id="message-group-list" class="message-chatlist" style="display: none;">
                            <div style="color: red;">目前不支持</div>
                        </ul>
                        <ul id="message-last-list" class="message-chatlist" style="display: none;"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="message-window">
        <div class="message-window-header">
            <span class="text">与 XXX 聊天中</span>
            <div class="close">
                <a href="javascript:;">×</a>
            </div>
        </div>
        <div class="message-window-chat" style="overflow: auto; height: 260px;">
            <div class="message-window-content" style="padding: 15px; height: auto; overflow: hidden;">
            </div>
        </div>
        <div class="message-window-tool">
            <a class="message-window-tool-seechatlog"><i class="fa fa-clock-o"></i>沟通记录</a>
        </div>
        <div class="message-window-send">
            <textarea autofocus placeholder="按回车发送消息,shift+回车换行"></textarea>
        </div>
    </div>
    <!--聊天窗口end-->
</body>
