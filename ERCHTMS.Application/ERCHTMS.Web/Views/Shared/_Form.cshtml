<body>
    <form id="form1">
        @{
            if (ERCHTMS.Code.OperatorProvider.Provider.Current() == null)
            {
                var path = Request.ApplicationPath;
                @Html.Raw("<script type='text/javascript'>top.window.location='" + path + "/login?Login_Error=1'</script>");
            }
        }
        @RenderBody()
        @Html.AntiForgeryToken()
       
        @*@{
            if (!new ERCHTMS.Busines.AuthorizeManage.AuthorizeBLL().HasOperAuthority(ERCHTMS.Code.OperatorProvider.Provider.Current(), Request.Cookies["currentmoduleId"].Value, "edit"))
            {
                @Html.Raw("<script type='text/javascript'>$('input').attr('readonly','readonly');$('textarea').attr('disabled','disabled');top.window.$('a[title=\"确认\"]').hide();</script>");
            }
        }*@
    </form>
</body>
</html>
