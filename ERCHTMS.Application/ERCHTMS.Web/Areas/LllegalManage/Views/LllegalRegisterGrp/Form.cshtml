@{;
ViewBag.Title = "表单页面";
Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/scripts/business/Common.js" type="text/javascript"></script>
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>

<script type="text/javascript">
    var curUserId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId";
    var curUserName = UnicodeToString("@ERCHTMS.Code.OperatorProvider.Provider.Current().UserName");
    var curDeptId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptId";
    var curDeptCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptCode";
    var curDeptName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptName";
    var keyValue = request("keyValue"); //主键 违章信息主键
    var actiontype = request("actiontype"); //操作动作
    var reseverid = request("reseverid");  //关联字段
    var resevertype = request("resevertype");  //关联字段
    var reseverone = request("reseverone");  //关联字段
    var resevertwo = request("resevertwo");//关联字段
    var reseverthree = request("reseverthree");//关联字段
    var lllegaldescribe = request("lllegaldescribe"); //违章描述
    var reformrequire = request("reformmeasure"); //整改措施
    var safetycheck = request("safetycheck"); //安全检查
    var hiddepart = request("hiddepart");//安全检查所属单位
    var callFormId = request("callFormId");

    //初始方法
    $(function () {
        //回退原因
        $(".form:eq(0)  tr:eq(8)").css("display", "none");

        $("#CONFIRMUSERNAME").val(curUserName);
        //参数
        $("#RESEVERID").val(reseverid);
        $("#RESEVERTYPE").val(resevertype);
        $("#RESEVERONE").val(reseverone);
        $("#RESEVERTWO").val(resevertwo);
        $("#RESEVERTHREE").val(reseverthree);
        //违章描述
        if (!!lllegaldescribe) {
            $("#LLLEGALDESCRIBE").val(lllegaldescribe);
        }
        //整改措施
        if (!!reformrequire) {
            $("#REFORMREQUIRE").val(reformrequire);
        }

        //安全检查
        if (!!safetycheck) {
            $("#btn_Submit").css("display", "none");
            $("#HaveLllegalStandard").css("display", "none");
            $("#HaveLllegalInfo").css("display", "none");
        }
        $("#BELONGDEPARTID").ComboBox({
            url: "../../LllegalManage/LllegalRegisterGrp/GetLllegalDepartListJson",
            id: "DeptId",
            text: "DeptName",
            description: "==请选择==",
            height: "200px"
        });
        if (!!hiddepart) {
            $("#BELONGDEPARTID").ComboBoxSetValue(hiddepart);
            $("#BELONGDEPARTID").attr("disabled", "disabled");
        }
        $("#BELONGDEPARTID").change(function (ele) { clearSelectUser(); });

        $("input[name='ISGRPACCEPT']").bind("click", function () {
            var val = $(this).val();
            //省公司验收
            if (val == "是") {
                $("#ACCEPTPEOPLE").val(curUserName);
                $("#ACCEPTPEOPLEID").val(curUserId);
                $("#ACCEPTDEPTNAME").val(curDeptName);
                $("#ACCEPTDEPTCODE").val(curDeptCode);
                $("#ACCEPTTIME").attr("isvalid", "yes");

                $("#ACCEPTPEOPLE").attr("isvalid", "yes"); //验收人
                $(".form:eq(3) tr:eq(0) td:eq(2)").html("验收人<span style='color:red;'>*</span>");

                $("#spnAcceptTime").css("display", "inline-block");
                $("#divConfirm").css("display", "none");
                $("#spnConfirm").css("display", "none");
                $("#CONFIRMUSERNAME").removeAttr("isvalid");

            } else {
                $("#ACCEPTPEOPLE").val("");
                $("#ACCEPTPEOPLEID").val("");
                $("#ACCEPTDEPTNAME").val("");
                $("#ACCEPTDEPTCODE").val("");
                $("#ACCEPTTIME").removeAttr("isvalid");

                $("#ACCEPTPEOPLE").removeAttr("isvalid"); //验收人
                $(".form:eq(3) tr:eq(0) td:eq(2) span").remove();
                $(".form:eq(3) tr:eq(0) td:eq(3) input").removeAttr("isvalid");

                $("#spnAcceptTime").css("display", "none");
                $("#divConfirm").css("display", "inline-block");
                $("#spnConfirm").css("display", "inline-block");
                $("#CONFIRMUSERNAME").attr("isvalid", "yes");
                $("#CONFIRMUSERNAME").val(curUserName);
                $("#CONFIRMUSERID").val(curUserId);
            }
        })
        $.SetForm({
            url: "../../LllegalManage/LllegalRegister/GetInitDataJson",
            success: function (data) {
                $("#CREATEUSERNAME").val(data.User.UserName);
                $("#CREATEDEPTID").val(data.User.DeptId);
                $("#CREATEDEPTNAME").val(data.User.DeptName);

                //违章类型
                $("#LLLEGALTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.LllegalType
                });

                //违章级别
                $("#LLLEGALLEVEL").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.LllegalLevel
                });

                //流程状态
                $("#FLOWSTATE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.FlowState
                });

            }
        });

        getExaminGrid(); //考核内容

        //登记
        $("#btn_Save").click(function () {
            AcceptClick();
        });

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        //获取表单数据
        if (!!keyValue) {
            $.SetForm({
                url: "../../LllegalManage/LllegalRegister/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    //违章基本信息
                    if (null != data.baseInfo) {
                        $("#form1").formDeserialize(data.baseInfo);
                        //如果违章人员id不为空
                        if (!!data.baseInfo.LLLEGALPERSONID) {
                            $("#LLLEGALPERSON").attr("disabled", "disabled");
                            $("#LLLEGALTEAM").attr("disabled", "disabled");
                        }
                        //外包工程
                        if (!!data.baseInfo.ENGINEERID) {
                            $("#ENGINEERNAME").attr("disabled", "disabled");
                        }
                        //存在回退数据
                        if (data.baseInfo.RESEVERFOUR == "是") {
                            $(".form:eq(0)  tr:eq(8)").css("display", "");
                        }

                        $("#LLLEGALTYPE").ComboBoxSetValue(data.baseInfo.LLLEGALTYPE); //违章类型
                        $("#LLLEGALLEVEL").ComboBoxSetValue(data.baseInfo.LLLEGALLEVEL);  //违章级别

                        if (!!data.acceptInfo.ISGRPACCEPT) {
                            //是否省公司验收
                            if (data.acceptInfo.ISGRPACCEPT == "是") {
                                $("input[name='ISGRPACCEPT']:eq(0)").prop("checked", "checked");  //是
                                $("#divConfirm").css("display", "none");
                                $("#spnConfirm").css("display", "none");
                                $("#CONFIRMUSERNAME").removeAttr("isvalid");

                                $("#ACCEPTPEOPLE").attr("isvalid", "yes"); //验收人
                                $(".form:eq(3) tr:eq(0) td:eq(2)").html("验收人<span style='color:red;'>*</span>");
                            }
                            else {
                                $("input[name='ISGRPACCEPT']:eq(1)").prop("checked", "checked"); //否
                            }
                        }
                        if (!!data.baseInfo.ISEXPOSURE) {
                            //是否曝光
                            if (data.baseInfo.ISEXPOSURE == "1") {
                                $("input[name='ISEXPOSURE']:eq(0)").prop("checked", "checked");  //是
                            }
                            else {
                                $("input[name='ISEXPOSURE']:eq(1)").prop("checked", "checked"); //否
                            }
                        }
                    }
                    //违章整改
                    if (null != data.reformInfo) {
                        $("#form1").formDeserialize(data.reformInfo);
                        $("#REFORMID").val(data.reformInfo.ID);
                    }
                    //违章考核、关联责任人
                    if (null != data.relevanceInfo) {
                        $('#examinGridTable').jqGrid("setGridParam", { data: data.relevanceInfo }).trigger("reloadGrid");
                    }
                    //违章验收
                    if (null != data.acceptInfo) {
                        $("#form1").formDeserialize(data.acceptInfo);
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                    }
                }
            });
        }

        if (actiontype == "view") {
            $("#btn_addend").attr("disabled", "disabled");
            $("#choosePerson").attr("disabled", "disabled");
            $("#chooseOutProject").attr("disabled", "disabled");

            $("#btn_Save").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#HaveLllegalStandard").attr("disabled", "disabled");
            $("#HaveLllegalInfo").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });

            $("#btn_Save").attr("readonly", "readonly");
            $("#btn_Submit").attr("readonly", "readonly");
            $("#HaveLllegalStandard").attr("readonly", "readonly");
            $("#HaveLllegalInfo").attr("readonly", "readonly");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("readonly", "readonly");
            });
        }

        //违章图片
        var curLllegalPic = $("#LLLEGALPIC").val();  //
        var isdelete = actiontype == "view" ? false : true;
        if (!curLllegalPic) {
            curLllegalPic = "@Guid.NewGuid().ToString()";
            $("#LLLEGALPIC").val(curLllegalPic);
        }
        if (actiontype != "view") {
            file_upload.init({
                keyValue: curLllegalPic, extensions: 'jpg,gif,bmp,png', isImage: true, el: '#uploader'
            });
        }
        //绑定附件
        $.ajax({
            url: '../../PublicInfoManage/ResourceFile/GetFilesByRecId',
            data: { recId: curLllegalPic },
            type: "post",
            success: function (data) {
                var objdata = eval("(" + data + ")"); //转化为对象类型
                file_upload.bind(objdata, isdelete, true, curLllegalPic, "uploader");
            }
        });

        GetApproveGrid(); //违章核准内容

        //选择已有的违章数据
        $("#HaveLllegalInfo").click(function () {
            dialogOpen({
                id: 'ChosseForm',
                title: '选择违章',
                url: '/LllegalManage/LllegalRegister/DetailList',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    var data = new Array("LLLEGALDESCRIBE", "LLLEGALTYPE", "LLLEGALLEVEL"); //违章描述 违章类型 违章级别
                    top.document.getElementById(iframeId).contentWindow.GetObjectData(window.document.body, data);
                }
            });
        });

        //选择违章标准
        $("#HaveLllegalStandard").click(function () {
            dialogOpen({
                id: 'ChosseForm',
                title: '选择违章标准',
                url: '/LllegalStandard/LllegalStandard/Select',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    var data = new Array("LLLEGALDESCRIBE", "LLLEGALTYPE", "LLLEGALLEVEL", "ECONOMICSPUNISH", "LLLEGALPOINT", "FIRSTECONOMICSPUNISH", "FIRSTLLLEGALPOINT", "SECONDECONOMICSPUNISH", "SECONDLLLEGALPOINT"); //违章描述 违章类型 违章级别,
                    top.document.getElementById(iframeId).contentWindow.GetObjectData(window.document.body, data);
                }
            });
        });

    });

    function selectUser() {
        if (true == ValidateBelongDept()) {
            selectMuchUser({ deptId: $('#BELONGDEPARTID').ComboBoxGetValue(), checkMode: 0, mode: 1, winObject: window.document.body, domId: 'LLLEGALPERSON|0,LLLEGALPERSONID|2,LLLEGALTEAMCODE|4,LLLEGALTEAM|5,PERSONINCHARGENAME|0,PERSONINCHARGEID|2,REFORMPEOPLE|0,REFORMPEOPLEID|2,REFORMDEPTNAME|5,REFORMDEPTCODE|4' });
        }
    }

    function selectChargeUser() {
        if (true == ValidateBelongDept()) {
            selectMuchUser({ deptId: $('#BELONGDEPARTID').ComboBoxGetValue(), checkMode: 0, mode: 1, winObject: window.document.body, domId: 'PERSONINCHARGENAME|0,PERSONINCHARGEID|2' });
        }
    }

    function selectRUser() {
        if (true == ValidateBelongDept()) {
            selectDifferentUser($('#BELONGDEPARTID').ComboBoxGetValue(), 0, 1, window.document.body, 'REFORMPEOPLE,,REFORMPEOPLEID,,REFORMDEPTCODE,REFORMDEPTNAME,REFORMTEL', 'ACCEPTPEOPLEID', '验收人');
        }
    }
    function selectAUser() {
        var isGrpAccept = $("input[name='ISGRPACCEPT']:checked").val();
        if (true === ValidateBelongDept()) {
            if (isGrpAccept == "否") {
                selectDifferentUser($('#BELONGDEPARTID').ComboBoxGetValue(), 0, 1, window.document.body, 'ACCEPTPEOPLE,,ACCEPTPEOPLEID,,ACCEPTDEPTCODE,ACCEPTDEPTNAME', 'REFORMPEOPLEID', '整改责任人');
            }
            else {
                selectDifferentUser('', 0, 11, window.document.body, 'ACCEPTPEOPLE,,ACCEPTPEOPLEID,,ACCEPTDEPTCODE,ACCEPTDEPTNAME', 'REFORMPEOPLEID', '整改责任人');
            }
        }
    }

    function selectKHUser(objname, objid) {
        if (true == ValidateBelongDept()) {
            selectMuchUser({ deptId: $('#BELONGDEPARTID').ComboBoxGetValue(), checkMode: 0, mode: 1, winObject: window.document.body, domId: objname + "|0," + objid + "|2" });
        }
    }


    //选择责任单位部门
    function selectWzZRDept() {
        if (true == ValidateBelongDept()) {
            selectDept($('#BELONGDEPARTID').ComboBoxGetValue(), 0, 1, '违章责任单位', window.document.body, 'LLLEGALDEPART,LLLEGALDEPARTCODE,,,', '');
        }
    }

    //选择责任单位部门
    function selectWzDWDept() {
        if (true == ValidateBelongDept()) {
            selectDept($('#BELONGDEPARTID').ComboBoxGetValue(), 0, 1, '违章单位', window.document.body, 'LLLEGALTEAM,LLLEGALTEAMCODE,,,', '')
        }
    }

    //选择外包工程
    function selectProject() {
        if (true == ValidateBelongDept()) {
            sjSelectProject(window.document.body, 'ENGINEERNAME,ENGINEERID', $('#BELONGDEPARTID').ComboBoxGetValue());
        }
    }

    function ValidateBelongDept() {
        var dId = $("#BELONGDEPARTID").ComboBoxGetValue();
        if (!dId) {
            dialogAlert("请选择所属单位!", -1)
            return false;
        }
        else
            return true;
    }
    function clearSelectUser() {
        $("#LLLEGALPERSON,#LLLEGALPERSONID,#REFORMPEOPLE,#REFORMPEOPLEID,#ACCEPTPEOPLE,#ACCEPTPEOPLEID").val("");
        $("#ExaminInfo input").each(function (index, ele) {
            $(this).val("");
        });
    }

    //考核内容 新增考核信息内容
    function add_examin() {
        var dlg = dialogOpen({
            id: 'ExaminForm',
            title: '违章考核内容',
            url: '/LllegalManage/LllegalRegister/ExaminForm',
            width: ($(top.window).width() - 150) + "px",
            height: ($(top.window).height() / 2) + "px",
            callBack: function (iframeId) {
                top.document.getElementById(iframeId).contentWindow.CallExamin(dlg, callFormId);
            }
        });
    }
    //插入到违章考核列表
    function insertexamin(data) {
        if (!!data) {
            var rowid = newGuid();
            var array = new Array();
            array.push({
                ID: rowid, ASSESSOBJECT: data.ASSESSOBJECT, AWAITJOB: data.AWAITJOB, ECONOMICSPUNISH: data.ECONOMICSPUNISH, EDUCATION: data.EDUCATION, LLLEGALPOINT: data.LLLEGALPOINT,
                PERFORMANCEPOINT: data.PERFORMANCEPOINT, PERSONINCHARGEID: data.PERSONINCHARGEID, PERSONINCHARGENAME: data.PERSONINCHARGENAME
            });
            var ids = $('#examinGridTable').jqGrid("getDataIDs");
            var rowid = (ids.length == 0 ? 1 : Math.max.apply(Math, ids) + 1);
            var newrowid = (0 - rowid);
            $('#examinGridTable').jqGrid("addRowData", newrowid, array, "first");
        }
    }
    //移除违章考核信息
    function removeexamin() {
        var selobj = $('#examinGridTable').jqGrid("getGridParam", "selrow");
        if (!selobj) {
            dialogMsg('没有选中要删除的行！', 0);
        }
        $('#examinGridTable').delRowData(selobj);
    }
    //更新行数据
    function updateexamin(data, selobj) {
        if (!!data) {
            var rowid = data.ID;
            var array = new Array();
            array.push({
                ID: data.ID, ASSESSOBJECT: data.ASSESSOBJECT, AWAITJOB: data.AWAITJOB, ECONOMICSPUNISH: data.ECONOMICSPUNISH, EDUCATION: data.EDUCATION, LLLEGALPOINT: data.LLLEGALPOINT,
                PERFORMANCEPOINT: data.PERFORMANCEPOINT, PERSONINCHARGEID: data.PERSONINCHARGEID, PERSONINCHARGENAME: data.PERSONINCHARGENAME
            });
            $('#examinGridTable').delRowData(selobj);
            $('#examinGridTable').jqGrid("addRowData", selobj, array, "first");
        }

    }
    //编辑违章考核
    function editexamin() {
        var selobj = $('#examinGridTable').jqGrid("getGridParam", "selrow");
        var rowData = $('#examinGridTable').jqGrid("getRowData", selobj);
        if (!!rowData) {
            rowData.oper = "";

            var arguments = "?actiontype=edit&ASSESSOBJECT=" + rowData.ASSESSOBJECT + "&AWAITJOB=" + rowData.AWAITJOB + "&ECONOMICSPUNISH=" + rowData.ECONOMICSPUNISH +
                "&EDUCATION=" + rowData.EDUCATION + "&ID=" + rowData.ID + "&LLLEGALPOINT=" + rowData.LLLEGALPOINT + "&PERFORMANCEPOINT=" + rowData.PERFORMANCEPOINT
            + "&PERSONINCHARGEID=" + rowData.PERSONINCHARGEID + "&PERSONINCHARGENAME=" + rowData.PERSONINCHARGENAME;

            var dlg = dialogOpen({
                id: 'ExaminForm',
                title: '违章考核内容',
                url: '/LllegalManage/LllegalRegister/ExaminForm' + arguments,
                width: ($(top.window).width() - 150) + "px",
                height: ($(top.window).height() / 2) + "px",
                callBack: function (iframeId) {
                    top.document.getElementById(iframeId).contentWindow.CallEditExam(dlg, callFormId, selobj);
                }
            });
        }

    }
    //加载考核信息
    function getExaminGrid(data) {
        var selectedRowIndex = 0;
        var $gridTable = $('#examinGridTable');
        //隐患基本信息
        $gridTable.jqGrid({
            autowidth: true,
            height: parseFloat($(window).height() / 2 - 100),
            datatype: "local",
            data: data,
            colModel: [
                 {
                     label: '主键', name: 'ID', index: 'ID', align: 'center', hidden: true
                 },
                {
                    label: '考核人员/单位', name: 'PERSONINCHARGEID', index: 'PERSONINCHARGEID', align: 'center', hidden: true
                },
                {
                    label: '操作', name: 'oper', index: 'oper', width: 120, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "";
                        if (actiontype != "view") {
                            html = "<a href=javascript:editexamin()  title='修改'><i class='fa fa-pencil-square-o'></i></a>";
                            html += "<a href=javascript:removeexamin()  title='删除'><i class='fa fa-trash-o'></i></a>";
                        }
                        return html;
                    }
                },
                {
                    label: '考核对象', name: 'ASSESSOBJECT', index: 'ASSESSOBJECT', width: 150, align: 'center'
                },
                {
                    label: '考核人员/单位', name: 'PERSONINCHARGENAME', index: 'PERSONINCHARGENAME', width: 150, align: 'center'
                },
                {
                    label: '经济处罚(元)', name: 'ECONOMICSPUNISH', index: 'ECONOMICSPUNISH', width: 150, align: 'center'
                },
                {
                    label: 'EHS绩效考核(分)', name: 'PERFORMANCEPOINT', index: 'PERFORMANCEPOINT', width: 150, align: 'center'
                },
                {
                    label: '教育培训(学时)', name: 'EDUCATION', index: 'EDUCATION', width: 150, align: 'center'
                },
                {
                    label: '违章扣分(分)', name: 'LLLEGALPOINT', index: 'LLLEGALPOINT', width: 150, align: 'center'
                },
                {
                    label: '待岗(月)', name: 'AWAITJOB', index: 'AWAITJOB', width: 150, align: 'center'
                }
            ],
            sortname: 'CREATEDATE',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).setSelection(selectedRowIndex, false);
            }
        });

        $('#examinGridTable').jqGrid("setGroupHeaders", {
            useColSpanStyle: true,
            groupHeaders: [{ startColumnName: "ECONOMICSPUNISH", numberOfColumns: 5, titleText: "<span style=\"font-weight:bold;font-size:9px;\">考核内容</span>" }]
        });
    }

    //核准
    function GetApproveGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#approveGridTable');
        $gridTable.jqGrid({
            url: "../../LllegalManage/LllegalApprove/GetHistoryListJson?keyValue=" + keyValue,
            datatype: "json",
            height: $(window).height() - 500,
            autowidth: true,
            colModel: [
                {
                    label: '操作', name: 'ID', index: 'ID', width: 120, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a href=javascript:Detail('" + rowObject.ID + "')  title='查看'><i class='fa fa-eye'></i></a>";
                        return html;
                    }
                },
                { label: '核准人', name: 'APPROVEPERSON', index: 'APPROVEPERSON', width: 150, align: 'center' },
                { label: '核准单位', name: 'APPROVEDEPTNAME', index: 'APPROVEDEPTNAME', width: 120, align: 'center' },
                {
                    label: '核准结果', name: 'APPROVERESULT', index: 'APPROVERESULT', width: 150, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = rowObject.APPROVERESULT == "1" ? "通过" : "不通过";
                        return html;
                    }
                },
                {
                    label: '核准时间', name: 'APPROVEDATE', index: 'APPROVEDATE', width: 150, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = formatDate(cellvalue, 'yyyy-MM-dd');
                        return html;
                    }
                }
            ],
            pager: false,
            rowNum: "20",
            sortname: 'approvedate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            ondblClickRow: function (id) {

            }
        });
    }
    //查看核准详情
    function Detail(keyValue) {
        dialogOpen({
            id: 'DetailForm',
            title: '违章核准详情',
            url: '/LllegalManage/LllegalApprove/Detail?keyValue=' + keyValue,
            width: ($(top.window).width() - 200) + "px",
            height: '680px',
            btn: null
        });
    }

    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
