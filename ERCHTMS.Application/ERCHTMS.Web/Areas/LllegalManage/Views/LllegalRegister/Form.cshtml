<script type="text/javascript">
    var orgId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
    var orgName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeName";
    var curRoleName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName";
    var curUserOrg = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
    var keyValue = request("keyValue"); //主键 违章信息主键
    var actiontype = request("actiontype"); //操作动作
    var reseverid = request("reseverid");  //关联字段
    var resevertype = request("resevertype");  //关联字段
    var reseverone = request("reseverone");  //关联字段
    var resevertwo = request("resevertwo");//关联字段
    var reseverthree = request("reseverthree");//关联字段
    var lllegaldescribe = request("lllegaldescribe"); //违章描述
    var reformrequire = request("reformmeasure"); //整改措施
    var safetycheck = request("safetycheck"); //安全检查
    var callFormId = request("callFormId");
    var ischange = false; //是否能直接到整改
    var ishaveupsafety = false; //是否能上报
    var isshowappoint = false; //是否能指定整改
    var ismustupsafety = false; //是否必须上报  以此判断装置性违章必须由装置部门来进行审核
    var isendflow = false;//是否具有结束流程的权限
    var ishrdl = false; //是否华润电力
    var applianceClass = ""; //装置类
    var curMark = ""; //标记类
    var RelevancePersonRole = "";
    var IsUseConciseRegister = 0;
    var ControlPicMustUpload = ""; //相关图片必传控制配置
    var LllegalAwardDetailAuth = ""; //违章奖励权限控制
    //初始方法
    $(function () {
        //回退原因
        $(".form:eq(0)  tr:eq(9)").css("display", "none");

        //参数
        $("#RESEVERID").val(reseverid);
        $("#RESEVERTYPE").val(resevertype);
        $("#RESEVERONE").val(reseverone);
        $("#RESEVERTWO").val(resevertwo);
        $("#RESEVERTHREE").val(reseverthree);
        //违章描述
        if (!!lllegaldescribe) {
            $("#LLLEGALDESCRIBE").val(lllegaldescribe);
        }

        //安全检查
        if (!!safetycheck) {
            $("#btn_Submit").css("display", "none");
            $("#HaveLllegalStandard").css("display", "none");
            $("#HaveLllegalInfo").css("display", "none");

            //整改措施
            reformrequire = top.Details.window.checkContentInfo;//检查内容
            if (!!reformrequire) {
                $("#REFORMREQUIRE").val(decodeURIComponent(reformrequire));
            }

            var checkrequireinfo = top.Details.window.checkRequireInfo;//违章描述
            if (!!checkrequireinfo) {
                $("#LLLEGALDESCRIBE").val(decodeURIComponent(checkrequireinfo));
            }
        }

        $.SetForm({
            url: "../../LllegalManage/LllegalRegister/GetInitDataJson",
            success: function (data) {
                ControlPicMustUpload = data.ControlPicMustUpload; //相关图片必传控制
                RelevancePersonRole = data.RelevancePersonRole; //整改责任单位关联角色
                IsUseConciseRegister = data.IsUseConciseRegister;
                LllegalAwardDetailAuth = data.LllegalAwardDetailAuth;

                //启用违章奖励信息
                if (!!LllegalAwardDetailAuth)
                {
                    $(".marginTop:eq(1)").css("display", "");
                    $("#panel6").css("display", "");
                }
                //采用简洁版登记
                if (IsUseConciseRegister > 0)
                {
                    $(".form:eq(0) tr:eq(0)").css("display", "none");
                    $(".form:eq(0) tr:eq(1)").css("display", "none");
                    $(".form:eq(0) tr:eq(2)").css("display", "none");
                    $(".form:eq(0) tr:eq(4)").css("display", "none");
                    $(".form:eq(0) tr:eq(7)").css("display", "none");
                    $(".form:eq(0) tr:eq(8)").css("display", "none");
                    $("#LLLEGALTYPE").removeAttr("isvalid");
                }

                $("#CREATEUSERNAME").val(data.User.UserName);
                $("#CREATEDEPTID").val(data.User.DeptId);
                $("#CREATEDEPTNAME").val(data.User.DeptName);
                $("#BELONGDEPARTID").val(data.User.OrganizeId);
                $("#BELONGDEPART").val(data.User.OrganizeName);
                applianceClass = data.ApplianceClass;//装置类
                curMark = data.Mark; //安全管理部门 或 装置部门判断
                ishrdl = data.IsHrdl == "true";//是否华润电力
                //违章类型
                $("#LLLEGALTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.LllegalType
                });
                //违章级别
                $("#LLLEGALLEVEL").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.LllegalLevel
                });

                //流程状态
                $("#FLOWSTATE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.FlowState
                });
                //专业分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.MajorClassify
                });


                ControlWriteAuth();
            }
        });

        getExaminGrid(); //考核内容
        getAwardGrid(); //奖励信息
        //登记
        $("#btn_Save").click(function () {
            AcceptClick();
        });

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        //专业分类
        $("#MAJORCLASSIFY").change(function () {
            ControlWriteAuth();
        });
        //通过选择类型确定是否需要填写考核内容
        $("#LLLEGALTYPE").change(function (ele) {
            ControlWriteAuth();
        });
        //是否上报点击
        $("input[name='ISUPSAFETY']").click(function () {
            var checkValue = $(this).val();
            //上报
            if (checkValue == "1") {
                HiddenValid();
            }
            else //不上报
            {
                ShowValid();
            }
        });
        //是否指定整改责任人
        $("input[name='ISAPPOINT']").change(function () {
            var isappoint = $("input[name='ISAPPOINT']:checked").val();
            //指定
            if (isappoint == "1") {
                //整改责任负责人隐藏
                $("#REFORMCHARGEDEPTNAME").removeAttr("isvalid");
                $("#REFORMCHARGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(3) tr:eq(1)").css("display", "none");
                //显示整改责任人
                $("#REFORMPEOPLE").attr("isvalid", "yes");
                $(".form:eq(3) tr:eq(2)").css("display", "");

                $("#REFORMCHARGEDEPTNAME").val("");
                $("#REFORMCHARGEDEPTID").val("");
                $("#REFORMCHARGEPERSONNAME").val("");
                $("#REFORMCHARGEPERSON").val("");
            }
            else {
                //显示整改责任负责人
                $("#REFORMCHARGEDEPTNAME").attr("isvalid", "yes");
                $("#REFORMCHARGEPERSONNAME").attr("isvalid", "yes");
                $(".form:eq(3) tr:eq(1) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");
                $(".form:eq(3) tr:eq(1) td:eq(2)").html("<label style=\"white-space:pre-wrap;\">整改责任单位负责人</label><span style='color:red;'>*</span>");
                $(".form:eq(3) tr:eq(1)").css("display", "");
                //整改责任人隐藏
                $("#REFORMPEOPLE").removeAttr("isvalid");
                $(".form:eq(3) tr:eq(2)").css("display", "none");

                $("#REFORMPEOPLE").val("");
                $("#REFORMPEOPLEID").val("");
                $("#REFORMDEPTNAME").val("");
                $("#REFORMDEPTCODE").val("");
            }
            ControlWriteAuth();
        });


        //获取表单数据
        if (!!keyValue) {
            $.SetForm({
                url: "../../LllegalManage/LllegalRegister/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    //违章基本信息
                    if (null != data.baseInfo) {
                        $("#form1").formDeserialize(data.baseInfo);
                        //如果违章人员id不为空
                        if (!!data.baseInfo.LLLEGALPERSONID) {
                            $("#LLLEGALPERSON").attr("disabled", "disabled");
                            $("#LLLEGALTEAM").attr("disabled", "disabled");
                        }
                        //外包工程
                        if (!!data.baseInfo.ENGINEERID) {
                            $("#ENGINEERNAME").attr("disabled", "disabled");
                        }
                        //存在回退数据
                        if (data.baseInfo.RESEVERFOUR == "是") {
                            $(".form:eq(0)  tr:eq(9)").css("display", "");
                        }

                        $("#LLLEGALTYPE").ComboBoxSetValue(data.baseInfo.LLLEGALTYPE); //违章类型
                        $("#LLLEGALLEVEL").ComboBoxSetValue(data.baseInfo.LLLEGALLEVEL);  //违章级别
                        $("#MAJORCLASSIFY").ComboBoxSetValue(data.baseInfo.MAJORCLASSIFY);  //专业分类


                        if (!!data.baseInfo.ISEXPOSURE) {
                            //是否曝光
                            if (data.baseInfo.ISEXPOSURE == "1") {
                                $("input[name='ISEXPOSURE']:eq(0)").prop("checked", "checked");  //是
                            }
                            else {
                                $("input[name='ISEXPOSURE']:eq(1)").prop("checked", "checked"); //否
                            }
                        }
                        //上报控制
                        if (!!data.baseInfo.ISUPSAFETY) {
                            //是否上报
                            if (data.baseInfo.ISUPSAFETY == "1") {
                                $("input[name='ISUPSAFETY']:eq(0)").prop("checked", "checked");  //是

                                /********控制必填项********/
                                HiddenValid();
                            }
                            else {
                                $("input[name='ISUPSAFETY']:eq(1)").prop("checked", "checked"); //否
                            }
                        }
                        ControlWriteAuth();
                    }
                    //违章整改
                    if (!!data.reformInfo) {
                        $("#form1").formDeserialize(data.reformInfo);
                        $("#REFORMID").val(data.reformInfo.ID);
                        if (!!data.reformInfo.ISAPPOINT)
                        {
                            //是否指定整改
                            if (data.reformInfo.ISAPPOINT == "1") {
                                $("input[name='ISAPPOINT']:eq(0)").prop("checked", "checked");
                            }
                            else {
                                $("input[name='ISAPPOINT']:eq(1)").prop("checked", "checked");
                            }
                        }
                    }
                    //违章考核、关联责任人
                    if (null != data.relevanceInfo) {
                        $('#examinGridTable').jqGrid("setGridParam", { data: data.relevanceInfo }).trigger("reloadGrid");
                    }
                    //违章奖励信息
                    if (!!data.awardInfo)
                    {
                        $('#awardGridTable').jqGrid("setGridParam", { data: data.awardInfo }).trigger("reloadGrid");
                    }
                    //违章验收
                        if (!!data.acceptInfo) {
                        $("#form1").formDeserialize(data.acceptInfo);
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                    }
                }
            });
        }


        //查看状态下
        if (actiontype == "view") {
            $("#btn_addend").css("display", "none"); 
            $("#btn_addaward").css("display", "none"); 
            $(".choosePerson").attr("disabled", "disabled");
            $("#chooseOutProject").attr("disabled", "disabled");

            $("#btn_Save").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#HaveLllegalStandard").attr("disabled", "disabled");
            $("#HaveLllegalInfo").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });

            $("#btn_Save").attr("readonly", "readonly");
            $("#btn_Submit").attr("readonly", "readonly");
            $("#HaveLllegalStandard").attr("readonly", "readonly");
            $("#HaveLllegalInfo").attr("readonly", "readonly");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("readonly", "readonly");
            });
        }

        //违章图片
        var curLllegalPic = $("#LLLEGALPIC").val();  //
        var isdelete = actiontype == "view" ? false : true;
        if (!curLllegalPic) {
            curLllegalPic = "@Guid.NewGuid().ToString()";
            $("#LLLEGALPIC").val(curLllegalPic);
        }
        if (actiontype != "view") {
            file_upload.init({
                keyValue: curLllegalPic, extensions: 'jpg,gif,bmp,png', isImage: true, el: '#uploader'
            });
        }
        //绑定附件
        $.ajax({
            url: '../../PublicInfoManage/ResourceFile/GetFilesByRecId',
            data: { recId: curLllegalPic },
            type: "post",
            success: function (data) {
                var objdata = eval("(" + data + ")"); //转化为对象类型
                file_upload.bind(objdata, isdelete, true, curLllegalPic, "uploader");
            }
        });

        getApproveGrid(); //违章审核内容


        //选择已有的违章数据
        $("#HaveLllegalInfo").click(function () {
            dialogOpen({
                id: 'ChosseForm',
                title: '选择违章',
                url: '/LllegalManage/LllegalRegister/DetailList',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    var data = new Array("LLLEGALDESCRIBE", "LLLEGALTYPE", "LLLEGALLEVEL"); //违章描述 违章类型 违章级别
                    top.document.getElementById(iframeId).contentWindow.GetObjectData(window.document.body, data);
                }
            });
        });

        //选择违章标准
        $("#HaveLllegalStandard").click(function () {
            dialogOpen({
                id: 'ChosseForm',
                title: '选择违章标准',
                url: '/LllegalStandard/LllegalStandard/Select',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    var data = new Array("LLLEGALDESCRIBE", "LLLEGALTYPE", "LLLEGALLEVEL", "ECONOMICSPUNISH", "LLLEGALPOINT", "FIRSTECONOMICSPUNISH", "FIRSTLLLEGALPOINT", "SECONDECONOMICSPUNISH", "SECONDLLLEGALPOINT"); //违章描述 违章类型 违章级别,
                    top.document.getElementById(iframeId).contentWindow.GetObjectData(window.document.body, data);
                    $("#LLLEGALTYPE").trigger("change");
                }
            });
        });

        if (IsUseConciseRegister > 0)
        {
            $(".panel-default:eq(1) .panel-body").css("display", "none");
            $(".panel-default:eq(1) .panel-heading a").removeClass("fa-chevron-down").addClass("fa-chevron-up");
            $(".panel-default:eq(2) .panel-body").css("display", "none");
            $(".panel-default:eq(2) .panel-heading a").removeClass("fa-chevron-down").addClass("fa-chevron-up");
            $(".panel-default:eq(3) .panel-body").css("display", "none");
            $(".panel-default:eq(3) .panel-heading a").removeClass("fa-chevron-down").addClass("fa-chevron-up");
            $(".panel-default:eq(4) .panel-body").css("display", "none");
            $(".panel-default:eq(4) .panel-heading a").removeClass("fa-chevron-down").addClass("fa-chevron-up");
        }


        //违章人员
        $('#LLLEGALPERSON').inputComplete({
            type: "get",
            url: "../../BaseManage/User/GetUserListJson?rows=1000000&page=1&queryJson=" + JSON.stringify({ autocomplete: 1, username: "$(this)" }), //使用 $(this) 在闭包函数里进行值替换
            inputkey: "RealName-ParentName/DeptName",   //当前输入框要显示的内容
            inputval: "RealName",
            relevancekeys: [{ key: "#LLLEGALPERSONID", value: "UserId" }, { key: "#LLLEGALTEAM", value: "DeptName"}, { key: "#LLLEGALTEAMCODE", value: "DeptCode" }]   //关联键值 
        });

        //违章单位
        $('#LLLEGALTEAM').inputComplete({
            type: "get",
            url: "../../BaseManage/Department/GetDeptListByTargetCondition?deptname=$(this)",
            inputkey: "parentname/deptname",   //当前输入框要显示的内容
            inputval: "deptname",
            //isdisabled: true,
            relevancekeys: [{ key: "#LLLEGALTEAMCODE", value: "deptcode" }]   //关联键值 
        });

        //违章责任单位
        $('#LLLEGALDEPART').inputComplete({
            type: "get",
            url: "../../BaseManage/Department/GetDeptListByTargetCondition?deptname=$(this)",
            inputkey: "parentname/deptname",   //当前输入框要显示的内容
            inputval: "deptname",
            //isdisabled: true,
            relevancekeys: [{ key: "#LLLEGALDEPARTCODE", value: "deptcode" }]   //关联键值 
        });

    });


    function ControlWriteAuth() {
        //专业分类
        var majorclassify = $("#MAJORCLASSIFY").ComboBoxGetValue();
        majorclassify = !!majorclassify ? majorclassify : "";
        //违章类型
        var lllegaltype = $("#LLLEGALTYPE").ComboBoxGetValue();
        lllegaltype = !!lllegaltype ? lllegaltype : "";
        //违章单位
        var lllegalteamcode = $("#LLLEGALTEAMCODE").val();
        //违章级别
        var lllegallevel = $("#LLLEGALLEVEL").ComboBoxGetValue();
        //判断是否具有直接提交到整改的权限(具有违章审核权限)
        var array = new Array();
        array.push({ rankname: "", workflow: "违章登记", endflow: "违章整改", mark: "厂级违章流程", submittype: "提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, arg5: lllegallevel, businessid: keyValue, action: "ischange" });//是否能直接提交到整改
        array.push({ rankname: "", workflow: "违章登记", endflow: "制定整改计划", mark: "厂级违章流程", submittype: "制定提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, arg5: lllegallevel, businessid: keyValue, action: "isshowappoint" }); //是否能指定整改责任人
        array.push({ rankname: "", workflow: "违章登记", endflow: "违章核准", mark: "厂级违章流程", submittype: "上报", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, arg5: lllegallevel, businessid: keyValue, action: "ishaveupsafety" }); //是否具有上报权限
        array.push({ rankname: "", workflow: "违章登记", endflow: "违章核准", mark: "厂级违章流程", submittype: "限制上报", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, arg5: lllegallevel, businessid: keyValue, action: "ismustupsafety" }); //是否具有必须上报权限
        array.push({ rankname: "", workflow: "违章登记", endflow: "流程结束", mark: "厂级违章流程", submittype: "提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, arg5: lllegallevel, businessid: keyValue, action: "isendflow" }); //是否具有结束流程的权限
        $.ajax({
            data: { queryJson: JSON.stringify(array) },
            type: "post",
            url: "../../LllegalManage/LllegalRegister/GetCurUserWfAuthByCondition",
            success: function (data) {
                if (!!data) {
                    var result = eval("(" + data + ")");
                    $(result).each(function (i, ele) {
                        var key = ele.key;
                        switch (key) {
                            case "ischange":
                                ischange = ele.value;
                                break;
                            case "isshowappoint":
                                isshowappoint = ele.value;
                                break;
                            case "ishaveupsafety":
                                ishaveupsafety = ele.value;
                                break;
                            case "ismustupsafety":
                                ismustupsafety = ele.value;
                                break;
                            case "isendflow":
                                isendflow = ele.value;
                                break;
                        }
                    });
                    IsActionAuth();
                }
            }
        });
    }

    var IsActionAuth = function () {
        //是否上报
        var isupsafety = $("input[name='ISUPSAFETY']:checked").val();
        //是否指定整改责任人
        var isappoint = $("input[name='ISAPPOINT']:checked").val();
        //是否具有上报权限
        if (ishaveupsafety) { //具有上报权限
            $("input[name='ISUPSAFETY']").each(function (index, ele) {
                if (actiontype != "view") {
                    $(this).removeAttr("disabled");
                }
            });
        }
        else //没有上报权限的人,则强制赋值上报为否
        {
            $("input[name='ISUPSAFETY']:eq(1)").prop("checked", "checked"); //否
            isupsafety = $("input[name='ISUPSAFETY']:checked").val();
            $("input[name='ISUPSAFETY']").each(function (index, ele) {
                $(this).attr("disabled", "disabled");
            });
        }

        //上报控制
        if (isupsafety == "1") {  //上报
            HiddenValid(); //不必填
        }
        else //不上报
        {
            //能直接到整改，且不上报
            if (ischange && isupsafety == "0") {
                ShowValid();//必填
            }
            else {
                HiddenValid(); //非必填
            }
            if (isupsafety == "0" && ishaveupsafety) { //有上报权限不上报
                ShowValid();//必填
            }

        }

        //是否具有指定权限
        if (isshowappoint) {
            $(".form:eq(3) tr:eq(0)").css("display", ""); //整改责任人隐藏
            //是否指定整改责任人
            if (isappoint == "1") {
                $("input[name='ISAPPOINT']:eq(0)").prop("checked", "checked"); //指定
                $(".form:eq(3) tr:eq(1)").css("display", "none"); //整改责任负责人隐藏
                $(".form:eq(3) tr:eq(2)").css("display", ""); //显示整改责任人

                $("#REFORMCHARGEDEPTNAME").removeAttr("isvalid");
                $("#REFORMCHARGEPERSONNAME").removeAttr("isvalid");

                $(".form:eq(3) tr:eq(2) td:eq(0)").html("整改责任人<span style='color:red;'>*</span>");
                $("#REFORMPEOPLE").attr("isvalid", "yes");
            }
            else {
                $("input[name='ISAPPOINT']:eq(1)").prop("checked", "checked"); // 不指定
                $(".form:eq(3) tr:eq(1)").css("display", ""); //整改责任人隐藏
                $(".form:eq(3) tr:eq(2)").css("display", "none");//

                $("#REFORMPEOPLE").removeAttr("isvalid");

                $(".form:eq(3) tr:eq(1) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");
