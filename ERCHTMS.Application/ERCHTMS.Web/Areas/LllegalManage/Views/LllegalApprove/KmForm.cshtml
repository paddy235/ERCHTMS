<script>
    var keyValue = request("keyValue"); //主键 违章信息主键
    var curUserOrg = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
    var actiontype = request("actiontype"); //操作动作
    var ischange = false; //是否能直接到整改
    var ishaveupsafety = false; //是否能上报
    var isshowappoint = false; //是否能指定整改
    var callFormId = request("callFormId");
    var ismustupsafety = false; //是否必须上报  以此判断装置性违章必须由装置部门来进行核准
    var istjsubmit = false; //是否具有同级提交
    var isendflow = false; //是否具有结束流程权限
    var ishrdl = false; //是否华润电力
    var RelevancePersonRole = "";
    //初始方法
    $(function () {
        $.SetForm({
            url: "../../LllegalManage/LllegalRegister/GetInitDataJson",
            success: function (data) {
                $("#APPROVEPERSON").val(data.User.UserName);
                $("#APPROVEPERSONID").val(data.User.UserId);
                $("#APPROVEDEPTCODE").val(data.User.DeptCode);
                $("#APPROVEDEPTNAME").val(data.User.DeptName);

                ishrdl = data.IsHrdl == "true";//是否华润电力

                var curDate = "@DateTime.Now.ToString("yyyy-MM-dd")";
                $("#APPROVEDATE").val(curDate); //当前时间
                //违章类型
                $("#LLLEGALTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.LllegalType
                });

                //违章级别
                $("#LLLEGALLEVEL").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.LllegalLevel
                });

                //流程状态
                $("#FLOWSTATE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.FlowState
                });
                //专业分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    height: '200px',
                    description: "===全部===",
                    allowSearch: false,
                    data: data.MajorClassify
                });
            }
        });

        getExaminGrid(); //考核内容
        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        if (actiontype == "view") {
            $("#btn_addend").css("display", "none");
            $("#choosePerson").attr("disabled", "disabled");
            $("#chooseOutProject").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });

            $("#btn_Submit").attr("readonly", "readonly");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("readonly", "readonly");
            });
        }


        //专业分类
        $("#MAJORCLASSIFY").change(function () {
            ControlWriteAuth();
            SetReformPeople();
        });
        //通过选择类型确定是否需要填写考核内容
        $("#LLLEGALTYPE").change(function (ele) {
            ControlWriteAuth();
        });
        //核准是否通过
        $("input[name='APPROVERESULT']").click(function () {
            ControlWriteAuth();
        });
        //是否上报点击
        $("input[name='ISUPSAFETY']").click(function () {
            ControlWriteAuth();
        });
        //是否指定整改责任人
        $("input[name='ISAPPOINT']").change(function () {
            var isappoint = $("input[name='ISAPPOINT']:checked").val();
            //指定
            if (isappoint == "1") {
                //整改责任负责人隐藏
                $("#REFORMCHARGEDEPTNAME").removeAttr("isvalid");
                $("#REFORMCHARGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(3) tr:eq(1)").css("display", "none");
      
                //整改责任单位隐藏
                $("#REFORMDEPTNAME").attr("isvalid", "yes");
                //显示整改责任人
                $("#REFORMPEOPLE").attr("isvalid", "yes");
                $(".form:eq(3) tr:eq(2)").css("display", "");

                $("#REFORMCHARGEDEPTNAME").val("");
                $("#REFORMCHARGEDEPTID").val("");
                $("#REFORMCHARGEPERSONNAME").val("");
                $("#REFORMCHARGEPERSON").val("");

            }
            else {
                //显示整改责任负责人
                $("#REFORMCHARGEDEPTNAME").attr("isvalid", "yes");
                $("#REFORMCHARGEPERSONNAME").attr("isvalid", "yes");
                $(".form:eq(3) tr:eq(1)").css("display", "");
                //整改责任单位隐藏
                $("#REFORMDEPTNAME").removeAttr("isvalid");
                //整改责任人隐藏
                $("#REFORMPEOPLE").removeAttr("isvalid");
                $(".form:eq(3) tr:eq(2)").css("display", "none");


                $("#REFORMPEOPLE").val("");
                $("#REFORMPEOPLEID").val("");
                $("#REFORMDEPTNAME").val("");
                $("#REFORMDEPTCODE").val("");
            }
        });


        //获取表单数据
        if (!!keyValue) {
            $.SetForm({
                url: "../../LllegalManage/LllegalRegister/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    //违章基本信息
                    if (null != data.baseInfo) {

                        $("#form1").formDeserialize(data.baseInfo);
                        if (!!data.baseInfo.RESEVERFIVE) {
                            $("#trReseverfive").css("display", "");
                        }
                        //存在回退数据
                        if (data.baseInfo.RESEVERFOUR == "是") {
                            $(".form:eq(0)  tr:eq(4)").css("display", ""); //回退原因
                        }

                        //如果违章人员id不为空
                        if (!!data.baseInfo.LLLEGALPERSONID) {
                            $("#LLLEGALPERSON").attr("disabled", "disabled");
                            $("#LLLEGALTEAM").attr("disabled", "disabled");
                        }
                        //外包工程
                        if (!!data.baseInfo.ENGINEERID) {
                            $("#ENGINEERNAME").attr("disabled", "disabled");
                        }

                        $("#LLLEGALTYPE").ComboBoxSetValue(data.baseInfo.LLLEGALTYPE); //违章类型
                        $("#LLLEGALLEVEL").ComboBoxSetValue(data.baseInfo.LLLEGALLEVEL);  //违章级别
                        $("#MAJORCLASSIFY").ComboBoxSetValue(data.baseInfo.MAJORCLASSIFY);  //专业分类

                        if (!!data.baseInfo.ISEXPOSURE) {
                            //是否曝光
                            if (data.baseInfo.ISEXPOSURE == "1") {
                                $("input[name='ISEXPOSURE']:eq(0)").prop("checked", "checked");  //是
                            }
                            else {
                                $("input[name='ISEXPOSURE']:eq(1)").prop("checked", "checked"); //否
                            }
                        }

                        if (!!data.baseInfo.ISUPSAFETY) {
                            //是否上报
                            if (data.baseInfo.ISUPSAFETY == "1") {
                                $("input[name='ISUPSAFETY']:eq(0)").prop("checked", "checked");  //是
                            }
                            else {
                                $("input[name='ISUPSAFETY']:eq(1)").prop("checked", "checked"); //否
                            }
                        }
                        ControlWriteAuth();
                    }

                    //违章核准  查看时可以看
                    if (null != data.approveInfo && actiontype == "view") {
                        $("#form1").formDeserialize(data.approveInfo);
                    }
                    //违章整改
                    if (null != data.reformInfo) {
                        $("#form1").formDeserialize(data.reformInfo);
                        $("#REFORMID").val(data.reformInfo.ID);

                        if (!!data.reformInfo.ISAPPOINT) {
                            //是否指定整改
                            if (data.reformInfo.ISAPPOINT == "1") {
                                $("input[name='ISAPPOINT']:eq(0)").prop("checked", "checked");
                            }
                            else {
                                $("input[name='ISAPPOINT']:eq(1)").prop("checked", "checked");
                            }
                        }
                    }

                    //违章考核、关联责任人
                    if (null != data.relevanceInfo) {
                        $('#examinGridTable').jqGrid("setGridParam", { data: data.relevanceInfo }).trigger("reloadGrid");
                    }
                    //违章验收
                    if (null != data.acceptInfo) {
                        $("#form1").formDeserialize(data.acceptInfo);
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                        ////验收人为空,则默认当前评估人   当前核准人和整改人不一致时，则赋值验收人
                        if (!data.acceptInfo.ACCEPTPEOPLEID && data.userInfo.UserId != data.reformInfo.REFORMPEOPLEID) {
                            $("#ACCEPTPEOPLE").val(data.userInfo.UserName);
                            $("#ACCEPTPEOPLEID").val(data.userInfo.UserId);
                            $("#ACCEPTDEPTNAME").val(data.userInfo.DeptName);
                            $("#ACCEPTDEPTCODE").val(data.userInfo.DeptCode);
                        }
                    }
                }
            });
        }
        uploadify(); //违章图片
    });

    //隐藏必填操作
    function HiddenValid() {
        //违章编号
        $(".form:eq(1) tr:eq(0) td:eq(0) span").remove();
        $(".form:eq(1) tr:eq(0) td:eq(1) input").removeAttr("isvalid");

        //违章级别
        $(".form:eq(1) tr:eq(1) td:eq(0) span").remove();
        $(".form:eq(1) tr:eq(1) td:eq(1) div").removeAttr("isvalid");
        //专业分类
        $(".form:eq(1) tr:eq(1) td:eq(2) span").remove();
        $(".form:eq(1) tr:eq(1) td:eq(3) div").removeAttr("isvalid");
        //违章单位
        $(".form:eq(1) tr:eq(2) td:eq(2) span").remove();
        $(".form:eq(1) tr:eq(2) td:eq(3) input").removeAttr("isvalid");

        /*整改必填验证*/

        //整改责任单位
        $(".form:eq(3) tr:eq(1) td:eq(0) span").remove();
        $(".form:eq(3) tr:eq(1) td:eq(1) input").removeAttr("isvalid");
        //整改责任单位负责人
        $(".form:eq(3) tr:eq(1) td:eq(2) span").remove();
        $(".form:eq(3) tr:eq(1) td:eq(3) input").removeAttr("isvalid");
        //整改责任单位
        $(".form:eq(3) tr:eq(2) td:eq(0) span").remove();
        $(".form:eq(3) tr:eq(2) td:eq(1) input").removeAttr("isvalid");
        //整改责任人
        $(".form:eq(3) tr:eq(2) td:eq(2) span").remove();
        $(".form:eq(3) tr:eq(2) td:eq(3) input").removeAttr("isvalid");
        //整改截止日期
        $(".form:eq(3) tr:eq(3) td:eq(0) span").remove();
        $(".form:eq(3) tr:eq(3) td:eq(1) input").removeAttr("isvalid");

        /*验收必填验证*/
        //验收人
        $(".form:eq(4) tr:eq(0) td:eq(0) span").remove();
        $(".form:eq(4) tr:eq(0) td:eq(1) input").removeAttr("isvalid");
        //验收日期
        //$(".form:eq(4) tr:eq(1) td:eq(0) span").remove();
        //$(".form:eq(4) tr:eq(1) td:eq(1) input").removeAttr("isvalid");
    }
    //显示必填操作
    function ShowValid() {
        //违章编号
        $(".form:eq(1) tr:eq(0) td:eq(0)").html("违章编号<span style='color:red;'>*</span>");
        $("#LLLEGALNUMBER").attr("isvalid", "yes");

        //违章级别
        $(".form:eq(1) tr:eq(1) td:eq(0)").html("违章级别<span style='color:red;'>*</span>");
        $("#LLLEGALLEVEL").attr("isvalid", "yes");
        //专业分类
        $(".form:eq(1) tr:eq(1) td:eq(2)").html("专业分类<span style='color:red;'>*</span>");
        $("#MAJORCLASSIFY").attr("isvalid", "yes");
        //违章单位
        $(".form:eq(1) tr:eq(2) td:eq(2)").html("违章单位<span style='color:red;'>*</span>");
        $("#LLLEGALTEAM").attr("isvalid", "yes");

        /*整改必填验证*/
        //整改责任单位
        $(".form:eq(3) tr:eq(1) td:eq(1) input").removeAttr("isvalid");
        //整改责任单位负责人
        $(".form:eq(3) tr:eq(1) td:eq(3) input").removeAttr("isvalid");
        //整改责任单位
        $(".form:eq(3) tr:eq(2) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");
        $("#REFORMDEPTNAME").attr("isvalid", "yes");
        //整改责任人
        $(".form:eq(3) tr:eq(2) td:eq(2)").html("整改责任人<span style='color:red;'>*</span>");
        $("#REFORMPEOPLE").attr("isvalid", "yes");
        //整改截止日期
        $(".form:eq(3) tr:eq(3) td:eq(0)").html("整改截止时间<span style='color:red;'>*</span>");
        $("#REFORMDEADLINE").attr("isvalid", "yes");

        /*验收必填验证*/
        //验收人
        $(".form:eq(4) tr:eq(0) td:eq(0)").html("验收人<span style='color:red;'>*</span>");
        $("#ACCEPTPEOPLE").attr("isvalid", "yes");
        //验收日期
        //$(".form:eq(4) tr:eq(1) td:eq(0)").html("验收日期<span style='color:red;'>*</span>");
        //$("#ACCEPTTIME").attr("isvalid", "yes");
    }
    //控制必填
    function ControlWriteAuth() {

        //专业分类
        var majorclassify = $("#MAJORCLASSIFY").ComboBoxGetValue();
        majorclassify = !!majorclassify ? majorclassify : "";
        //违章类型
        var lllegaltype = $("#LLLEGALTYPE").ComboBoxGetValue();
        lllegaltype = !!lllegaltype ? lllegaltype : "";
        //违章单位
        var lllegalteamcode = $("#LLLEGALTEAMCODE").val();

        var array = new Array();
        array.push({ rankname: "", workflow: "违章核准", endflow: "违章整改", mark: "厂级违章流程", submittype: "提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, businessid: keyValue, action: "ischange" });//是否能直接提交到整改
        array.push({ rankname: "", workflow: "违章核准", endflow: "制定整改计划", mark: "厂级违章流程", submittype: "制定提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, businessid: keyValue, action: "isshowappoint" }); //是否能指定整改责任人
        array.push({ rankname: "", workflow: "违章核准", endflow: "违章核准", mark: "厂级违章流程", submittype: "上报", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, businessid: keyValue, action: "ishaveupsafety" }); //是否具有上报权限
        array.push({ rankname: "", workflow: "违章核准", endflow: "违章核准", mark: "厂级违章流程", submittype: "限制上报", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, businessid: keyValue, action: "ismustupsafety" }); //是否具有必须上报权限
        array.push({ rankname: "", workflow: "违章核准", endflow: "违章核准", mark: "厂级违章流程", submittype: "同级提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, businessid: keyValue, action: "istjsubmit" });//是否具有同级提交
        array.push({ rankname: "", workflow: "违章核准", endflow: "流程结束", mark: "厂级违章流程", submittype: "提交", arg1: majorclassify, arg2: lllegaltype, arg4: lllegalteamcode, businessid: keyValue, action: "isendflow" }); //是否具有结束流程的权限
        $.ajax({
            data: { queryJson: JSON.stringify(array) },
            type: "post",
            url: "../../LllegalManage/LllegalRegister/GetCurUserWfAuthByCondition",
            success: function (data) {
                if (!!data) {
                    var result = eval("(" + data + ")");
                    $(result).each(function (i, ele) {
                        var key = ele.key;
                        switch (key) {
                            case "ischange":
                                ischange = ele.value;
                                break;
                            case "isshowappoint":
                                isshowappoint = ele.value;
                                break;
                            case "ishaveupsafety":
                                ishaveupsafety = ele.value;
                                break;
                            case "ismustupsafety":
                                ismustupsafety = ele.value;
                                break;
                            case "istjsubmit":
                                istjsubmit = ele.value;
                                break;
                            case "isendflow":
                                isendflow = ele.value;
                                break;
                        }
                    });
                    IsActionAuth();
                }
            }
        });
    }

    var IsActionAuth = function () {
        //是否上报
        var isupsafety = $("input[name='ISUPSAFETY']:checked").val();
        //是否指定整改责任人
        var isappoint = $("input[name='ISAPPOINT']:checked").val();

        //先判断是否有上报权限
        if (ishaveupsafety) {  //具有上报权限，则启用上报按钮
            $("input[name='ISUPSAFETY']").each(function (index, ele) {
                if (actiontype != "view") {
                    $(this).removeAttr("disabled");
                }
            });
        }
        else //没有上报权限的人,则强制赋值上报为否,并且不启用是否上报
        {
            $("input[name='ISUPSAFETY']:eq(1)").prop("checked", "checked"); //否
            isupsafety = $("input[name='ISUPSAFETY']:checked").val();
            $("input[name='ISUPSAFETY']").each(function (index, ele) {
                $(this).attr("disabled", "disabled");
            });
        }
        //当前"是否上报"值为"是"的时候,所有相关控件不必填
        if (isupsafety == "1") {   //上报(存在上报权限)
            HiddenValid(); //不必填
        }
        else //不上报情况下
        {
   
            if (ischange && isupsafety == "0") {  //能直接到整改，且"是否上报"为不上报时,所有相关控件必填，反之则不必填
                ShowValid();//必填
            }
            else {
                HiddenValid(); //非必填
            }
            if (isupsafety == "0" && ishaveupsafety) {  //有上报权限，但是不上报,所有相关控件必填
                ShowValid();//必填
            }
            if (isshowappoint) { //是否具有指定权限操作功能
                $(".form:eq(3) tr:eq(0)").css("display", "");
                if (isappoint == "1") {  //是否指定整改责任人
                    $("input[name='ISAPPOINT']:eq(0)").prop("checked", "checked"); //指定情况下，整改责任人显示，整改责任负责人隐藏
                    $(".form:eq(3) tr:eq(1)").css("display", "none");//整改责任负责人隐藏
                    $(".form:eq(3) tr:eq(2)").css("display", "");  //显示整改责任人
                    $("#REFORMCHARGEDEPTNAME").removeAttr("isvalid");
                    $("#REFORMCHARGEPERSONNAME").removeAttr("isvalid");
                    $("#REFORMPEOPLE").attr("isvalid", "yes");
                    $("#REFORMDEPTNAME").attr("isvalid", "yes");
                }
                else {
                    $("input[name='ISAPPOINT']:eq(1)").prop("checked", "checked"); // 不指定
                    $(".form:eq(3) tr:eq(1)").css("display", ""); //显示整改责任负责人
                    $(".form:eq(3) tr:eq(2)").css("display", "none");   //隐藏整改责任人
                    $("#REFORMPEOPLE").removeAttr("isvalid");
                    $("#REFORMDEPTNAME").removeAttr("isvalid");
                    $(".form:eq(3) tr:eq(1) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");
                    $(".form:eq(3) tr:eq(1) td:eq(2)").html("<label style=\"white-space:pre-wrap;\">整改责任单位负责人</label><span style='color:red;'>*</span>");
                    $("#REFORMCHARGEDEPTNAME").attr("isvalid", "yes");
                    $("#REFORMCHARGEPERSONNAME").attr("isvalid", "yes");
                }
            }
            else {  //无指定权限，默认 整改责任人显示，整改责任负责人隐藏
                $("#REFORMCHARGEDEPTNAME").removeAttr("isvalid");
                $("#REFORMCHARGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(3) tr:eq(0)").css("display", "none");
                $(".form:eq(3) tr:eq(1)").css("display", "none");
                $(".form:eq(3) tr:eq(2)").css("display", "");
            }
        }
        //是否具有同级提交，即专工到专工(所有控件必填)
        if (istjsubmit) {
            HiddenValid(); //不必填
        }
        //限制上报，则表示当前条件下，必须执行上报过程  以此判断装置性违章必须由装置部门来进行核准
        if (ismustupsafety) {
            $("input[name='ISUPSAFETY']").attr("disabled", "disabled");
            $("input[name='ISUPSAFETY']:eq(0)").prop("checked", "checked");  //上报必填
            HiddenValid(); //不必填
        }

        //核准结果
        var approveresult = $("input[name='APPROVERESULT']:checked").val();//核准结果
        if (approveresult == "1") {  ////核准通过
            $("#APPROVEREASON").removeAttr("isvalid");
            $(".form:eq(0) tr:eq(3) td:eq(0)").html("核准意见"); //核准意见
            $("#APPROVEREASON").attr("errormsg", "核准意见");
        }
        else {
            HiddenValid();    //核准不通过
            $(".form:eq(0) tr:eq(3) td:eq(0)").html("不通过原因<span style=\"color:red;\">*</span>"); //验收日期
            $("#APPROVEREASON").attr("isvalid", "yes");
            $("#APPROVEREASON").attr("errormsg", "不通过原因");
            $("input[name='ISUPSAFETY']:eq(1)").prop("checked", "checked"); //核准不通过是，将上报赋值为否
        }

        //华润标记
        if (ishrdl) {
            //违章级别
            $(".form:eq(1) tr:eq(1) td:eq(0)").html("违章级别<span style='color:red;'>*</span>");
