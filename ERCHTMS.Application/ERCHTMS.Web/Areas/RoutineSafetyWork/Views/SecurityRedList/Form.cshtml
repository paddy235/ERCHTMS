@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/scripts/plugins/ckeditor/ckeditor.js"></script>
<script src="~/Content/scripts/plugins/simditor/js/module.min.js"></script>
<script src="~/Content/scripts/plugins/simditor/js/uploader.min.js"></script>
<script src="~/Content/scripts/plugins/simditor/js/hotkeys.min.js"></script>
<link href="~/Content/scripts/plugins/cxColor/css/jquery.cxcolor.css" rel="stylesheet" />
<script src="~/Content/scripts/plugins/cxColor/js/jquery.cxcolor.js"></script>
<script type="text/javascript" src="~/content/scripts/business/common.js"></script>
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>
<script>
    var keyValue = request('keyValue');
    var actiontype = request('actiontype');
    var state = request('state');
    var editor = null;
    $(function () {
       // CKEDITOR.replace('Content');
        initControl();
    });
    //初始化控件
    function initControl() {
        if (state == "1") {
            //黑榜
            $("#titleTag").html("安全黑榜标题<font face='宋体'>*</font>");
        } 
        $("#State").val(state);
        if (actiontype == "view") {
            $("input").attr("readonly", "readonly");
            $(".form-button").css("display", "none");
            $("#div1").css("display", "none");
        }
        keyValue = keyValue.length == 0 ? "@Guid.NewGuid().ToString()" : keyValue;
        file_upload.init({
            keyValue: keyValue, fileNumLimit: 5, extensions: 'jpg,gif,bmp,png', isImage: true, el: '#uploader'
        });
        var isDel = actiontype == "view" ? false : true;
        file_upload.bindFiles(isDel, true, keyValue, "uploader", true);
        //获取表单
        if (!!keyValue) {
            //editor = CKEDITOR.instances.Content;
            $.SetForm({
                url: "../../RoutineSafetyWork/SecurityRedList/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").formDeserialize(data);
                    //editor.setData(data.Content);
                }
            })
        }
        //保存
        $("#btn_Save").click(function () {
            $("#IsSend").val("1");
            AcceptClick();
        });
        //发送
        $("#btn_Submit").click(function () {
            $("#IsSend").val("0");
            AcceptClick();
        });
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        //editor = CKEDITOR.instances.Content;
        //if (editor.getData().length <= 0) {
        //    dialogMsg('请填写内容！', 0);
        //    return false;
        //}
        //var postData = {
        //    Title: $("#Title").val(),
        //    IsSend: $("#IsSend").val(),
        //    State: $("#State").val(),
        //    Publisher: $("#Publisher").val(),
        //    PublisherId: $("#PublisherId").val(),
        //    PublisherDept: $("#PublisherDept").val(),
        //    PublisherDeptId: $("#PublisherDeptId").val(),
        //    PublisherDeptCode: $("#PublisherDeptCode").val(),
        //    ReleaseTime: $("#ReleaseTime").val(),
        //    Content: $("#Content").val()
        //    //Content: editor.getData()
        //}
        var postData = $("#form1").formSerialize(keyValue);
        $.SaveForm({
            url: "../../RoutineSafetyWork/SecurityRedList/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <div id="div1" style="margin-top: 50px;"></div>
    <table class="form">
        <tr>
            <td id="titleTag" class="formTitle">安全红榜标题<font face="宋体">*</font></td>
            <td class="formValue" colspan="3">
                <input id="Title" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
                <input id="IsSend" type="hidden" />
                <input id="State" type="hidden" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">所属单位<font face="宋体">*</font></td>
            <td class="formValue" colspan="3">
                <input id="PublisherDept" type="text" class="form-control" readonly onclick="selectDept('', 0, 2, '选择所属单位', document.body, 'PublisherDept,PublisherDeptCode,PublisherDeptId');" isvalid="yes" checkexpession="NotNull" />
                <input id="PublisherDeptId" type="hidden" />
                <input id="PublisherDeptCode" type="hidden" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">发布时间<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="ReleaseTime" type="text" class="form-control input-wdatepicker" value="@DateTime.Now.ToString("yyyy-MM-dd")" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" isvalid="yes" checkexpession="NotNull" />
            </td>
            <td class="formTitle">发布人</td>
            <td class="formValue">
                <input id="Publisher" type="text" class="form-control" readonly value="@ERCHTMS.Code.OperatorProvider.Provider.Current().UserName" />
                <input id="PublisherId" type="hidden" value="@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">内容<font face="宋体">*</font></td>
            <td class="formValue" colspan="3">
                <textarea id="Content" class="form-control" rows="8" isvalid="yes" checkexpession="NotNull"></textarea>
            </td>
        </tr>
        <tr>
            <td class="formTitle">图片</td>
            <td class="formValue">
                <div id="uploader" class="uploader" style="border:1px solid #ccc; margin-top:10px; min-height:200px; margin-bottom:10px;">
                    <div class="queueList">
                        <div id="dndArea" class="placeholder">
                            <div class="filePicker" style="margin-left:25px; margin-top:10px;"></div>
                        </div>
                    </div>
                    <div class="statusBar" style="display:none;">
                        <div class="progress">
                            <span class="text">0%</span>
                            <span class="percentage"></span>
                        </div>
                        <div class="info"></div>
                    </div>
                </div>

            </td>
        </tr>
    </table>
</div>
<div class="form-button" style=" top: 40px; text-align: left; padding-left: 20px; position: fixed; bottom: auto; z-index: 1000;">
    <div style="float:left;">
        <a id="btn_Save" class="btn btn-primary" style="background-color: #2e99d4; border-color: #2e99d4; "><i class="fa fa-check"></i>&nbsp;保&nbsp;&nbsp;存</a>
        &nbsp; &nbsp;
        <a id="btn_Submit" class="btn btn-primary" style="background-color: #2e99d4; border-color: #2e99d4; "><i class="fa fa-mail-forward"></i>&nbsp;发&nbsp;&nbsp;送</a>
        &nbsp; &nbsp;
    </div>
</div>