@{;
  ViewBag.Title = "表单页面";
  Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    var state = request('state');
    $(function () {
        if (state == 0) {
            //获取表单
            if (!!keyValue) {
                $.SetForm({
                    url: "../../RoutineSafetyWork/SecurityDynamics/GetFormJson",
                    param: { keyValue: keyValue },
                    success: function (data) {
                        $("#Title").html(data.Title);
                        $("#Content").html(data.Content);
                        var html = "发布时间：" + formatDate(data.ReleaseTime, 'yyyy-MM-dd') + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;发布人：" + data.Publisher;
                        $("#publisher").html(html);
                    }
                })
            }
        } else if (state == 1) {
            //获取表单
            if (!!keyValue) {
                $.SetForm({
                    url: "../../RoutineSafetyWork/SecurityRedList/GetFormJson",
                    param: { keyValue: keyValue },
                    success: function (data) {
                        $("#Title").html(data.Title);
                        $("#Content").html(data.Content);
                        var html = "发布时间：" + formatDate(data.ReleaseTime, 'yyyy-MM-dd') + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;发布人：" + data.Publisher;
                        $("#publisher").html(html);
                    }
                })
            }
        }
       
    });
</script>

<div style="margin-top: 20px;">
    <div style="text-align:center">
        <h1 id="Title"></h1>
        <span id="publisher">
           
        </span>
    </div>
    <div id="Content" style="margin-top: 20px;margin-left:10px;margin-right:10px; font-size: 12pt !important; ">

    </div>
</div>
