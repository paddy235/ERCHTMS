            width: "500px",
            height: "450px",
            callBack: function (iframeId) {
                top.document.getElementById(iframeId).contentWindow.AcceptClick();
            },
            cancel: function (index) {
                if (isImport) {
                    isImport = false;
                    GetTree();
                    $("#gridTable").jqGrid('setGridParam', {
                        postData: { keyWord: "", accType: "", grade: "", areaid: "" }
                    }).trigger('reloadGrid');
                }

            }
        });
    }
