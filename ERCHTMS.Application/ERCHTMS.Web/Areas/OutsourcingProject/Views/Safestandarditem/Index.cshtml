    //删除标准
    function del(id) {
        var keyValue = id;
        if (keyValue) {
            $.RemoveForm({
                url: "../../OutsourcingProject/Safestandarditem/RemoveStandardForm",
                param: { keyValue: keyValue },
                msg:"确定删除吗?相关联的数据将同步删除，无法恢复！",
                success: function (data) {
                   // GetTree(id);
                    $('#gridTable').jqGrid('setGridParam', {
                        postData: { queryJson: JSON.stringify({ keyWord: $("#txtKeyword").val(), enCode: enCode }) }, page: 1
                    }).trigger('reloadGrid');
                    var node = $("span[data-value='" + id + "']");
                    if (node!=null && node!=undefined) {
                        node.parent().parent().remove();
                    }
                }
            })
        } else {
            dialogMsg('请选择需要删除的数据！', 0);
        }
    }
    //删除标准项目
    function delItem(id) {
            $.RemoveForm({
                url: "../../OutsourcingProject/Safestandarditem/RemoveForm",
                param: { keyValue: id },
                success: function (data) {
                    $.currentIframe().window.$("#gridTable").trigger('reloadGrid');
                }
            })
    }
    //导入
