@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link rel="stylesheet" href="~/content/scripts/plugins/bootstrap-select/bootstrap-select.min.css" type="text/css" />
<script type="text/javascript" src="~/content/scripts/plugins/bootstrap-select/bootstrap-select.min.js"></script>
<script>
    var keyValue = request('keyValue');
    var pName = request('parentName');
    var pId = request('parentId');
    var code = request('code');
    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../OutsourcingProject/Safestandarditem/GetSafeStandardFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").formDeserialize(data);

                }
            })
        } else {
            keyValue = newGuid();
        }
        $("#ParentName").val(pName);
    }
    //保存表单
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
        postData["EnCode"] = code;
        postData["ParentId"] = pId;
        postData["Name"] = $("#Name").val();
        $.SaveForm({
            url: "../../OutsourcingProject/Safestandarditem/SaveStandardForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().window.GetTree(keyValue);
            }
        })
    }

</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr style="display:none;">
            <td class="formTitle">上级节点<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="text" id="ParentName" class="form-control" isvalid="yes" checkexpession="NotNull" readonly="readonly" disabled="disabled" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">标准名称<font face="宋体">*</font></td>
            <td class="formValue">
                <input type="text" id="NAME" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
        </tr>
    </table>
</div>