                                                    <div style="float: left; width: 45%;">
                                                        <input id="DismentleEndDate" type="text" value="" class="form-control input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd', minDate: '#F{$dp.$D(\'DismentleStartDate\')}' })">
