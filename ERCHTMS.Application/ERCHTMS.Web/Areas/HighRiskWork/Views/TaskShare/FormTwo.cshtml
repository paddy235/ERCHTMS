    $(function () {
        initControl();
        //加载作业信息
        GetWorkInfo();
        //加载班组信息
        GetTeamInfo();
        //加载人员信息
        GetStaffInfo();
    });
    //初始化控件
    function initControl() {
        if (!(currolenames.indexOf("公司") >= 0 || currolenames.indexOf("厂级") >= 0)) {
            $("#SuperviseDeptName").attr("disabled", "disabled");
            $("#SuperviseDeptName").val(curdeptname);
            $("#SuperviseDeptId").val(curdeptid);
            $("#SuperviseDeptCode").val(curdeptcode);
        }

        if (currolenames.indexOf("班组") >= 0) {
            teamid = curdeptid;
        }
        if (currolenames.indexOf("公司管理员") >= 0) {
            ismanage = "1";
        }
        //任务类型
        $("#TaskType").val(tasktype);

        //是否自动推送
        isstart = $("#isstart").val();
        //if (isstart == "1")//启动自动推送
        //{
        //    $("#btnAddStaff").attr("style", "display:none");
        //}

        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../HighRiskWork/TaskShare/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").formDeserialize(data);
                }
            })
        }
        else {
            keyValue = keyValue.length == 0 ? "@Guid.NewGuid().ToString()" : keyValue;
        }

        switch (mode) {
            case "view":
                $("#group_btn").attr("style", "display:none");
                $("#btnAddWork").attr("style", "display:none");
                $("#form1 input,textarea,select, .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                    $(this).attr("disabled", "disabled");
                });
                $("#btnAddTeam").attr("style", "display:none");
                $("#btnAddStaff").attr("style", "display:none");
                flagwork = true;
                flagteam = true;
                flagstaff = true;
                break;
            case "add":
                $("#btnAddStaff").attr("style", "display:none");
                flagstaff = true;
                break;
            case "edit":
                $("#btnAddStaff").attr("style", "display:none");
                flagstaff = true;
                break;
            case "send":
                $("#form1 input,textarea,select, .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                    $(this).attr("disabled", "disabled");
                });
                var flowstep = $("#FlowStep").val();
                if (flowstep == "1")//部门分配中
                {
                    $("#btnAddStaff").attr("style", "display:none");
                    flagstaff = true;
                }
                else if (flowstep == "2")//班组分配中
                {
                    flagwork = true;
                    flagteam = true;
                    $("#btnAddWork").attr("style", "display:none");
                    $("#btnAddTeam").attr("style", "display:none");
                }
                break;
            default:
                break;
        }

        //保存
        $("#btn_Save").click(function () {
            $("#IsSubmit").val("0");
            AcceptClick();
        });

        //提交
        $("#btn_Submit").click(function () {
            $("#IsSubmit").val("1");
            AcceptClick();
        });
    };

    //选择单位
    function selectCompany() {
        /**
            旁站监督单位不包含班组，专业以及承包商
         **/
        selectDept('', 0, 16, '选择旁站监督单位', document.body, 'SuperviseDeptName,SuperviseDeptCode,SuperviseDeptId', "1", function () {
            //清空作业信息
            clearworkinfo();
            //清空班组信息
            clearteaminfo();
