    //新增
    function add() {
        dialogOpen({
            id: 'Form',
            title: '添加安全工器具基本信息',
            url: '/ToolEquipmentManage/Toolequipment/Form?ToolType=' + "2",
            width: ($(top.window).width() - 100) + "px",
            height: ($(top.window).height() - 100) + "px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function edit(obj) {
        var keyValue = obj;
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑安全工器具基本信息',
                url: '/ToolEquipmentManage/Toolequipment/Form?actiontype=edit&keyValue=' + keyValue + '&ToolType=' +  "2",
                width: ($(top.window).width() - 100) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function del(obj) {
        var keyValue = obj;
        if (keyValue) {
            $.RemoveForm({
                url: '../../ToolEquipmentManage/Toolequipment/RemoveForm',
                param: { keyValue: keyValue },
                success: function(data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            });
        } else {
            dialogMsg('请选择需要删除的安全工器具基本信息！', 0);
        }
    }
    //查看
    function show(id) {
        var keyValue = id;
        if (checkedRow(keyValue)) {
            var dlg = dialogOpen({
                id: "Form",
                title: '查看安全工器具信息',
                url: '/ToolEquipmentManage/Toolequipment/Form?action=show&actiontype=view&keyValue=' + keyValue + '&ToolType=' + "2",
                //content: top.contentPath + '/SafeReward/SafeReward/Form?action=show&keyValue=' + keyValue,
                width: ($(top.window).width() - 100) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: ["关闭"],
                callBack: function (iframeId) {
                    top.layer.close(dlg);
                }
            });
        }
    }
    //查看二维码
    function GetQrCode(id, equName, equNo) {
        id = id + "|安全工器具";
        var url = "../../Utility/BuilderImage?keyValue=" + id;
        $("#imgEquQrCode").attr("src", url);
        var equMaxLen = 40;
        var equ = $("#divEquName");
        equ.attr("title", equName);
        equ.text(equName.length > equMaxLen ? equName.substring(0, equMaxLen) + "..." : equName);
        $("#divEquNo").text(equNo);
        $("#QrCodeModal").modal('show');
        $("#aDow").attr("href", "../../Utility/DownloadQrImage10?keyValue=" + id + "&equipName=" + encodeURIComponent(equName) + "&equipNo=" + encodeURIComponent(equNo));
    }
    //导出
    function exportData() {
        var queryJson = {
            ToolType: "2",
            Etype: $("#EquipmentType").attr('data-value'),
            code: _parentId,
            isOrg: _isOrg,
            startTime: request("st"),
            endTime: request("et")
        }
        location.href = "../../ToolEquipmentManage/Toolequipment/Export?queryJson=" + JSON.stringify(queryJson) + "&tooltype=" + "2";
    }
    //批量生成二维码
    function builderImg() {
        var ids = $("#gridTable").jqGridRowValue("id");
        if (ids.length == 0) {
            dialogMsg("请选择至少一条记录！", 0);
            return false;
        } else {
            idx = dialogOpen({
                id: "Builder",
                title: '生成二维码',
                url: '/ToolEquipmentManage/Toolequipment/BuilderImage?equiptype=安全工器具',
                width: "800px",
                height: ($(window).height() - 80) + "px",
                btn: ["导出", "关闭"],
                callBack: function (iframeId) {
                    top.document.getElementById(iframeId).contentWindow.AcceptClick();
                }
            });
        }
    }
    function reset()  {
        $("#EquipmentType").attr("data-text", "==请选择==");
        $("#EquipmentType").attr("data-value", "");
        $("#EquipmentType div:eq(0)").text("==请选择==");
        $("#queryCondition .dropdown-text").html("==请选择==").attr('data-value', "");
        $("#txt_Keyword").val("");
        $('#btn_Search').trigger("click");
