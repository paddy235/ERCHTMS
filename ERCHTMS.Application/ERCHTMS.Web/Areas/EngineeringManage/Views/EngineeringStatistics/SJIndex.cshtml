    function query() {
        year = $("#StartDate").val();
        if (state == 1) {
            $("#btntj").trigger("click");
            $("#gridTable1").jqGrid('setGridParam', {
                postData: { year: year }, page: 1
            }).trigger('reloadGrid');
        }
        if (state == 2) {
            LoadDataQS();
            $("#gridTable").jqGrid('setGridParam', {
                postData: { year: year }, page: 1
            }).trigger('reloadGrid');
        }
        if (state == 3) {
            LoadDataDB();
            $("#gridTable2").jqGrid('setGridParam', {
                postData: { year: year }, page: 1
            }).trigger('reloadGrid');
        }
    }

    function reset() {
        //时间
        $("#StartDate").val("@DateTime.Now.ToString("yyyy")");
        query();
