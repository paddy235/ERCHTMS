            id: 'speEquIndex',
            title: '危大工程列表',
            url: url,
            btns: 1,
            btn: ["关闭"],
            width: ($(top.window).width() - 50) + "px",
            height: ($(top.window).height() - 50) + "px",
            callBack: function (iframeId) {
                top.layer.close(idx);
