<script>
    var keyValue = request('keyValue');
    var action = request('action');
    var InfoId = request('InfoId');
    var LaborList;
    var isNew = 0; //默认0为新增物资 1为库里已有物资
    var lastrow;
    var lastcell;
    var selData = "";
    var sizelist;
    var no = 0;
    $(function () {
        isNew = 1;
        GetGrid();

    });






    function RefeshGrid() {
        $('#gridTable').jqGrid('setGridParam', {
            postData: { deptId: $("#DeptId").attr('data-value'), postId: $("#PostId").attr('data-value'), type: $("#Type").val() }
        }).trigger('reloadGrid');

    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        var url;
        var data;

        url = "../../LaborProtectionManage/Laborissuedetail/GetIssueList";
        data = { InfoId: InfoId, keyValue: keyValue }

        $gridTable.jqGrid({
            autowidth: true,
            height: 300,
            url: url,
            postData: data,
            datatype: "json",
            colModel: [
               { label: '主键', name: 'ID', hidden: true },
                {
                    label: '序号', name: 'infonum', width: 50, align: 'center'
                    , formatter: function (cellvalue, options, rowObject) {
                        no++;
                        return no;
                    }
                },
                 {
                     label: '操作',
                     name: 'Oper',
                     width: 160,
                     align: 'center',
                     sortable: false,
                     formatter: function (cellvalue, options, rowObject) {
                         var html = "<a href=\"javascript:See('" + rowObject.ID + "')\" title=\"查看\">查看详情</a>";
                         return html;
                     }
                 },
                 {
                     label: '名称',
                     name: 'Name',
                     index: 'Name',
                     width: 200,
                     align: 'center'
                 },

                 {
                     label: '型号',
                     name: 'Model',
                     index: 'Model',
                     width: 200,
                     align: 'center'
                 },
                 {
                     label: '发放单位',
                     name: 'OrgName',
                     index: 'OrgName',
                     width: 200,
                     align: 'center'
                 },
                 {
                     label: '发放部门',
                     name: 'DeptName',
                     index: 'DeptName',
                     width: 200,
                     align: 'center'
                 },
                 {
                     label: '发放岗位',
                     name: 'PostName',
                     index: 'PostName',
                     width: 200,
                     align: 'center'
                 }
                //,
                // {
                //     label: '发放人数',
                //     name: 'usercount',
                //     index: 'usercount',
                //     width: 200,
                //     align: 'center'
                // },
                // { label: '发放数量/人', name: 'percount', editable: true, align: 'center', edittype: "text" },
                // {
                //     label: '发放总数',
                //     name: 'count',
                //     index: 'count',
                //     width: 200,
                //     align: 'center'
                // }

            ],
            cellEdit: true,
            cellsubmit: 'clientArray',
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            beforeEditCell: function (rowid, cellname, v, iRow, iCol) {
                //点击保存的时候恢复原始状态，去掉编辑列
                lastcell = iCol;
                lastrow = iRow;
                //var rowdata = $('#gridTable').jqGrid('getRowData');
                //var num = 0;
                //for (var i = 0; i < rowdata.length; i++) {
                //    rowdata[i].count = rowdata[i].usercount * rowdata[i].percount;
                //}
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);

            }
        });
    }

    //查看
    function See(id) {
       var dig= dialogOpen({
            id: 'SeeForm',
            title: '劳动防护发放记录详情',
            url: '/LaborProtectionManage/Laborissuedetail/Form?action=show&keyValue=' + id,
            width: '800px',
            height: '900px',
            btn: ["关闭"],
            callBack: function(iframeId) {
                top.layer.close(dig);

            }
        });

    }

    
</script>
<style>
    .form .formTitle {
        width: 30%;
    }

    .form .formValue {
        width: 70%;
    }
</style>

<div style="margin: 10px;">

    <div class="panel panel-default">
        <div class="panel-heading">
            <strong>&nbsp;&nbsp;基础信息</strong>
            <span class="tools pull-right">
                <a class="fa fa-chevron-down" title="展开/收起"></a>
            </span>
        </div>
        <div class="panel-body">
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            <strong>&nbsp;&nbsp;操作信息</strong>
            <span class="tools pull-right">
                <a class="fa fa-chevron-down" title="展开/收起"></a>
            </span>
        </div>
        <div class="panel-body">
            <table class="form">

                <tr>
                    <td class="formTitle">操作人</td>
                    <td class="formValue">
                        <input id="LaborOperationUserName" value="@OperatorProvider.Provider.Current().UserName" type="text" readonly="readonly" class="form-control" />
                    </td>
                    <td class="formTitle">操作时间</td>
                    <td class="formValue">
                        <input id="LaborOperationTime" type="text" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly="readonly" class="form-control" />
                    </td>
                </tr>
            </table>

        </div>
    </div>
</div>
