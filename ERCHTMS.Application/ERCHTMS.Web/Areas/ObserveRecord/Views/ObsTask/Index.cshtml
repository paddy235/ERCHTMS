                    label: '观察人员', name: 'obsperson', index: 'obsperson', width: 200, align: 'center', sortable: false
                },
                {
                    label: '计划观察月份', name: 'obsmonth', index: 'obsmonth', width: 180, align: 'center', sortable: false
                },
