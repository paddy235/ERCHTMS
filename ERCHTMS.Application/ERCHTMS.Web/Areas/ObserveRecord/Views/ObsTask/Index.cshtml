                {
                    label: '计划年度', name: 'planyear', index: 't.planyear', width: 180, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue != null) {
                            return "<div id='" + rowObject.planyear + rowObject.tid + "'>" + cellvalue + "</div>";
                        } else {
