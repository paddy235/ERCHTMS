@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<link rel="stylesheet" href="~/content/scripts/plugins/bootstrap-select/bootstrap-select.min.css" type="text/css" />
<script type="text/javascript" src="~/content/scripts/plugins/bootstrap-select/bootstrap-select.min.js"></script>
<script>
    var _parentId = "";
    var _isOrg = "";
    var currUserId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId";
    var roleName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName";//当前用户角色
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();

    });
    //初始化页面
    function InitialPage() {
        $('#layout').layout({
            applyDemoStyles: false,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 50);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载组织机构树
    function GetTree() {
        var json;
        if (roleName.indexOf("省级") >= 0) {
            json = JSON.stringify(
             {
                 SelectMode: 0,
                 Mode: 5
             }
           );
        } else {
            json = JSON.stringify(
                        {
                            SelectMode: 0,
                            Mode: 0
                        }
                      );
        }
        var item = {
            height: $(window).height() - 50,
            url: "../../BaseManage/Department/GetDepartTreeJson?json=" + json,
            onnodeclick: function (item) {
                _parentId = item.value;
                _isOrg = item.Nature;
                $('#btn_Search').trigger("click");
            }
        };
        $("#itemTree").treeview(item);
        if ($("#itemTree").html().length == 0) {
            $(".ui-layout-west").hide();
            $('.ui-layout-center').css({ "padding-left": "5px" });
            $('#gridTable').setGridWidth(($('.gridPanel').width()));
            $("#gridTable").setGridHeight($(window).height() - 200);
        } else {
            $('#layout').layout({
                applyDemoStyles: false,
                onresize: function () {
                    $(window).resize()
                }
            });
        }
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../Observerecord/ObserveTaskrecord/GetPageListJson",
            datatype: "json",
            colModel: [
                 {label: 'id', name: 'id', hidden: true},
                 {
                     label: '操作', name: 'Oper', width: 150, align: 'center', sortable: false,
                     formatter: function (cellvalue, options, rowObject) {
                         var html = "<a href=javascript:btn_show('" + rowObject.id + "')  title='查看'><i class='fa fa-eye'></i></a>";
                         if (rowObject.createuserid == currUserId && rowObject.iscommit == "0") {
                             html += "<a href=javascript:btn_edit('" + rowObject.id + "')  title='修改'><i class='fa fa-pencil-square-o'></i></a>";
                             html += "<a href=javascript:btn_delete('" + rowObject.id + "')  title='删除'><i class='fa fa-trash-o'></i></a>";
                         }
                         return html;
                     }
                 },
                { label: 'createuserorgcode', name: 'createuserorgcode', hidden: true },
                { label: 'createuserdeptcode', name: 'createuserdeptcode', hidden: true },
                { label: 'createuserid', name: 'createuserid', hidden: true },
                { label: '作业名称', name: 'workname', index: 'workname', width: 180, align: 'center', sortable: true },
                { label: '登记部门', name: 'createuserdept', index: 'createuserdept', width: 180, align: 'center', sortable: true },
                { label: '作业部门', name: 'workunit', index: 'workunit', width: 150, align: 'center', sortable: false },
                { label: '作业人员', name: 'workpeople', index: 'workpeople', width: 240, align: 'center', sortable: false },
                { label: '作业人员Id', name: 'workpeopleid', index: 'workpeopleid', width: 100, align: 'center', sortable: false, hidden: true },
                { label: '作业部门Id', name: 'workunitid', index: 'workunitid', width: 100, align: 'left', sortable: false, hidden: true },
                { label: '作业区域', name: 'workarea', index: 'workarea', width: 120, align: 'center', sortable: false },
                { label: '作业区域Id', name: 'workareaid', index: 'workareaid', width: 100, align: 'center', sortable: false, hidden: true },
                { label: '观察起始时间', name: 'obsstarttime', index: 'obsstarttime', width: 150, align: 'center', sortable: true, formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' } },
                { label: '观察结束时间', name: 'obsendtime', index: 'obsendtime', width: 150, align: 'center', sortable: true, formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' } },
                { label: '观察人员', name: 'obsperson', index: 'obsperson', width: 180, align: 'center', sortable: false },
                { label: '观察人员Id', name: 'obspersonid', index: 'obspersonid', width: 100, align: 'center', sortable: false, hidden: true }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'createdate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            }

        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                txt_Keyword: $.trim($("#txt_Keyword").val()),
                starttime: $("#ObsStartTime").val(),
                endtime: $("#ObsEndTime").val(),
                deptcode: _parentId
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
    }
    //查看
    function btn_show(id) {
        var keyValue = id;
        var dlg = dialogOpen({
            id: 'Form',
            title: '查看观察记录表',
            url: '/Observerecord/ObserveTaskrecord/Form?keyValue=' + keyValue + '&mode=view',
            width: ($(top.window).width() - 100) + "px",
            height: ($(top.window).height() - 100) + "px",
            btn: ["关闭"],
            callBack: function (iframeId) {
                top.layer.close(dlg);
            }
        });
    }
    //新增
    function btn_add() {
        var dlg = dialogOpen({
            id: 'obsForm',
            title: '添加观察记录表',
            url: '/Observerecord/ObserveTaskrecord/Form?mode=add',
            width: ($(top.window).width() - 100) + "px",
            height: ($(top.window).height() - 100) + "px",
            btn: null,
            callBack: function (iframeId) {
                top.layer.close(dlg);
            }
        });
    }
    //编辑
    function btn_edit(id) {
        var keyValue = id;
        if (checkedRow(keyValue)) {
            var dlg = dialogOpen({
                id: 'obsForm',
                title: '编辑观察记录表',
                url: '/Observerecord/ObserveTaskrecord/Form?keyValue=' + keyValue + '&mode=edit',
                width: ($(top.window).width() - 100) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: null,
                callBack: function (iframeId) {
                    top.layer.close(dlg);
                }
            })
        }
    }
    //删除
    function btn_delete(id) {
        var keyValue = id;
        if (keyValue) {
            $.RemoveForm({
                url: '../../Observerecord/ObserveTaskrecord/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的观察记录表！', 0);
        }
    }
</script>
<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">
                <div class="col-md-10">
                    组织机构
                </div>
                <div class="col-md-2 text-right" style="padding-right:8px;">
                    <i class="fa fa-arrow-left" onclick="setBar(this)" style="cursor:pointer;" title="展开/收起"></i>
                </div>
            </div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">观察记录列表</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            <td>
                                <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                            </td>
                            <td>&nbsp;&nbsp;&nbsp;观察起始时间</td>
                            <td>
                                <input id="ObsStartTime" type="text" class="form-control input-datepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" />
                            </td>
                            <td>&nbsp;&nbsp;&nbsp;观察结束时间</td>
                            <td>
                                <input id="ObsEndTime" type="text" class="form-control input-datepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" />
                            </td>
                            <td style="padding-left: 5px;">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                            </td>

                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>刷新</a>
                    </div>
                    <script>$('.toolbar').authorizeButton()</script>
                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>