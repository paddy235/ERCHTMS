    //获取历史验收信息
    function GetHistoryAccetp() {
        var keyCode = $("#HIDCODE").val();
        dialogOpen({
            id: 'HistoryForm',
            title: '隐患验收信息',
            url: '/HiddenTroubleManage/HTAcceptInfo/DetailList?keyCode=' + keyCode,
            width: ($(top.window).width() - 200) + "px",
            height: ($(top.window).height() - 200) + "px",
            btn: null
        });
