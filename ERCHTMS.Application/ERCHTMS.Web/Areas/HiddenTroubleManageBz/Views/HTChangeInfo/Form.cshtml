    //评估详情
    function Detail(keyValue) {
        dialogOpen({
            id: 'DetailForm',
            title: '隐患评估详情',
            url: '/HiddenTroubleManage/HTApproval/Detail?keyValue=' + keyValue,
            width: ($(top.window).width() - 200) + "px",
            height: ($(top.window).height() - 200) + "px",
            btn: null
        });
    }

    //删除图片
    function DelPic(key) {
        $.RemoveForm({
            url: "../../PublicInfoManage/ResourceFile/ThoroughRemoveForm",
            param: { keyValue: key, fileType: "" },
            success: function (data) {
                $("#changePicGridTable").resetSelection();  //整改图片
                $("#changePicGridTable").trigger("reloadGrid");
            }
        })
    }

    //初始化控件
    function initControl() {
        //登记
        $("#btn_Save").click(function () {
            AcceptClick();
        });

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson",
            success: function (data) {

                //隐患整改图片
                $("#HIDCHANGEPHOTO").val(data.HidChangePhoto);
                if (!!data.ATTACHMENT) {
                    //隐患附件
                    $("#ATTACHMENT").val(data.ATTACHMENT);
                }
                else {
                    var attachmentID = "@Guid.NewGuid().ToString()";
                    $("#ATTACHMENT").val(attachmentID);
                }

                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.CheckType
                });
                //隐患类型
                $("#HIDTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidType
                });
                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank,
                });
                //培训模板
                $("#TRAINTEMPLATENAME").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.TrainTemplateName,
                });
            }
        });


        if ($("#HIDRANK")[0].innerText.indexOf("重大") < 0) {
            //隐藏重大隐患填项
            for (var i = 20; i <= 25; i++) {
                $(".form tr:eq(" + i + ")").css("display", "none");
                $(".form tr:eq(" + i + ") td").each(function (ele, index) {
                    $(this).css("display", "none");
                });
            }
        }

        $("#HIDRANK").change(function (ele) {
            var rankName = $(ele.target).attr("data-text");
            if (rankName.indexOf("重大") > 0) {
                for (var i = 20; i <= 25; i++) {
                    $(".form tr:eq(" + i + ")").removeAttr("style");
                    $(".form tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).removeAttr("style");
                    });
                }
            }
            else {
                for (var i = 20; i <= 25; i++) {
                    $(".form tr:eq(" + i + ")").css("display", "none");
                    $(".form tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).css("display", "none");
                    });
                }
            }
        });


        //是否回退
        var isBackVal = $("input[name='ISBACK']:checked").val();
        //不回退
        if (isBackVal == "0") {
            $(".form tr:eq(6)").css("display", "none");
            $(".form tr:eq(6) td").each(function (ele, index) {
                $(this).css("display", "none");
            });
        }

        //判断是否违章
        var chkVal = $("input[name='ISBREAKRULE']:checked").val();
        if (chkVal == "0") {
            $(".form tr:eq(16)").css("display", "none");
            $(".form tr:eq(16) td").each(function (ele, index) {
                $(this).css("display", "none");
            });
            $(".form tr:eq(15) td").each(function (index, ele) {
                if (index > 1) {
                    $(this).css("display", "none");
                }
            });
        }


        //整改结果
        $("input[name='CHANGERESULT']").click(function () {

            var isChangeValue = $(this).val();

            //已经完成
            if (isChangeValue == "1") {

                //是否回退
                $("input[name='ISBACK']:eq(0)").removeAttr("checked");
                $("input[name='ISBACK']:eq(1)").prop("checked", "checked");

                $(".form tr:eq(6)").css("display", "none");
                $(".form tr:eq(6) td").each(function (ele, index) {
                    $(this).css("display", "none");
                });


                //整改完成时间
                $("#CHANGEFINISHDATE").attr("isvalid", "yes");

                //整改措施
                $("#CHANGEMEASURE").attr("isvalid", "yes");

                //实际治理资金
                $("#REALITYMANAGECAPITAL").attr("isvalid", "yes");

                //回退原因
                $("#BACKREASON").removeAttr("isvalid");
                $("#BACKREASON").val("");

                $(".form:eq(0) tr:eq(2) td:eq(2)").html("整改完成时间<span style='color:red;'>*</span>"); //整改完成时间
                $(".form:eq(0) tr:eq(3) td:eq(0)").html("整改措施<span style='color:red;'>*</span>"); //整改措施
                $(".form:eq(0) tr:eq(7) td:eq(2)").html("实际治理资金(元)<span style='color:red;'>*</span>"); //实际治理资金(元)

            }
            else {
                //是否回退
                $("input[name='ISBACK']:eq(1)").removeAttr("checked");
                $("input[name='ISBACK']:eq(0)").prop("checked", "checked");

                $(".form tr:eq(6)").removeAttr("style");
                $(".form tr:eq(6) td").each(function (ele, index) {
                    $(this).removeAttr("style");
                });


                //整改完成时间
                $("#CHANGEFINISHDATE").removeAttr("isvalid");

                //整改措施
                $("#CHANGEMEASURE").removeAttr("isvalid");

                //实际治理资金
                $("#REALITYMANAGECAPITAL").removeAttr("isvalid");

                //回退原因
                $("#BACKREASON").attr("isvalid", "yes");


                $(".form:eq(0) tr:eq(2) td:eq(2) span").remove(); //整改完成时间
                $(".form:eq(0) tr:eq(3) span").remove(); //整改措施
                $(".form:eq(0) tr:eq(7) span").remove(); //实际治理资金

                $(".form:eq(0) tr:eq(6) td:eq(0)").html("回退原因<span style='color:red;'>*</span>"); //回退原因(元)
            }
        });

        //是否回退
        $("input[name='ISBACK']").click(function () {

            var isbackValue = $(this).val();

            if (isbackValue == "1") {
                $("input[name='CHANGERESULT']:eq(0)").removeAttr("checked");
                $("input[name='CHANGERESULT']:eq(1)").prop("checked", "checked");

                $(".form tr:eq(6)").removeAttr("style");
                $(".form tr:eq(6) td").each(function (ele, index) {
                    $(this).removeAttr("style");
                });



                //整改完成时间
                $("#CHANGEFINISHDATE").removeAttr("isvalid");

                //整改措施
                $("#CHANGEMEASURE").removeAttr("isvalid");

                //实际治理资金
                $("#REALITYMANAGECAPITAL").removeAttr("isvalid");

                //回退原因
                $("#BACKREASON").attr("isvalid", "yes");


                $(".form:eq(0) tr:eq(2) td:eq(2) span").remove(); //整改完成时间
                $(".form:eq(0) tr:eq(3) span").remove(); //整改措施
                $(".form:eq(0) tr:eq(7) span").remove(); //实际治理资金

                $(".form:eq(0) tr:eq(6) td:eq(0)").html("回退原因<span style='color:red;'>*</span>"); //回退原因(元)

            }
            else {
                $("input[name='CHANGERESULT']:eq(1)").removeAttr("checked");
                $("input[name='CHANGERESULT']:eq(0)").prop("checked", "checked");

                $(".form tr:eq(6)").css("display", "none");
                $(".form tr:eq(6) td").each(function (ele, index) {
                    $(this).css("display", "none");
                });


                //整改完成时间
                $("#CHANGEFINISHDATE").attr("isvalid", "yes");

                //整改措施
                $("#CHANGEMEASURE").attr("isvalid", "yes");

                //实际治理资金
                $("#REALITYMANAGECAPITAL").attr("isvalid", "yes");

                //回退原因
                $("#BACKREASON").removeAttr("isvalid");
                $("#BACKREASON").val("");

                $(".form:eq(0) tr:eq(2) td:eq(2)").html("整改完成时间<span style='color:red;'>*</span>"); //整改完成时间
                $(".form:eq(0) tr:eq(3) td:eq(0)").html("整改措施<span style='color:red;'>*</span>"); //整改措施
                $(".form:eq(0) tr:eq(7) td:eq(2)").html("实际治理资金(元)<span style='color:red;'>*</span>"); //实际治理资金(元)
            }
        });

        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../HiddenTroubleManage/HTBaseInfo/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    //隐患整改
                    if (null != data.changeInfo) {

                        if (!data.changeInfo.HIDCHANGEPHOTO) {
                            data.changeInfo.HIDCHANGEPHOTO = $("#HIDCHANGEPHOTO").val();
                        }

                        $("#CHANGEID").val(data.changeInfo.ID);
                        $("#form1").formDeserialize(data.changeInfo);

                        //回退原因
                        if (null != data.changeInfo.BACKREASON && "" != data.changeInfo.BACKREASON) {
                            $(".form tr:eq(21)").removeAttr("style");
                            $(".form tr:eq(21) td").each(function (index, ele) {
                                $(this).removeAttr("style");
                            });
                        }
                    }

                    //隐患验收
                    if (null != data.acceptInfo) {
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                        $("#form1").formDeserialize(data.acceptInfo);
                    }

                    //隐患基本信息
                    if (null != data.baseInfo) {
                        $("#form1").formDeserialize(data.baseInfo);

                        $("#CHECKTYPE").ComboBoxSetValue(data.baseInfo.CHECKTYPE);
                        $("#HIDRANK").ComboBoxSetValue(data.baseInfo.HIDRANK);
                        $("#HIDTYPE").ComboBoxSetValue(data.baseInfo.HIDTYPE);
                        $("#TRAINTEMPLATENAME").ComboBoxSetValue(data.baseInfo.TRAINTEMPLATENAME);



                        //是否违章
                        if (data.baseInfo.ISBREAKRULE == "1") {
                            $("input[name='ISBREAKRULE']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='ISBREAKRULE']:eq(1)").prop("checked", "checked");
                        }

                        //是否挂牌督办
                        if (data.baseInfo.ISGETAFTER == "1") {
                            $("input[name='ISGETAFTER']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='ISGETAFTER']:eq(1)").prop("checked", "checked");
                        }

                        //是否曝光
                        if (data.baseInfo.EXPOSURESTATE == "1") {
                            $("input[name='EXPOSURESTATE']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='EXPOSURESTATE']:eq(1)").prop("checked", "checked");
                        }
                    }


                    //隐藏重大隐患填项
                    if ($("#HIDRANK")[0].innerText.indexOf("重大") > 0) {
                        //隐藏重大隐患填项
                        for (var i = 20; i <= 25; i++) {
                            $(".form tr:eq(" + i + ")").removeAttr("style");
                            $(".form tr:eq(" + i + ") td").each(function (ele, index) {
                                $(this).removeAttr("style");
                            });
                        }
                    }
                }
            })
        }
    }

    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
        var changeResultVal = $("input[name='CHANGERESULT']:checked").val();
        postData["CHANGERESULT"] = changeResultVal;
        var isBackVal = $("input[name='ISBACK']:checked").val();
        postData["ISBACK"] = isBackVal;
        $.SaveForm({
            url: "../../HiddenTroubleManage/HTChangeInfo/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        });
    }

    //提交流程
    function SubmitAction() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
        var changeResultVal = $("input[name='CHANGERESULT']:checked").val();
        postData["CHANGERESULT"] = changeResultVal;
        var isBackVal = $("input[name='ISBACK']:checked").val();
        postData["ISBACK"] = isBackVal;
        $.SaveForm({
            url: "../../HiddenTroubleManage/HTChangeInfo/SubmitForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }

    //上传图片
    function uploadify() {
        var folderId = $("#HIDCHANGEPHOTO").val();  //整改图片
        $("#uploadify").uploadify({
            method: 'post',
            uploader: '../../PublicInfoManage/ResourceFile/UploadifyFile?folderId=' + folderId,
            swf: top.contentPath + '/Content/scripts/plugins/uploadify/uploadify.swf',
            buttonText: "上传图片",
            height: 30,
            width: 90,
            fileTypeExts: '*.bmp;*.ico;*.gif;*.jpeg;*.jpg;*.png;*.psd;*.JPEG;*.PNG;*.JPG;*.BMP;',
            removeCompleted: false,
            onSelect: function (file) {
                $("#" + file.id).prepend('<div style="float:left;width:50px;margin-right:2px;"><img src="' + top.contentPath + '/Content/images/filetype/' + file.type.replace('.', '') + '.png" style="width:40px;height:40px;" /></div>');
                $('.border').hide();
            },
            onUploadSuccess: function (file) {
                $("#" + file.id).find('.uploadify-progress').remove();
                $("#" + file.id).find('.data').html(' 恭喜您，上传成功！');
                $("#" + file.id).prepend('<a class="succeed" title="成功" onclick="javascript:$(this).parent().remove();"><i class="fa fa-check-circle"></i></a>');
                Loading(false);
                $("#changePicGridTable").trigger("reloadGrid");
                Loading(false);
            },
            onUploadError: function (file) {
                $("#" + file.id).removeClass('uploadify-error');
                $("#" + file.id).find('.uploadify-progress').remove();
                $("#" + file.id).find('.data').html(' 很抱歉，上传失败！');
                $("#" + file.id).prepend('<span class="error" title="失败"><i class="fa fa-exclamation-circle"></i></span>');
            }
        });
        $("#uploadify-button").prepend('<i style="opacity: 0.6;" class="fa fa-cloud-upload"></i>&nbsp;');
        $("#uploadify-queue").css("height", "61px");


        //整改附件
        var attfolderid = $("#ATTACHMENT").val();
        if (!attfolderid)
        {
            attfolderid = "@Guid.NewGuid().ToString()";
            $("#ATTACHMENT").val(attfolderid);
        }
        $("#attachUploadify").uploadify({
            method: 'post',
            uploader: '../../PublicInfoManage/ResourceFile/UploadifyFile?folderId=' + attfolderid,
