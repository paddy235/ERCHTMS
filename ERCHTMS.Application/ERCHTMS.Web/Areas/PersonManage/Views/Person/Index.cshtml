    //人员离厂
    function leave() {
        var ids = $("#gridTable").jqGrid("getGridParam", "selarrrow");
        if (ids.length == 0) {
            dialogMsg("请选择至少一条记录！", 0);
            return false;
        } else {
            var arr = [],arr1=[],str="";
            for (var i = 0; i < ids.length; i++) {
                var gr = $("#gridTable").getRowData(ids[i]);
                if (gr.istransfer == "1") {
                    dialogMsg("该人员正在转岗中！", 0);
                    return false;
                }
                if (gr.isleaving == "1") {
                    dialogMsg("【"+gr.realname + "】已在离场审批中！", 0);
                    return false;
                }
                if (arr.indexOf(gr.departmentid) == -1) {
                    arr.push(gr.departmentid);
                }
                if (gr.rolename.indexOf("承包商") >= 0) {
                    str = 1;
                } else {
                    str = 0;
                }
                if (arr1.indexOf(str) == -1) {
                    arr1.push(str);
                }
            }
            if (arr.length > 1) {
                dialogMsg("只能选择同一部门人员！", 0);
                return false;
            }
            if (arr1.length > 1) {
                dialogMsg("不能同时选择内部和外包人员！", 0);
                return false;
            }
            var isEpiboly= arr1[0];
            idx = dialogOpen({
                id: "LeaveForm",
                title: '人员离厂',
                url: '/PersonManage/Person/Leave?isEpiboly=' + isEpiboly + '&deptid=' + arr[0],
