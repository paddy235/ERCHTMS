    function checkSpecialUser() {
        if (softName == 'gdhjb') {
            var hasAttendRight = 1; //是否拥有查看进出记录的权限
            var rowIndex = $("#gridTable").getGridParam('selrow');
            var rowData = $("#gridTable").jqGrid("getRowData", rowIndex);//获取当前页记录行数据
            if ("@ViewBag.IsAppointAccount" == "0") {
                if (rowData.specialuser == "1" && rowData.userid!="@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId")
                    hasAttendRight = 0
            }
            return hasAttendRight
        } else
            return "";

    }
