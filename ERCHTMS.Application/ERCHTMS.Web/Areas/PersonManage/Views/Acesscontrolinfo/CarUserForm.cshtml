<script>
    var UserId = request('userId');
    var type = request('type');
    var NewType = request('NewType');
    var index = 0;
    var userlist;
    var IsTakePictures = false;//是否拍照，拍照才能保存
    var MaxLength = 0;
    $(function () {
        $("#Image").hide();
        $.ajax({
            url: '../../PersonManage/Acesscontrolinfo/GetCarUserList?userids=' + UserId + "&type=" + type + "&NewType=" + NewType,
            type: "GET",
            async: false,
            dataType: "Json",
            success: function (result) {
                userlist = result;
                MaxLength = result.length;
                ChangeUser();

            }
        });
    });

    function ChangeUser() {
        $("#Name").val(userlist[index].username);
        // $("#Phone").val(userlist[index].mobile);
        if (userlist[index].imgdata == null || userlist[index].imgdata == "") {
            $("#IsFace").val("否");
        } else {
            $("#IsFace").val("是");
        }
    }

    //提交
    function Submit() {
        if (IsTakePictures) {
            var canvas = document.getElementById('canvas1');
            var imgData = canvas.toDataURL("image/jpg");
            $.SaveForm({
                url: "../../PersonManage/Acesscontrolinfo/SaveFileImgForm?keyValue=",
                param: { keyValue: userlist[index].id, imgData: encodeURIComponent(imgData), type: type, NewType: NewType },
                loading: "正在保存数据...",
                close: false,
                success: function (data) {
                    if (data == false) {
                        dialogMsg("人脸照片不合格，请重新进行拍照！", 2);
                        return false;
                    }
                    else if (data.message == "1") {
                        dialogMsg("临时表中无【" + userlist[index].username + "】记录信息", 2);
                        return false;
                    }
                    else {
                        if (MaxLength > index + 1) {
                            dialogMsg("录制成功请录制下一个用户！", 1);
                            index++;
                            ChangeUser();
                            Cancel();

                        } else {
                            dialogMsg("已全部录制完成！", 1);
                            $("#sub").hide();
                            $("#cancel").hide();
                            $("#getPhoto").hide();
                        }
                    }
                }
            });
        } else {
            dialogMsg("请先进行拍照！", 2);
        }
    }

    function Cancel() {
        IsTakePictures = false;
        $("#play").show();
        $("#Image").hide();
    }
</script>

