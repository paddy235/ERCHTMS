@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>
<script>
    var keyValue = request('keyValue');
    var actiontype = request('actiontype');
    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        keyValue = keyValue.length == 0 ? "@Guid.NewGuid().ToString()" : keyValue;
        //附件
        file_upload.init({
            keyValue: keyValue, extensions: 'doc,docx,xls,xlsx,zip,jpg,png,ppt', isImage: false, el: '#uploader'
        });
        var isDel = actiontype == "view" ? false : true;
        file_upload.bindFiles(isDel, false, keyValue, "uploader", isDel);
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../EquipmentManage/MaintainingRecord/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").formDeserialize(data);
                }
            })
        }
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
        if ($("#MaintainingContent").val() == null || $("#MaintainingContent").val() == "" || $("#MaintainingContent").val() == "undefined") {
            postData["MaintainingContent"] = " ";
        }
        if ($("#MaintainingResult").val() == null || $("#MaintainingResult").val() == "" || $("#MaintainingResult").val() == "undefined") {
            postData["MaintainingResult"] = " ";
        }
        $.SaveForm({
            url: "../../EquipmentManage/MaintainingRecord/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                top.Form.$("#MaintainingRecord").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <td class="formTitle">设备名称</td>
            <td class="formValue">
                <input id="EquipmentName" type="text" class="form-control" disabled="disabled" />
                <input id="EquipmentId" type="hidden" />
            </td>
            <td class="formTitle">设备编号</td>
            <td class="formValue">
                <input id="EquipmentNo" type="text" class="form-control" disabled="disabled" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">所在区域</td>
            <td class="formValue">
                <input id="District" type="text" class="form-control" disabled="disabled" />
                <input id="DistrictID" type="hidden" />
            </td>
            <td class="formTitle">保养人员<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="MaintainingUser" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">保养单位<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="MaintainingDept" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
            <td class="formTitle">保养时间<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="MaintainingDate" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" isvalid="yes" checkexpession="NotNull" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">维护保养名称<font face="宋体">*</font></td>
            <td class="formValue" colspan='3'>
                <input id="RecordName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">维护保养项目<br />（内容）和维护<br />方法</td>
            <td class="formValue" colspan='3'>
                <textarea id="MaintainingContent" class="form-control"></textarea>
            </td>
        </tr>
        <tr>
            <td class="formTitle">维护保养结果</td>
            <td class="formValue" colspan='3'>
                <textarea id="MaintainingResult" class="form-control"></textarea>
            </td>
        </tr>
        <tr>
            <td class="formTitle">结果验证说明<font face="宋体">*</font></td>
            <td class="formValue" colspan='3'>
                <textarea id="ResultProving" class="form-control" isvalid="yes" checkexpession="NotNull"></textarea>
            </td>
        </tr>
        <tr>
            <td class="formTitle">登记人员</td>
            <td class="formValue">
                <input id="RegisterUser" type="text" class="form-control" disabled="disabled" />
                <input id="RegisterUserId" type="hidden" />
            </td>
            <td class="formTitle">登记时间</td>
            <td class="formValue">
                <input id="RegisterDate" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" disabled="disabled" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">附件：</td>
            <td colspan="3">
                <div id="uploader" class="uploader" style="border:1px solid #ccc; margin-top:10px; min-height:200px; margin-bottom:10px;">
                    <div class="queueList">
                        <div id="uploaderFile" class="placeholder">
                            <div class="filePicker" style="margin-left:25px; margin-top:10px;"></div>
                        </div>
                    </div>
                    <div class="statusBar" style="display:none;">
                        <div class="progress">
                            <span class="text">0%</span>
                            <span class="percentage"></span>
                        </div>
                        <div class="info"></div>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
