    //
    //查找节点
    //
    function findNode(list, id) {
        var node = list.find(function (x) { return x.id == id; });
        if (!node) {
            for (var n in list) {
                var ele = list[n];
                node = findNode(ele.ChildNodes, id);
                if (!!node)
                    break;
            }
        }
        return node;
    }
