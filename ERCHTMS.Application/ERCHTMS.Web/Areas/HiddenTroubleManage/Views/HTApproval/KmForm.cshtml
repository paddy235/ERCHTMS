@{;
ViewBag.Title = "表单页面";
Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/scripts/business/Common.js" type="text/javascript"></script>
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>
<script>
    var keyValue = request("keyValue"); //主键 隐患信息主键
    var actiontype = request("actiontype");
    var curIndustry = "@ERCHTMS.Code.OperatorProvider.Provider.Current().Industry";
    var curUserRole = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName";
    var curUserName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserName";
    var curUserId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId";
    var curDeptCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptCode";
    var curDeptId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptId";
    var cuOrgCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeCode";
    var curUserOrg = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
    var curDeptName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptName";
    var isshowappoint = false; //是否具有控制指定整改责任人的权限
    var kfdcOrgCode = "";
    var RelevancePersonRole = ""; //整改责任单位关联人员角色
    var IsEnable_RemoteEqu = ""; //判定是否调用远程设备信息
    $(function () {

        $(".center-Panel").css({ "width": "100%", "height": ($(top.window).height() - 160) + "px", "padding-top": "38px" });

        initControl();
        uploadify("uploader"); //隐患图片
        uploadify("uploader_approvalfile"); //评估附件


        //查看下
        if (actiontype == "view") {
            $("#ChooseDevice").attr("disabled", "disabled");
            $("#btn_UpSubmit").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#HidStandard").attr("disabled", "disabled");
            $("#HidStandardLib").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });
        }

        $(".form-control").focus(function () {
            $(".poptip").remove();
        });
        IsGeneric();
    });

    //判断是否是通用版 做页面处理
    function IsGeneric() {
        $.ajax({
            url: top.contentPath + '/Desktop/IsGeneric',
            type: "GET",
            async: false,
            dataType: "text",
            success: function (result) {
                if (result == "true") {
                    $(".hid").css("display", "none");

                } else {

                }
            }
        });
    }


    //初始化控件
    function initControl() {

        var curDate = "@DateTime.Now.ToString("yyyy-MM-dd")";
        //默认给当前时间
        $("#APPROVALDATE").val(curDate);

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        //上报
        $("#btn_UpSubmit").click(function () {
            UpSubmitAction();
        });


        $("#HidStandard").click(function () {
            dialogOpen({
                id: 'HidStandardForm',
                title: '查看隐患级别标准',
                url: '/HiddenTroubleManage/HTBaseInfo/WarningDetail',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: []
            });
        });


        //隐患级别选择事件(2018-06-14调整)
        $("#HIDRANK").change(function (ele) {
            var rankName = $(ele.target).attr("data-text");
            if (rankName.indexOf("重大") >= 0) {
                for (var i = 14; i <= 19; i++) {
                    $(".form:eq(1) tr:eq(" + i + ")").removeAttr("style");
                    $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).removeAttr("style");
                    });
                }
            }
            else {
                for (var i = 14; i <= 19; i++) {
                    $(".form:eq(1) tr:eq(" + i + ")").css("display", "none");
                    $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).css("display", "none");
                    });
                }
            }

            IsShowSubmit();
        });

        //选择隐患类别 (2018-06-14调整)
        $("#HIDTYPE").change(function () {
            var curTextbox = $(this).text();
            if (curTextbox.indexOf("设备设施") >= 0) {
                $(".form:eq(1) tr:eq(4)").css("display", "");
            }
            else {
                $(".form:eq(1) tr:eq(4)").css("display", "none");
            }
            $(".form:eq(1) tr:eq(4) input").each(function (index, ele) {
                $(this).val("");
                $(this).removeAttr("disabled");
            });
        });


        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson",
            success: function (data) {

                IsEnable_RemoteEqu = data.IsEnable_RemoteEqu; //国电荥阳是否启用远程调用设备

                RelevancePersonRole = data.RelevancePersonRole; //整改责任单位关联角色
                //开封电厂
                kfdcOrgCode = data.KFDC_ORGCODE; //开封电厂编码
                //删除对象
                var CheckTypeData = new Array();
                for (var i = 0; i < data.CheckType.length; i++) {
                    if (data.CheckType[i].ItemName.indexOf('其他安全检查') < 0) {
                        CheckTypeData.push(data.CheckType[i]);
                    }
                }
                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: CheckTypeData
                });

                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank,
                });

                //隐患专业分类 //隐患分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    height: "200px",
                    data: data.MajorClassify
                });

                //隐患类型
                $("#HIDTYPE").ComboBoxTree({
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetHiddenTypeDataJson",
                    description: "==请选择==",
                    allowSearch: false
                });

                //专业分类事件处理
                $("#MAJORCLASSIFY").bind("change",
                    function () {
                        IsShowSubmit();
                    });
                
                //所属单位
                $("#HIDDEPARTNAME").ComboBox({
                    id: "DepartmentId",
                    text: "FullName",
                    description: "===请选择===",
                    allowSearch: false,
                    data: data.DeptData
                });
            }
        });


        //2018-06-15 调整
        if ($("#HIDRANK")[0].innerText.indexOf("重大") < 0) {
            //隐藏重大隐患填项
            for (var i = 14; i <= 19; i++) {
                $(".form:eq(1) tr:eq(" + i + ")").css("display", "none");
                $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                    $(this).css("display", "none");
                });
            }
        }

        //判断是否评估通过         //2018-06-15 调整
        var approvalVal = $("input[name='APPROVALRESULT']:checked").val();
        if (approvalVal == "1") {
            $(".form:eq(0) tr:eq(2)").css("display", "none");
            $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                $(this).css("display", "none");
            });
        }

        //评估是否通过验证         //2018-06-15 调整
        $("input[name='APPROVALRESULT']").click(function () {
            ControlApprovalAppoint();
        });


        //是否指定整改责任人
        $("input[name='ISAPPOINT']").change(function () {
            var isappoint = $("input[name='ISAPPOINT']:checked").val();
            var approvalresult = $("input[name='APPROVALRESULT']:checked").val();
            //指定
            if (isappoint == "1") {
                //整改责任负责人隐藏
                $("#CHARGEDEPTNAME").removeAttr("isvalid");
                $("#CHARGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(2) tr:eq(1)").css("display", "none");
                //显示整改责任人
                $("#CHANGEPERSONNAME").attr("isvalid", "yes");
                $(".form:eq(2) tr:eq(2)").css("display", "");
                $(".form:eq(2) tr:eq(3)").css("display", "");
            }
            else {
                $(".form:eq(2) tr:eq(1) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");
                $(".form:eq(2) tr:eq(1) td:eq(2)").html("<label style='white-space:pre-wrap;'>整改责任单位负责人</label><span style='color:red;'>*</span>");
                //显示整改责任负责人  
                $("#CHARGEDEPTNAME").attr("isvalid", "yes");
                $("#CHARGEPERSONNAME").attr("isvalid", "yes");
                $(".form:eq(2) tr:eq(1)").css("display", "");
               //整改责任人隐藏
                $("#CHANGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(2) tr:eq(2)").css("display", "none");
                $(".form:eq(2) tr:eq(3)").css("display", "none");

                $("#CHANGEPERSONNAME").val("");
                $("#CHANGEPERSON").val("");
                $("#CHANGEDUTYDEPARTNAME").val("");
                $("#CHANGEDUTYDEPARTCODE").val("");
            }

            //评估不通过
            if (approvalresult == "0") {
                $(".form:eq(0) tr:eq(2)").removeAttr("style");
                $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                    $(this).removeAttr("style");
                });
                //整改责任人
                $("#CHANGEPERSONNAME").removeAttr("isvalid");
                $("#CHANGEDEADINE").removeAttr("isvalid");
                $("#PLANMANAGECAPITAL").removeAttr("isvalid");
                $("#ACCEPTPERSONNAME").removeAttr("isvalid");
                $("#ACCEPTDATE").removeAttr("isvalid");
                $(".form:eq(2) tr:eq(2) span").remove(); //整改责任人
                $(".form:eq(2) tr:eq(4) span").remove(); //整改截止时间  计划治理资金(元)
                $(".form:eq(3) tr:eq(0) span").remove(); //验收人
                $(".form:eq(3) tr:eq(1) span").remove(); //验收日期
                $("#btn_UpSubmit").attr("disabled", "disabled"); //添加
                $("#ACCEPTPERSONNAME").val("");
                $("#ACCEPTPERSON").val("");
                $("#ACCEPTDEPARTNAME").val("");
                $("#ACCEPTDEPARTCODE").val("");
                //拥有权限
            
                //整改责任单位(整改责任负责人)
                $("#CHARGEDEPTNAME").removeAttr("isvalid");
                //整改责任负责人
                $("#CHARGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(2) tr:eq(1) span").remove();
             
            }
        });
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../HiddenTroubleManage/HTBaseInfo/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {

                    //隐患整改
                    if (null != data.changeInfo) {
                        $("#CHANGEID").val(data.changeInfo.ID);
                        $("#form1").formDeserialize(data.changeInfo);

                        if (!!data.changeInfo.ISAPPOINT)
                        {
                            //是否指定整改
                            if (data.changeInfo.ISAPPOINT == "1") {
                                $("input[name='ISAPPOINT']:eq(0)").prop("checked", "checked");
                            }
                            else {
                                $("input[name='ISAPPOINT']:eq(1)").prop("checked", "checked");
                            }
                        }

                        //回退原因
                        if (!!data.changeInfo.BACKREASON) {
                            $(".form:eq(2) tr:eq(6)").removeAttr("style");
                            $(".form:eq(2) tr:eq(6) td").each(function (index, ele) {
                                $(this).removeAttr("style");
                            });
                        }
                    }

                    //隐患验收
                    if (null != data.acceptInfo) {
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                        $("#form1").formDeserialize(data.acceptInfo);

                        //验收人如果为空，则默认当前评估人/或者是开封电厂的评估时，所有验收人默认当前评估人
                        if (!$("#ACCEPTPERSON").val() || kfdcOrgCode == cuOrgCode) {
                            /**整改必填时,验收人默认当前人**/
                            $("#ACCEPTPERSONNAME").val(curUserName);
                            $("#ACCEPTPERSON").val(curUserId);
                            $("#ACCEPTDEPARTNAME").val(curDeptName);
                            $("#ACCEPTDEPARTCODE").val(curDeptCode);
                        }
                    }

                    //判断整改人是否同验收人相同
                    if (!!data.changeInfo.CHANGEPERSON) {
                        //如果当前整改人和"当前"验收人相同，则清空验收人
                        if (data.changeInfo.CHANGEPERSON == $("#ACCEPTPERSON").val()) {
                            $("#ACCEPTPERSONNAME").val("");
                            $("#ACCEPTPERSON").val("");
                            $("#ACCEPTDEPARTNAME").val("");
                            $("#ACCEPTDEPARTCODE").val("");
                        }
                    }

                    if (null != data.baseInfo) {
                        $("#form1").formDeserialize(data.baseInfo);

                        $("#CHECKTYPE").ComboBoxSetValue(data.baseInfo.CHECKTYPE);
                        $("#HIDRANK").ComboBoxSetValue(data.baseInfo.HIDRANK);

                        $("#MAJORCLASSIFY").ComboBoxSetValue(data.baseInfo.MAJORCLASSIFY);  //专业分类/隐患分类
                        
                        $("#HIDTYPE").ComboBoxTreeSetValue(data.baseInfo.HIDTYPE); //隐患类别
                       

                        $("#HIDDEPARTNAME").ComboBoxSetValue(data.baseInfo.HIDDEPART); //所属单位
                        //是否挂牌督办
                        if (data.baseInfo.ISGETAFTER == "1") {
                            $("input[name='ISGETAFTER']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='ISGETAFTER']:eq(1)").prop("checked", "checked");
                        }

                        //是否曝光
                        if (data.baseInfo.EXPOSURESTATE == "1") {
                            $("input[name='EXPOSURESTATE']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='EXPOSURESTATE']:eq(1)").prop("checked", "checked");
                        }

                        IsShowSubmit();
                    }

                    //当前用户
                    if (null != data.userInfo) {
                        $("#APPROVALPERSON").val(data.userInfo.UserId);
                        $("#APPROVALPERSONNAME").val(data.userInfo.UserName);
                        $("#APPROVALDEPARTCODE").val(data.userInfo.DeptCode);
                        $("#APPROVALDEPARTNAME").val(data.userInfo.DeptName);
                    }
                    //2018-06-15 调整
                    if ($("#HIDRANK")[0].innerText.indexOf("重大") >= 0) {
                        //隐藏重大隐患填项
                        for (var i = 14; i <= 19; i++) {
                            $(".form:eq(1) tr:eq(" + i + ")").removeAttr("style");
                            $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                                $(this).removeAttr("style");
                            });
                        }
                    }

                    //当前隐患类别为设备设施的时候          //2018-06-15 调整
                    var curTextbox = $("#HIDTYPE").text();
                    if (curTextbox.indexOf("设备设施") >= 0) {
                        $(".form:eq(1) tr:eq(4)").css("display", "");
                    }
                    else {
                        $(".form:eq(1) tr:eq(4)").css("display", "none");
                    }
                    var deviceid = $("#DEVICEID").val();
                    if (!!deviceid) {
                        $("#DEVICECODE").attr("disabled", "disabled");
                    }
                }
            })
        }
    }


    //指定整改责任人管理
    function AppointManage()
    {
        //存在
        if (isshowappoint) {
            var isappoint = $("input[name='ISAPPOINT']:checked").val();
            //指定整改责任人
            if (isappoint == "1") {
                $("input[name='ISAPPOINT']:eq(0)").prop("checked", "checked"); //指定
                //不显示整改责任负责人
                $(".form:eq(2) tr:eq(1)").css("display", "none");
                //显示整改责任人
                $(".form:eq(2) tr:eq(2)").css("display", "");
                $(".form:eq(2) tr:eq(3)").css("display", "");
            }
            else {
                $("input[name='ISAPPOINT']:eq(1)").prop("checked", "checked"); // 不指定
                //显示整改责任负责人
                $(".form:eq(2) tr:eq(1)").css("display", "");
                //不显示整改责任人
                $(".form:eq(2) tr:eq(2)").css("display", "none");
                $(".form:eq(2) tr:eq(3)").css("display", "none");
            }
        }
        else {
            $("#CHARGEDEPTNAME").removeAttr("isvalid");
            $("#CHARGEPERSONNAME").removeAttr("isvalid");
            $(".form:eq(2) tr:eq(0)").css("display", "none");
            $(".form:eq(2) tr:eq(1)").css("display", "none");
            $(".form:eq(2) tr:eq(2)").css("display", "");
            $(".form:eq(2) tr:eq(3)").css("display", "");
        }
        ControlApprovalAppoint();
    }

    //控制评估指定
    function ControlApprovalAppoint()
    {
        var approvalresult = $("input[name='APPROVALRESULT']:checked").val();
        var isappoint = $("input[name='ISAPPOINT']:checked").val();

        //默认去掉整改责任单位负责人必填
        //整改责任单位(整改责任负责人)
        $("#CHARGEDEPTNAME").removeAttr("isvalid");
        //整改责任负责人
        $("#CHARGEPERSONNAME").removeAttr("isvalid");
        $(".form:eq(2) tr:eq(1) span").remove();


        //评估通过
        if (approvalresult == "1") {
            $(".form:eq(0) tr:eq(2)").css("display", "none");
            $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                $(this).css("display", "none");
            });

            //判断是否具有同级提交功能
            var rankvalue = $("#HIDRANK").ComboBoxGetValue();
            if (!!rankvalue) {
             
                var rankname = $("#HIDRANK").ComboBoxGetText().indexOf("一般隐患") >= 0 ? "一般隐患" : "重大隐患";
                //专业分类
                var majorclassify = $("#MAJORCLASSIFY").ComboBoxGetValue();

                $.ajax({
                    data: { rankname: rankname, workflow: "隐患评估", endflow: "隐患整改", mark: "厂级隐患排查", submittype: "提交", arg1: majorclassify, args2: curDeptId, businessid: keyValue },
                    type: "post",
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                    success: function (data0) {
                        if (!!data0) {
                            if (parseInt(data0) > 0) {
                                $("#CHANGEPERSONNAME").attr("isvalid", "yes");
                                $("#CHANGEDEADINE").attr("isvalid", "yes");
                                $("#PLANMANAGECAPITAL").attr("isvalid", "yes");
                                $("#ACCEPTPERSONNAME").attr("isvalid", "yes");
                                $("#ACCEPTDATE").attr("isvalid", "yes");
                                $(".form:eq(2) tr:eq(2) td:eq(0)").html("整改责任人<span style='color:red;'>*</span>"); //整改责任人
                                $(".form:eq(2) tr:eq(4) td:eq(0)").html("整改截止时间<span style='color:red;'>*</span>"); //整改截止时间
                                $(".form:eq(2) tr:eq(4) td:eq(2)").html("计划治理资金(元)<span style='color:red;'>*</span>"); //计划治理资金(元)
                                $(".form:eq(3) tr:eq(0) td:eq(0)").html("验收人<span style='color:red;'>*</span>"); //验收人
                                $(".form:eq(3) tr:eq(1) td:eq(0)").html("验收日期<span style='color:red;'>*</span>"); //验收日期
                                $("#btn_UpSubmit").removeAttr("disabled"); //移除
                            }
                        }

                        //拥有权限，且必须是非指定
                        if (isshowappoint && isappoint == "0") {
                            //整改责任负责人必填
                            $("#CHARGEDEPTNAME").attr("isvalid", "yes");
                            $("#CHARGEPERSONNAME").attr("isvalid", "yes");
                            $(".form:eq(2) tr:eq(1) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");
                            $(".form:eq(2) tr:eq(1) td:eq(2)").html("<label style='white-space:pre-wrap;'>整改责任单位负责人</label><span style='color:red;'>*</span>");
                            //整改责任人非必填
                            $("#CHANGEPERSONNAME").removeAttr("isvalid");
                        }

                        //同级提交可不用必填
                        $.ajax({
                            data: { rankname: rankname, workflow: "隐患评估", endflow: "隐患评估", mark: "厂级隐患排查", submittype: "同级提交", arg1: majorclassify, args2: curDeptId, businessid: keyValue },
                            type: "post",
                            url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                            success: function (data) {
                                if (!!data) {
                                    if (parseInt(data) > 0) {
                                        $("#CHANGEPERSONNAME").removeAttr("isvalid");
                                        $("#CHANGEDEADINE").removeAttr("isvalid");
                                        $("#PLANMANAGECAPITAL").removeAttr("isvalid");
                                        $("#ACCEPTPERSONNAME").removeAttr("isvalid");
                                        $("#ACCEPTDATE").removeAttr("isvalid");
                                        $(".form:eq(2) tr:eq(2) span").remove(); //整改责任人
                                        $(".form:eq(2) tr:eq(4) span").remove(); //整改截止时间  计划治理资金(元)
                                        $(".form:eq(3) tr:eq(0) span").remove(); //验收人
                                        $(".form:eq(3) tr:eq(1) span").remove(); //验收日期
                                    }
                                }
                            }
                        });

                    }
                });
            }
        }
        else {//评估不通过 都不必填
            $(".form:eq(0) tr:eq(2)").removeAttr("style");
            $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                $(this).removeAttr("style");
            });
            $("#CHANGEPERSONNAME").removeAttr("isvalid");
            $("#CHANGEDEADINE").removeAttr("isvalid");
            $("#PLANMANAGECAPITAL").removeAttr("isvalid");
            $("#ACCEPTPERSONNAME").removeAttr("isvalid");
            $("#ACCEPTDATE").removeAttr("isvalid");
            $(".form:eq(2) tr:eq(2) span").remove(); //整改责任人
            $(".form:eq(2) tr:eq(4) span").remove(); //整改截止时间  计划治理资金(元)
            $(".form:eq(3) tr:eq(0) span").remove(); //验收人
            $(".form:eq(3) tr:eq(1) span").remove(); //验收日期
            $("#btn_UpSubmit").attr("disabled", "disabled"); //添加
            $("#ACCEPTPERSONNAME").val("");
            $("#ACCEPTPERSON").val("");
            $("#ACCEPTDEPARTNAME").val("");
