Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/scripts/business/Common.js" type="text/javascript"></script>
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>
<script>
    var keyValue = request("keyValue"); //主键 隐患信息主键
    var actiontype = request("actiontype");
    var curUserRole = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName"; 
    var curIndustry = "@ERCHTMS.Code.OperatorProvider.Provider.Current().Industry";
    $(function () {

        $(".center-Panel").css({ "width": "100%", "height": ($(top.window).height() - 160) + "px", "padding-top": "38px" });

        initControl();
        uploadify("uploader"); //隐患图片
        uploadify("uploader_approvalfile"); //评估附件


        //查看下
        if (actiontype == "view") {
            $("#btn_UpSubmit").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#HidStandard").attr("disabled", "disabled");
            $("#HidStandardLib").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });
        }

        $(".form-control").focus(function () {
            $(".poptip").remove();
        });
        IsGeneric();
    });

    //判断是否是通用版 做页面处理
    function IsGeneric() {
        $.ajax({
            url: top.contentPath + '/Desktop/IsGeneric',
            type: "GET",
            async: false,
            dataType: "text",
            success: function (result) {
                if (result == "true") {
                    $(".hid").css("display", "none");

                } else {

                }
            }
        });
    }

    //初始化控件
    function initControl() {

        var curDate = "@DateTime.Now.ToString("yyyy-MM-dd")";
        //默认给当前时间
        $("#APPROVALDATE").val(curDate);

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        //上报
        $("#btn_UpSubmit").click(function () {
            UpSubmitAction();
        });


        $("#HidStandard").click(function () {
            dialogOpen({
                id: 'HidStandardForm',
                title: '查看隐患级别标准',
                url: '/HiddenTroubleManage/HTBaseInfo/WarningDetail',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: []
            });
        });


        //隐患级别选择事件(2018-06-14调整)
        $("#HIDRANK").change(function (ele) {
            var rankName = $(ele.target).attr("data-text");
            if (rankName.indexOf("重大") >= 0) {
                for (var i = 14; i <= 19; i++) {
                    $(".form:eq(1) tr:eq(" + i + ")").removeAttr("style");
                    $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).removeAttr("style");
                    });
                }
            }
            else {
                for (var i = 14; i <= 19; i++) {
                    $(".form:eq(1) tr:eq(" + i + ")").css("display", "none");
                    $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).css("display", "none");
                    });
                }
            }
            IsShowSubmit();
        });

        //选择隐患类别 (2018-06-14调整)
        $("#HIDTYPE").change(function () {
            var curTextbox = $(this).text();
            if (curTextbox.indexOf("设备设施") >= 0) {
                $(".form:eq(1) tr:eq(4)").css("display", "");
            }
            else {
                $(".form:eq(1) tr:eq(4)").css("display", "none");
            }
            $(".form:eq(1) tr:eq(4) input").each(function (index, ele) {
                $(this).val("");
                $(this).removeAttr("disabled");
            });
        });

        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson",
            success: function (data) {
                //删除对象
                var CheckTypeData = new Array();
                for (var i = 0; i < data.CheckType.length; i++) {
                    if (data.CheckType[i].ItemName.indexOf('日常安全检查') < 0) {
                        CheckTypeData.push(data.CheckType[i]);
                    }
                }
                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: CheckTypeData
                });
               
                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank,
                });

                //隐患专业分类 //隐患分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.MajorClassify,
                });
               
                //隐患类别
                $("#HIDTYPE").ComboBoxTree({
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetHiddenTypeDataJson",
                    description: "==请选择==",
                    allowSearch: false
                });
         

                //所属单位
                $("#HIDDEPARTNAME").ComboBox({
                    id: "DepartmentId",
                    text: "FullName",
                    description: "===请选择===",
                    allowSearch: false,
                    data: data.DeptData
                });
            }
        });


        //2018-06-15 调整
        if ($("#HIDRANK")[0].innerText.indexOf("重大") < 0) {
            //隐藏重大隐患填项
            for (var i = 14; i <= 19; i++) {
                $(".form:eq(1) tr:eq(" + i + ")").css("display", "none");
                $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                    $(this).css("display", "none");
                });
            }
        }



        //判断是否评估通过         //2018-06-15 调整
        var approvalVal = $("input[name='APPROVALRESULT']:checked").val();
        if (approvalVal == "1") {
            $(".form:eq(0) tr:eq(2)").css("display", "none");
            $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                $(this).css("display", "none");
            });
        }

        //评估是否通过验证         //2018-06-15 调整
        $("input[name='APPROVALRESULT']").click(function () {
            var checkValue = $(this).val();
            //评估通过
            if (checkValue == "1") {
                $(".form:eq(0) tr:eq(2)").css("display", "none");
                $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                    $(this).css("display", "none");
                });
            }
            else {//评估不通过
                $(".form:eq(0) tr:eq(2)").removeAttr("style");
                $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                    $(this).removeAttr("style");
                });
            }
        });

        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../HiddenTroubleManage/HTBaseInfo/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {

                    //隐患整改
                    if (null != data.changeInfo) {
                        $("#CHANGEID").val(data.changeInfo.ID);
                        $("#form1").formDeserialize(data.changeInfo);

                        //回退原因
                        if (!!data.changeInfo.BACKREASON) {
                            $(".form:eq(2) tr:eq(4)").removeAttr("style");
                            $(".form:eq(2) tr:eq(4) td").each(function (index, ele) {
                                $(this).removeAttr("style");
                            });
                        }
                    }
                    //隐患验收
                    if (null != data.acceptInfo) {
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                        $("#form1").formDeserialize(data.acceptInfo);
                        //是否省级验收
                        if (data.acceptInfo.ISUPACCEPT == "1") {
                            $("input[name='ISUPACCEPT']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='ISUPACCEPT']:eq(1)").prop("checked", "checked");
                        }

                    }

                  
                    if (null != data.baseInfo) {
                        $("#form1").formDeserialize(data.baseInfo);

                        $("#CHECKTYPE").ComboBoxSetValue(data.baseInfo.CHECKTYPE);
                        $("#HIDRANK").ComboBoxSetValue(data.baseInfo.HIDRANK);

                        $("#MAJORCLASSIFY").ComboBoxSetValue(data.baseInfo.MAJORCLASSIFY);  //专业分类/隐患分类
                      
                        $("#HIDTYPE").ComboBoxTreeSetValue(data.baseInfo.HIDTYPE); //隐患类别
                     

                        $("#HIDDEPARTNAME").ComboBoxSetValue(data.baseInfo.HIDDEPART); //所属单位
                        //是否挂牌督办
                        if (data.baseInfo.ISGETAFTER == "1") {
                            $("input[name='ISGETAFTER']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='ISGETAFTER']:eq(1)").prop("checked", "checked");
                        }

                        //是否曝光
                        if (data.baseInfo.EXPOSURESTATE == "1") {
                            $("input[name='EXPOSURESTATE']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='EXPOSURESTATE']:eq(1)").prop("checked", "checked");
                        }
                        IsShowSubmit();
                    }
                    var rankname = $("#HIDRANK").ComboBoxGetText();
                    //省级登记,非省级验收的一般隐患
                    if (rankname.indexOf("一般") >= 0 && data.acceptInfo.ISUPACCEPT != "1" && data.baseInfo.ADDTYPE == "2")
                    {
                        //复查验收
                        if (null != data.recheck) {
                            $("#RECHECKID").val(data.recheck.ID);
                            $("#form1").formDeserialize(data.recheck);
                        }
                        $("#panel5").css("display", ""); //
                    }

                    //省级用户  省级登记
                    if (data.baseInfo.ADDTYPE == "2" && curUserRole.lastIndexOf("省级用户") >= 0 && rankname.indexOf("重大") >= 0) {
                        $("input[name='APPROVALRESULT']").each(function (index, ele)
                        {
                            $(this).removeAttr("disabled");
                        });
                    }
          

                    //当前用户
                    if (null != data.userInfo) {
                        $("#APPROVALPERSON").val(data.userInfo.UserId);
                        $("#APPROVALPERSONNAME").val(data.userInfo.UserName);
                        $("#APPROVALDEPARTCODE").val(data.userInfo.DeptCode);
                        $("#APPROVALDEPARTNAME").val(data.userInfo.DeptName);
                    }
                    //2018-06-15 调整
                    if ($("#HIDRANK")[0].innerText.indexOf("重大") >= 0) {
                        //隐藏重大隐患填项
                        for (var i = 14; i <= 19; i++) {
                            $(".form:eq(1) tr:eq(" + i + ")").removeAttr("style");
                            $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                                $(this).removeAttr("style");
                            });
                        }
                    }

                    //当前隐患类别为设备设施的时候          //2018-06-15 调整
                    var curTextbox = $("#HIDTYPE").text();
                    if (curTextbox.indexOf("设备设施") >= 0) {
                        $(".form:eq(1) tr:eq(4)").css("display", "");
                    }
                    else {
                        $(".form:eq(1) tr:eq(4)").css("display", "none");
                    }
                    var deviceid = $("#DEVICEID").val();
                    if (!!deviceid) {
                        $("#DEVICECODE").attr("disabled", "disabled");
                    }
                }
            })
        }
    }


    //判断是否具有评估权限(有则显示上报)
    function IsShowSubmit() {
        var rankvalue = $("#HIDRANK").ComboBoxGetValue();
        if (!!rankvalue) {
            var rankname = $("#HIDRANK").ComboBoxGetText();
            $.ajax({
                data: { rankname: rankname, workflow: "隐患评估",endflow:"", mark: "省级隐患排查", submittype: "上报" },
                type: "post",
                url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                success: function (data) {
                    if (!!data) {
                        if (data == "1") {
                            $("#btn_UpSubmit").css("display", "");
                        }
                        else {
                            $("#btn_UpSubmit").css("display", "none");
                        }
                    }
                }
            });
        }
    }


    //上传文件
    function uploadify(objId) {

        var folderId = "";
        var fileType = 'bmp,ico,gif,jpeg,jpg,png,psd';
        var isimage = true;
        var isdelete = actiontype == "view" ? false : true;
        switch (objId) {
            case "uploader": //隐患图片
                folderId = $("#HIDPHOTO").val();
                if (!folderId) {
                    folderId = "@Guid.NewGuid().ToString()";
                    $("#HIDPHOTO").val(folderId);
                }
                if (actiontype != "view") {
                    file_upload.init({
                        keyValue: folderId, extensions: fileType, isImage: isimage, el: '#uploader'
                    });
                }
                break;
            case "uploader_approvalfile":  //评估附件
                folderId = $("#APPROVALFILE").val();
                if (!folderId) {
                    folderId = "@Guid.NewGuid().ToString()";
                    $("#APPROVALFILE").val(folderId);
                }
                fileType = 'bmp,ico,gif,jpeg,jpg,png,psd,zip,rar,doc,docx,xls,xlsx,pdf,txt,chm';
                isimage = false;
                if (actiontype != "view") {
                    file_upload.init({
                        keyValue: folderId, extensions: fileType, isImage: isimage, el: '#uploader_approvalfile'
                    });
                }
                break;
        }

        $.ajax({
            url: '../../PublicInfoManage/ResourceFile/GetFilesByRecId',
            data: { recId: folderId },
            type: "post",
            success: function (data) {
                var objdata = eval("(" + data + ")"); //转化为对象类型
                file_upload.bind(objdata, isdelete, isimage, folderId, objId);
            }
        });
    }


    //提交流程
    function SubmitAction() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
        var account = "";
        //评估结果
        var approvalVal = $("input[name='APPROVALRESULT']:checked").val();
        postData["APPROVALRESULT"] = approvalVal;
        //是否曝光
        var exposurestateVal = $("input[name='EXPOSURESTATE']:checked").val();
        postData["EXPOSURESTATE"] = exposurestateVal;

        //是否挂牌督办
        var isgetafter = $("input[name='ISGETAFTER']:checked").val();
        postData["ISGETAFTER"] = isgetafter;

        //是否省级验收
        var isupaccept = $("input[name='ISUPACCEPT']:checked").val();
        postData["ISUPACCEPT"] = isupaccept;

        //所属单位
        postData["HIDDEPART"] = $("#HIDDEPARTNAME").ComboBoxGetValue();
        postData["HIDDEPARTNAME"] = $("#HIDDEPARTNAME").ComboBoxGetText();

        //提交流程
        $.SaveForm({
            url: "../../HiddenTroubleManage/HTApproval/SaveCForm?keyValue=" + keyValue + "&isUpSubmit=0",
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
                top.refreshWork();
            }
        });
    }



    //隐患上报评估
    function UpSubmitAction() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").formSerialize(keyValue);
        //评估结果
        var approvalVal = $("input[name='APPROVALRESULT']:checked").val();
        postData["APPROVALRESULT"] = approvalVal;

        //是否曝光
        var exposurestateVal = $("input[name='EXPOSURESTATE']:checked").val();
        postData["EXPOSURESTATE"] = exposurestateVal;

        //是否挂牌督办
        var isgetafter = $("input[name='ISGETAFTER']:checked").val();
        postData["ISGETAFTER"] = isgetafter;

        //是否省级验收
        var isupaccept = $("input[name='ISUPACCEPT']:checked").val();
        postData["ISUPACCEPT"] = isupaccept;

        //所属单位
        postData["HIDDEPART"] = $("#HIDDEPARTNAME").ComboBoxGetValue();
        postData["HIDDEPARTNAME"] = $("#HIDDEPARTNAME").ComboBoxGetText();

        $.SaveForm({
            url: "../../HiddenTroubleManage/HTApproval/SaveCForm?keyValue=" + keyValue + "&submitUser=&isUpSubmit=1",
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }

    //获取历史评估记录
    function GetHistoryApproval() {
        var keyCode = $("#HIDCODE").val();
        dialogOpen({
            id: 'HistoryForm',
            title: '隐患历史评估记录',
            url: '/HiddenTroubleManage/HTApproval/DetailList?keyCode=' + keyCode,
            width: ($(top.window).width() - 200) + "px",
            height: ($(top.window).height() - 200) + "px",
            btn: null
        });
    }


    function ClickMode(clickMark) {

        switch (clickMark) {
            //排查(省级)
            case "check":
                selectUser({ deptId: '', checkMode: 0, mode: 11, winObject: window.document.body, domId: 'CHECKMANNAME,,CHECKMAN,CHECKDEPARTID,,CHECKDEPARTNAME' });
                break;
                //厂级监控人
            case "monitoring":
                if (!!$('#HIDDEPARTNAME').ComboBoxGetValue()) {
                    selectUser({ deptId: $('#HIDDEPARTNAME').ComboBoxGetValue(), checkMode: 0, mode: 1, winObject: window.document.body, domId: 'MONITORPERSONNAME,,MONITORPERSONID,,,' });
                }
                else {
                    dialogMsg('请选择所属单位！', 0);
                }
                break;
                //整改人
            case "change":
                if (!!$('#HIDDEPARTNAME').ComboBoxGetValue()) {
                    selectDifferentUser($('#HIDDEPARTNAME').ComboBoxGetValue(), 3, 0, window.document.body, 'CHANGEPERSONNAME,,CHANGEPERSON,,CHANGEDUTYDEPARTCODE,CHANGEDUTYDEPARTNAME,CHANGEDUTYTEL', 'ACCEPTPERSON', '验收人');
                }
                else {
                    dialogMsg('请选择所属单位！', 0);
                }
                break;
                //验收人
            case "accept":
                var isupaccept = $("input[name='ISUPACCEPT']:checked").val();
                if (isupaccept == "1") {
                    //省级验收(省级)
                    selectDifferentUser('', 0, 11, window.document.body, 'ACCEPTPERSONNAME,,ACCEPTPERSON,,ACCEPTDEPARTCODE,ACCEPTDEPARTNAME', 'CHANGEPERSON', '整改责任人');
                }
                else {
                    //非省级验收
                    if (!!$('#HIDDEPARTNAME').ComboBoxGetValue()) {
                        selectDifferentUser($('#HIDDEPARTNAME').ComboBoxGetValue(), 2, 1, window.document.body, 'ACCEPTPERSONNAME,,ACCEPTPERSON,,ACCEPTDEPARTCODE,ACCEPTDEPARTNAME', 'CHANGEPERSON', '整改责任人');
                    }
                    else {
                        dialogMsg('请选择所属单位！', 0);
                    }
                }
                break;
                //复查人(省级)
            case "recheck":
                selectDifferentUser('', 0, 11, window.document.body, 'RECHECKPERSONNAME,,RECHECKPERSON,,RECHECKDEPARTCODE,RECHECKDEPARTNAME', 'CHANGEPERSON', '整改责任人');
                break;
                //外包工程
            case "project":
                    if (!!$('#HIDDEPARTNAME').ComboBoxGetValue()) {
                        sjSelectProject(window.document.body, 'HIDPROJECTNAME,HIDPROJECT', $('#HIDDEPARTNAME').ComboBoxGetValue());
                    }
                    else {
                        dialogMsg('请选择所属单位！', 0);
                    }
                    break;
                //区域
            case "area":
                if (!!$('#HIDDEPARTNAME').ComboBoxGetValue()) {
                    sjSelectArea(window.document.body, 'HIDPOINTNAME,HIDPOINT,,,,,', $('#HIDDEPARTNAME').ComboBoxGetValue());
                }
                else {
                    dialogMsg('请选择所属单位！', 0);
                }
                break;
        }
    }
</script>

