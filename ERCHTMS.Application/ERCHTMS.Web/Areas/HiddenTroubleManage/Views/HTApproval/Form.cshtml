    //公共方法
    function CommonMethod() {
        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });
        //上报
        $("#btn_UpSubmit").click(function () {
            UpSubmitAction();
        });

        $("#HidStandard").click(function () {
            dialogOpen({
                id: 'HidStandardForm',
                title: '查看隐患级别标准',
                url: '/HiddenTroubleManage/HTBaseInfo/WarningDetail',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: []
            });
        });

        //隐患级别选择事件(2018-06-14调整)
        $("#HIDRANK").change(function (ele) {
            var rankName = $(ele.target).attr("data-text");
            if (rankName.indexOf("重大") >= 0) {
                $(".form:eq(1) .importHid").css("display", "");
            }
            else {
                $(".form:eq(1) .importHid").css("display", "none");
            }

            IsShowSubmit();

            if (IsEnableAccept > 0) {
                $("#ACCEPTPERSONNAME").removeAttr("isvalid");
                $("#ACCEPTDATE").removeAttr("isvalid");
                $(".form:eq(3) tr:eq(0) span").remove(); //验收人
                $(".form:eq(3) tr:eq(1) span").remove(); //验收日期

                $("#ACCEPTPERSONNAME").val("");
                $("#ACCEPTPERSON").val("");
                $("#ACCEPTDEPARTNAME").val("");
                $("#ACCEPTDEPARTCODE").val("");
            }
        });

        //选择隐患类别 (2018-06-14调整)
        $("#HIDTYPE").change(function () {
            var curTextbox = $(this).text();
            if (curTextbox.indexOf("设备设施") >= 0) {
                $(".form:eq(1) tr:eq(4)").css("display", "");
            }
            else {
                $(".form:eq(1) tr:eq(4)").css("display", "none");
            }
            $(".form:eq(1) tr:eq(4) input").each(function (index, ele) {
                $(this).val("");
                $(this).removeAttr("disabled");
            });

            IsShowSubmit();
        });

        //评估是否通过验证         //2018-06-15 调整
        $("input[name='APPROVALRESULT']").click(function () {
            ControlApprovalAppoint();
        });
        //是否指定整改责任人
        $("input[name='ISAPPOINT']").change(function () {
            var isappoint = $("input[name='ISAPPOINT']:checked").val();
            var approvalresult = $("input[name='APPROVALRESULT']:checked").val();
            //指定
