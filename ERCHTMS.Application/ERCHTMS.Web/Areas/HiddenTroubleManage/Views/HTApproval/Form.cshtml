                        }
                        else {
                            $("input[name='ISGETAFTER']:eq(1)").prop("checked", "checked");
                        }
                        //是否曝光
                        if (data.baseInfo.EXPOSURESTATE == "1") {
                            $("input[name='EXPOSURESTATE']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='EXPOSURESTATE']:eq(1)").prop("checked", "checked");
                        }
                        IsShowSubmit();
                    }

                    //当前用户
                    if (null != data.userInfo) {
                        $("#APPROVALPERSON").val(curUserId);
                        $("#APPROVALPERSONNAME").val(curUserName);
                        $("#APPROVALDEPARTCODE").val(curDeptCode);
                        $("#APPROVALDEPARTNAME").val(curDeptName);
                    }
                    //2018-06-15 调整
                    if ($("#HIDRANK")[0].innerText.indexOf("重大") >= 0) {
                        $(".form:eq(1) .importHid").css("display", "");
                    }

                    //当前隐患类别为设备设施的时候          //2018-06-15 调整
                    var curTextbox = $("#HIDTYPE").text();
                    if (curTextbox.indexOf("设备设施") >= 0) {
                        $(".form:eq(1) tr:eq(4)").css("display", "");
                    }
                    else {
                        $(".form:eq(1) tr:eq(4)").css("display", "none");
                    }
                    var deviceid = $("#DEVICEID").val();
                    if (!!deviceid) {
                        $("#DEVICECODE").attr("disabled", "disabled");
                    }
                }
            })
        }
        uploadify("uploader", true); //隐患图片
        uploadify("uploader_approvalfile", false); //评估附件

        //查看下
        if (actiontype == "view") {
            $("#ChooseDevice").attr("disabled", "disabled");
            $("#btn_UpSubmit").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#HidStandard").attr("disabled", "disabled");
            $("#HidStandardLib").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });
        }

        $(".form-control").focus(function () {
            $(".poptip").remove();
        });

        CommonMethod();

    }
