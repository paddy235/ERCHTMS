<script>
    var keyValue = request("keyValue"); //主键 隐患信息主键
    var actiontype = request("actiontype");
    var curIndustry = "@ERCHTMS.Code.OperatorProvider.Provider.Current().Industry";
    var curUserRole = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName";
    var curUserName = UnicodeToString("@ERCHTMS.Code.OperatorProvider.Provider.Current().UserName");
    var curUserId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().UserId";
    var curDeptCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptCode";
    var curDeptId = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptId";
    var cuOrgCode = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeCode";
    var curUserOrg = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
    var curDeptName = "@ERCHTMS.Code.OperatorProvider.Provider.Current().DeptName";
    var isshowappoint = false; //是否具有控制指定整改责任人的权限
    var kfdcOrgCode = "";
    var RelevancePersonRole = ""; //整改责任单位关联人员角色
    var IsEnable_RemoteEqu = ""; //判定是否调用远程设备信息
    var IsEnableAccept = 0;//是否启用验收
    var curDate = "@DateTime.Now.ToString("yyyy-MM-dd")";
    var IsEnableMinimalistMode = 0;
    var ControlPicMustUpload = ""; //相关图片必传控制配置
    $(function () {
        $.ajax({
            type: "get",
            url: "../../HiddenTroubleManage/HTBaseInfo/IsEnableMinimalistMode",
            success: function (data) {
                //启用极简模式
                if (!!parseInt(data)) {
                    IsEnableMinimalistMode = parseInt(data);
                    $(".tab0").remove();
                    $(".tab1").css("display", "");
                    MinimalistInit(); //极简版本
                    $(".hid").css("display", "none");
                }
                else { //专业版本
                    $(".tab1").remove();
                    $(".tab0").css("display", "");
                    initControl(); //电力版本
                }
            }
        });
    });


    //初始化控件
    function initControl() {
        $(".center-Panel").css({ "width": "100%", "height": ($(top.window).height() - 160) + "px", "padding-top": "38px" });
        //默认给当前时间
        $("#APPROVALDATE").val(curDate);

        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson",
            success: function (data) {
                IsEnable_RemoteEqu = data.IsEnable_RemoteEqu; //国电荥阳是否启用远程调用设备
                RelevancePersonRole = data.RelevancePersonRole; //整改责任单位关联角色
                kfdcOrgCode = data.KFDC_ORGCODE; //开封电厂编码
                IsEnableAccept = data.IsEnableAccept; //是否具有设置验收人的权限
                ControlPicMustUpload = data.ControlPicMustUpload; //相关图片必传控制
                if (IsEnableAccept > 0) {
                    $("#ACCEPTPERSONNAME").attr("disabled", "disabled");
                    $("#ACCEPTDEPARTNAME").attr("disabled", "disabled");
                    $("#ACCEPTDATE").attr("disabled", "disabled");

                    $("#ACCEPTPERSONNAME").val("");
                    $("#ACCEPTPERSON").val("");
                    $("#ACCEPTDEPARTNAME").val("");
                    $("#ACCEPTDEPARTCODE").val("");
                }
                var IsDisable_MajorClassify = data.IsDisable_MajorClassify;//是否禁用专业分类
                if (IsDisable_MajorClassify > 0) {
                    $(".majorTr td:eq(0)").css("display", "none");
                    $(".majorTr td:eq(1)").css("display", "none");
                    $("#MAJORCLASSIFY").removeAttr("isvalid");
                    data.MajorClassify = [];
                }

                //删除对象
                var CheckTypeData = new Array();
                for (var i = 0; i < data.CheckType.length; i++) {
                    if (data.CheckType[i].ItemName.indexOf('其他安全检查') < 0) {
                        CheckTypeData.push(data.CheckType[i]);
                    }
                }
                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: CheckTypeData
                });

                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank,
                });

                //隐患专业分类 //隐患分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    height: "200px",
                    data: data.MajorClassify
                });

                //隐患类型
                $("#HIDTYPE").ComboBoxTree({
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetHiddenTypeDataJson",
                    description: "==请选择==",
                    allowSearch: false
                });

