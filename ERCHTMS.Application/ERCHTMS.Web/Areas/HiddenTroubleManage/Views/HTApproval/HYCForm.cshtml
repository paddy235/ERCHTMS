            });
        });

        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson",
            success: function (data) {
                //删除对象
                var CheckTypeData = new Array();
                for (var i = 0; i < data.CheckType.length; i++) {
                    if (data.CheckType[i].ItemName.indexOf('其他安全检查') < 0) {
                        CheckTypeData.push(data.CheckType[i]);
                    }
                }
                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: CheckTypeData
                });
                //隐患类型
                $("#HIDTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidType
                });
                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank,
                });

                //隐患专业分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.MajorClassify,
                });

                //所属单位
                $("#HIDDEPARTNAME").ComboBox({
                    id: "DepartmentId",
                    text: "FullName",
                    description: "===请选择===",
                    allowSearch: false,
                    data: data.DeptData
                });
            }
        });


        //2018-06-15 调整
        if ($("#HIDRANK")[0].innerText.indexOf("重大") < 0) {
            //隐藏重大隐患填项
            for (var i = 14; i <= 19; i++) {
                $(".form:eq(1) tr:eq(" + i + ")").css("display", "none");
                $(".form:eq(1) tr:eq(" + i + ") td").each(function (ele, index) {
                    $(this).css("display", "none");
                });
            }
        }

        //判断是否评估通过         //2018-06-15 调整
        var approvalVal = $("input[name='APPROVALRESULT']:checked").val();
        if (approvalVal == "1") {
            $(".form:eq(0) tr:eq(2)").css("display", "none");
            $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
                $(this).css("display", "none");
            });
        }

        //评估是否通过验证         //2018-06-15 调整
        $("input[name='APPROVALRESULT']").click(function () {
            var checkValue = $(this).val();
            //评估通过
            if (checkValue == "1") {
                $(".form:eq(0) tr:eq(2)").css("display", "none");
                $(".form:eq(0) tr:eq(2) td").each(function (ele, index) {
