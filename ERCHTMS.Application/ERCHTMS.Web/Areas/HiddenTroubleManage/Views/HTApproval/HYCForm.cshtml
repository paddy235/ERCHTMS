                    else {
                        $("#CHANGEDUTYDEPARTNAME").removeAttr("isvalid");
                        $("#CHANGEPERSONNAME").removeAttr("isvalid");
                        $("#CHANGEDEADINE").removeAttr("isvalid");
                        $("#PLANMANAGECAPITAL").removeAttr("isvalid");
                        $(".form:eq(2) tr:eq(0) span").remove(); //整改责任单位
                        $(".form:eq(2) tr:eq(1) span").remove(); //整改责任人
                        $(".form:eq(2) tr:eq(2) span").remove(); //整改截止时间  计划治理资金(元)
                    }

                    $.ajax({
                        data: { rankname: rankname, submittype: "制定提交", workflow: "隐患评估", endflow: "制定整改计划", mark: "厂级隐患排查" },
                        type: "post",
                        url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuthOfGDXJ",
                        success: function (data) {
                           
                            if (!!data) {
                                //如果具有直接到整改的权限，则必填项增加进来，反之则不加
                                if (data == "1") {
                                    $("#CHANGEDUTYDEPARTNAME").attr("isvalid", "yes");
                                    $(".form:eq(2) tr:eq(0) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");  //整改责任单位
                                }
                                isself = data;
                            }
                            SafetyUserControl();
                        }
                    });

                }
            }
        });
    }

