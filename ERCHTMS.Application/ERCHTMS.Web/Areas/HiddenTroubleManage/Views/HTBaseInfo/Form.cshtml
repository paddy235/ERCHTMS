    function CommonMethod()
    {
        //登记
        $("#btn_Save").click(function () {
            AcceptClick();
        });

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction();
        });

        //选择已有的隐患数据
        $("#ChooseHaveCheck").click(function () {
            dialogOpen({
                id: 'ChosseForm',
                title: '选择隐患',
                url: '/HiddenTroubleManage/HTBaseInfo/DetailList',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    var data = new Array("HIDDEPARTNAME", "HIDDESCRIBE", "CHECKMANNAME", "CHECKMAN", "CHECKDEPARTNAME", "CHECKDEPARTID",
                        "CHECKTYPE", "CHECKDATE", "HIDRANK", "HIDTYPE", "CHANGEPERSONNAME", "CHANGEPERSON",
                        "CHANGEDUTYTEL", "CHANGEDUTYDEPARTNAME", "CHANGEDUTYDEPARTCODE", "CHANGEDEADINENUM",
                         "PLANMANAGECAPITAL", "CHANGEMEASURE", "ACCEPTPERSONNAME", "ACCEPTPERSON", "ACCEPTDEPARTNAME", "ACCEPTDEPARTCODE", "HIDPOINT", "HIDPOINTNAME");
                    top.document.getElementById(iframeId).contentWindow.GetObjectData(window.document.body, data);
                }
            });
        });

        //隐患级别标准库
        $("#HidStandard").click(function () {
            dialogOpen({
                id: 'HidStandardForm',
                title: '查看隐患级别标准',
                url: '/HiddenTroubleManage/HTBaseInfo/WarningDetail',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: []
            });
        });


        //焦点设置到编辑框，移除提示
        $(".form-control").focus(function () {
            $(".poptip").remove();
        });

        //选择隐患类别 (2018-06-14调整)
        $("#HIDTYPE").change(function () {
            var curTextbox = $(this).text();
            if (curTextbox.indexOf("设备设施") >= 0) {
                $(".form:eq(0) tr:eq(5)").css("display", "");
            }
            else {
                $(".form:eq(0) tr:eq(5)").css("display", "none");
            }

            $(".form:eq(0) tr:eq(5) input").each(function (index, ele) {
                $(this).val("");
                $(this).removeAttr("disabled");
            });


            var rankname = $("#HIDRANK").ComboBoxGetText();
            var majorclassify = $("#MAJORCLASSIFY").ComboBoxGetValue();
            //隐患类别
            var hidtype = $("#HIDTYPE").ComboBoxGetValue();
            $.ajax({
                data: { rankname: rankname, workflow: "隐患登记", endflow: "", mark: "厂级隐患排查", submittype: "上报", arg1: majorclassify, arg3: hidtype, arg4: $("#HIDBMID").val(), businessid: keyValue },
                type: "post",
                url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                success: function (data) {
                    if (!!data) {
                        roleCard = data; //角色卡  1为有评估权限的人，0为没有
                        $("input[name='UPSUBMIT']:eq(1)").prop("checked", "checked");
                        //拥有上报权限
                        if (roleCard == 1) {
                            $("input[name='UPSUBMIT']").each(function (index, ele) {
                                $(this).removeAttr("disabled");
                            });
                        }
                        else { //没有上报权限
                            $("input[name='UPSUBMIT']").each(function (index, ele) {
                                $(this).attr("disabled", "disabled");
                            });
                        }
                        ControlWriteAndNotWrite();
                    }
                }
            });

        });

        //是否上报控制必填项
        $("input[name='UPSUBMIT']").change(function () {
            ControlUpSubmit();
        });

        //是否指定整改责任人
        $("input[name='ISAPPOINT']").change(function () {
            var isappoint = $("input[name='ISAPPOINT']:checked").val();
            //指定
            if (isappoint == "1") {
                //整改责任负责人隐藏
                $("#CHARGEDEPTNAME").removeAttr("isvalid");
                $("#CHARGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(1) tr:eq(1)").css("display", "none");
                //显示整改责任人
                $("#CHANGEPERSONNAME").attr("isvalid", "yes");
                $(".form:eq(1) tr:eq(2)").css("display", "");
                $(".form:eq(1) tr:eq(3)").css("display", "");
            }
            else {
                //显示整改责任负责人
                $("#CHARGEDEPTNAME").attr("isvalid", "yes");
                $("#CHARGEPERSONNAME").attr("isvalid", "yes");
                $(".form:eq(1) tr:eq(1)").css("display", "");
                //整改责任人隐藏
                $("#CHANGEPERSONNAME").removeAttr("isvalid");
                $(".form:eq(1) tr:eq(2)").css("display", "none");
                $(".form:eq(1) tr:eq(3)").css("display", "none");

                $("#CHANGEPERSONNAME").val("");
                $("#CHANGEPERSON").val("");
                $("#CHANGEDUTYDEPARTNAME").val("");
                $("#CHANGEDUTYDEPARTCODE").val("");
            }
            ControlUpSubmit();
        });


        //(2018-06-14调整)
        $("#HIDRANK").change(function (ele) {
            var rankName = $(ele.target).attr("data-text");
            var rankVal = $(ele.target).attr("data-value");
            if (rankName.indexOf("重大") >= 0) {
                for (var i = 15; i <= 20; i++) {
                    $(".form:eq(0) tr:eq(" + i + ")").css("display", "");
                }
            }
            else {
                for (var i = 15; i <= 20; i++) {
                    $(".form:eq(0) tr:eq(" + i + ")").css("display", "none");
                }
            }

            var majorclassify = $("#MAJORCLASSIFY").ComboBoxGetValue();
            //隐患类别
            var hidtype = $("#HIDTYPE").ComboBoxGetValue();

            $.ajax({
                data: { rankname: rankName, workflow: "隐患登记", endflow: "", mark: "厂级隐患排查", submittype: "上报", arg1: majorclassify, arg3: hidtype, arg4: $("#HIDBMID").val(), businessid: keyValue },
                type: "post",
                url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                success: function (data) {
                    if (!!data) {
                        roleCard = data; //角色卡  1为有评估权限的人，0为没有

                        $("input[name='UPSUBMIT']:eq(1)").prop("checked", "checked");
                        //拥有上报权限
                        if (roleCard == 1) {
                            $("input[name='UPSUBMIT']").each(function (index, ele) {
                                $(this).removeAttr("disabled");
                            });
                        }
                        else { //没有上报权限
                            $("input[name='UPSUBMIT']").each(function (index, ele) {
                                $(this).attr("disabled", "disabled");
                            });
                        }
                        ControlWriteAndNotWrite();
                    }
                }
            });

        });

    }

    //评估列表
    function GetApprovalGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#approvalGridTable');
        $gridTable.jqGrid({
            url: "../../HiddenTroubleManage/HTApproval/GetListJson?hideCode=" + $("#HIDCODE").val(),
            datatype: "json",
            height: $(window).height() / 2 - 200,
            autowidth: true,
            colModel: [
                {
                    label: '操作', name: 'ID', index: 'ID', width: 120, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a href=javascript:Detail('" + rowObject.ID + "')  title='查看'><i class='fa fa-eye'></i></a>";
                        return html;
                    }
                },
                { label: '评估人', name: 'APPROVALPERSONNAME', index: 'APPROVALPERSONNAME', width: 120, align: 'center' },
                { label: '评估单位', name: 'APPROVALDEPARTNAME', index: 'APPROVALDEPARTNAME', width: 150, align: 'center' },
                {
                    label: '评估情况', name: 'APPROVALRESULT', index: 'APPROVALRESULT', width: 150, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = rowObject.APPROVALRESULT == "0" ? "不通过" : "通过";
                        return html;
                    }
                },
                {
                    label: '评估时间', name: 'APPROVALDATE', index: 'APPROVALDATE', width: 150, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = formatDate(cellvalue, 'yyyy-MM-dd');
                        return html;
                    }
                }
            ],
            pager: false,
            rowNum: "20",
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            ondblClickRow: function (id) {

            }
        });
    }

    //评估详情
    function Detail(keyValue) {
        dialogOpen({
            id: 'DetailForm',
            title: '隐患评估详情',
            url: '/HiddenTroubleManage/HTApproval/Detail?keyValue=' + keyValue,
            width: ($(top.window).width() - 200) + "px",
            height: ($(top.window).height() - 200) + "px",
            btn: null
        });
    }

    //初始化控件(电力版本)
    function initControl() {

        //从设备设施过来的
        $("#HIDDESCRIBE").val(hiddescribe);
        $("#CHANGEMEASURE").val(changemeasure);
        //验证当前是否存在flash插件
        var fls = flashChecker();
        var s = "";
        if (!fls.f) {
            var html = "<a href='http://get.adobe.com/cn/flashplayer/' style='text-decoration:none;color:red;' target='_bank'>您的浏览器未安装Flash插件,无法支持文件上传功能,请下载安装!</a>";
            $("#HidMessage").html(html);
        }

        $(".center-Panel").css({ "width": "100%", "height": ($(top.window).height() - 160) + "px", "padding-top": "38px" });
        $("#RISKNAME").val(riskname);


        //设备设施默认隐藏 (2018-06-14调整)
        $(".form:eq(0) tr:eq(5)").css("display", "none");
        $("#DEVICENAME").removeAttr("isvalid");
        $("#DEVICECODE").removeAttr("isvalid");

        // 不上报
        $("input[name='UPSUBMIT']").each(function (index, ele) {
            $(this).attr("disabled", "disabled");
        });
        $("input[name='UPSUBMIT']:eq(1)").prop("checked", "checked");
        //是否挂牌督办
        $("input[name='ISGETAFTER']:eq(1)").prop("checked", "checked");
        //初始化组件
        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson?vdate=" + new Date(),
            success: function (data) {
                RelevancePersonRole = data.RelevancePersonRole; //整改责任单位关联角色
                IsEnable_RemoteEqu = data.IsEnable_RemoteEqu; //国电荥阳
                ControlPicMustUpload = data.ControlPicMustUpload; //相关图片必传控制
                IsEnableAccept = data.IsEnableAccept; //是否具有设置验收人的权限
                if (IsEnableAccept > 0) {
                    $("#ACCEPTPERSONNAME").attr("disabled", "disabled");
                    $("#ACCEPTDEPARTNAME").attr("disabled", "disabled");
                    $("#ACCEPTDATE").attr("disabled", "disabled");
                    $("#ACCEPTPERSONNAME").val("");
                    $("#ACCEPTPERSON").val("");
                    $("#ACCEPTDEPARTNAME").val("");
                    $("#ACCEPTDEPARTCODE").val("");
                }
                var IsDisable_MajorClassify = data.IsDisable_MajorClassify;//是否禁用专业分类
                if (IsDisable_MajorClassify > 0)
                {
                    $(".majorTr td:eq(0)").css("display", "none");
                    $(".majorTr td:eq(1)").css("display", "none");
                    $("#MAJORCLASSIFY").removeAttr("isvalid");
                    data.MajorClassify = [];
                }
                kfdcOrgCode = data.KFDC_ORGCODE; //开封电厂编码
                //排查人
                $("#CHECKMANNAME").val(data.User.UserName);
                $("#CHECKMAN").val(data.User.UserId);
                //排查单位
                $("#CHECKDEPARTNAME").val(data.User.DeptName);
                $("#CHECKDEPARTID").val(data.User.DeptCode);
                //隐患图片
                $("#HIDPHOTO").val(data.HidPhoto);
                //隐患编码
                $("#HIDCODE").val($.trim(data.HidCode));
                //删除对象
                var CheckTypeData = new Array();
                for (var i = 0; i < data.CheckType.length; i++) {
                    if (data.CheckType[i].ItemName.indexOf('其他安全检查') < 0) {
                        CheckTypeData.push(data.CheckType[i]);
                    }
                }
                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: CheckTypeData
                });
                $("#CHECKTYPE").ComboBoxSetText("日常安全检查");

                //隐患专业分类 //隐患分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    height: "200px",
                    data: data.MajorClassify
                });

                //专业
                $("#MAJORCLASSIFY").bind("change",
                    function () {
                        var rankname = $("#HIDRANK").ComboBoxGetText();
                        var majorclassify = $(this).ComboBoxGetValue();
                        //隐患类别
                        var hidtype = $("#HIDTYPE").ComboBoxGetValue();
                        $.ajax({
                            data: { rankname: rankname, workflow: "隐患登记", endflow: "", mark: "厂级隐患排查", submittype: "上报", arg1: majorclassify, arg3: hidtype, arg4: $("#HIDBMID").val(), businessid: keyValue },
                            type: "post",
                            url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                            success: function (data) {

                                if (!!data) {
                                    roleCard = data; //角色卡  1为有评估权限的人，0为没有
                                    //拥有上报权限
                                    if (roleCard == 1) {
                                        $("input[name='UPSUBMIT']").each(function (index, ele) {
                                            //非查看状态下
                                            if (actiontype != "view") {
                                                $(this).removeAttr("disabled");
                                            }
                                        });
                                    }
                                    else {
                                        $("input[name='UPSUBMIT']:eq(1)").prop("checked", "checked"); // 不上报
                                        //没有上报权限
                                        $("input[name='UPSUBMIT']").each(function (index, ele) {
                                            $(this).attr("disabled", "disabled");
                                        });

                                    }
                                    ControlWriteAndNotWrite();
                                }
                            }
                        });
                    });

                //隐患类型
                $("#HIDTYPE").ComboBoxTree({
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetHiddenTypeDataJson",
                    description: "==请选择==",
                    allowSearch: false
                });

                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank
                });
                if (!!data.HidRank) {
                    $(data.HidRank).each(function (i, ele) {
                        if (ele.ItemName.indexOf("一般隐患") >= 0) {
                            $("#HIDRANK").ComboBoxSetText(ele.ItemName);
                            return false;
                        }
                    });
                }

                //所属单位
                $("#HIDDEPARTNAME").ComboBox({
                    id: "DepartmentId",
                    text: "FullName",
                    description: "===请选择===",
                    allowSearch: false,
                    data: data.DeptData
                });
                //当前用户所属单位
                $("#HIDDEPARTNAME").ComboBoxSetValue(curUserOrg);

                //初始化流程默认设置
                var rankname = $("#HIDRANK").ComboBoxGetText();
                var majorclassify = $("#MAJORCLASSIFY").ComboBoxGetValue();
                //隐患类别
                var hidtype = $("#HIDTYPE").ComboBoxGetValue();
                $.ajax({
                    data: { rankname: rankname, workflow: "隐患登记", endflow: "", mark: "厂级隐患排查", submittype: "上报", arg1: majorclassify, arg3: hidtype, arg4: $("#HIDBMID").val(), businessid: keyValue },
                    type: "post",
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuth",
                    success: function (data) {

                        if (!!data) {
                            roleCard = data; //角色卡  1为有评估权限的人，0为没有
                            //拥有上报权限
                            if (roleCard == 1) {
                                $("input[name='UPSUBMIT']").each(function (index, ele) {
                                    //非查看状态下
                                    if (actiontype != "view") {
                                        $(this).removeAttr("disabled");
                                    }
                                });
                            }
                            else { //没有上报权限
                                $("input[name='UPSUBMIT']").each(function (index, ele) {
                                    $(this).attr("disabled", "disabled");
                                });
                            }
                            ControlWriteAndNotWrite();
                        }
                    }
                });


                //默认隐藏重大隐患项目       //(2018-06-14调整)
                for (var i = 15; i <= 20; i++) {
                    $(".form:eq(0) tr:eq(" + i + ")").css("display", "none");
                }

                //设置默认项目
                $.ajax({
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetDefaultOptionsList",
                    type: "GET",
                    async: false,
                    dataType: "json",
                    success: function (result) {
                        if (!!result) {
                            $(result).each(function (index, ele) {
                                var eleid = ele.DEFAULTMARK;
                                var eleval = ele.DEFAULTKEY;
                                var elename = ele.DEFAULTNAME;
                                switch (eleid.trim()) {
                                    case "MAJORCLASSIFY":
                                        if (!!eleval) { $("#MAJORCLASSIFY").ComboBoxSetValue(eleval); }
                                        break;
                                    case "HIDTYPE":
                                        if (!!eleval) {
                                            $("#HIDTYPE").ComboBoxSetValue(eleval);
                                            //当前隐患类别为设备设施的时候 (2018-06-14调整)
                                            var curTextbox = $("#HIDTYPE").text();
                                            if (curTextbox.indexOf("设备设施") >= 0) {
                                                $(".form:eq(0) tr:eq(5)").css("display", "");
                                            }
                                            else {
                                                $(".form:eq(0) tr:eq(5)").css("display", "none");
                                            }
                                        }
                                        break;
                                    case "HIDPOINTNAME":
                                        if (!!eleval) { $("#HIDPOINT").val(eleval); }
                                        if (!!elename) { $("#HIDPOINTNAME").val(elename); }
                                        break;
                                }
                            });
                        }
                    }
                });
            }
        });

  

