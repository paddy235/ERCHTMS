    //提交流程
    function SubmitAction() {
        if (!$('#form1').Validform()) {
            return false;
        }
 
        var subCount = 0;
        if (!!ControlPicMustUpload) {
            var array = new Array();
            if (ControlPicMustUpload.indexOf("HIDPHOTO") >= 0) {
                array.push({ key: "HIDPHOTO", value: $("#HIDPHOTO").val() });
            }
            if (ControlPicMustUpload.indexOf("HIDCHANGEPHOTO") >= 0) {
                array.push({ key: "HIDCHANGEPHOTO", value: $("#HIDCHANGEPHOTO").val() });
            }
            if (ControlPicMustUpload.indexOf("ACCEPTPHOTO") >= 0) {
                array.push({ key: "ACCEPTPHOTO", value: $("#ACCEPTPHOTO").val() });
            }
            if (array.length > 0) {
                //绑定附件
                $.ajax({
                    url: '../../PublicInfoManage/ResourceFile/GetFilesByJsonData',
                    data: { jsonData: JSON.stringify(array) },
                    type: "post",
                    success: function (data) {
                        var yesSubmit = "";
                        if (!!data) {
                            var result = eval("(" + data + ")");
                            $(result).each(function (i, ele) {
                                var key = ele.key;
                                switch (key) {
                                    case "HIDPHOTO":
                                        yesSubmit += parseInt(ele.value) > 0 ? "1" : ""; //隐患图片
                                        break;
                                    case "HIDCHANGEPHOTO":
                                        yesSubmit += parseInt(ele.value) > 0 ? "2" : ""; //隐患整改图片
                                        break;
                                    case "ACCEPTPHOTO":
                                        yesSubmit += parseInt(ele.value) > 0 ? "3" : ""; //隐患验收图片
                                        break;
                                }
                            });

                            var errorMsg = "请上传";
                            if (ControlPicMustUpload.indexOf("HIDPHOTO") >= 0) {
                                if (yesSubmit.indexOf("1") >= 0) {
                                    subCount += 1;
                                }
                                else {
                                    errorMsg += "隐患图片,";
                                }
                            }
                            if (ControlPicMustUpload.indexOf("HIDCHANGEPHOTO") >= 0) {
                                if (yesSubmit.indexOf("2") >= 0) {
                                    subCount += 1;
                                }
                                else {
                                    errorMsg += "隐患整改图片,";
                                }
                            }
                            if (ControlPicMustUpload.indexOf("ACCEPTPHOTO") >= 0) {
                                if (yesSubmit.indexOf("3") >= 0) {
                                    subCount += 1;
                                }
                                else {
                                    errorMsg += "隐患验收图片,";
                                }
                            }
                            if (subCount == result.length) {
                                SubmitData();
                            }
                            else {
                                if (subCount < result.length) {
                                    errorMsg = errorMsg.substring(0, errorMsg.length - 1);
                                }
                                dialogMsg(errorMsg, 0);
                            }
                        }
                    }
                });
            }
        }
        else
        {
            SubmitData();
        }
    }

    function SubmitData()
    {
        var postData = $("#form1").formSerialize(keyValue);
        //APPROVALRESULT
        var approvalVal = $("input[name='APPROVALRESULT']:checked").val();
        postData["APPROVALRESULT"] = approvalVal;
        //CHANGERESULT
        var changeResultVal = $("input[name='CHANGERESULT']:checked").val();
        postData["CHANGERESULT"] = changeResultVal;
        //ACCEPTSTATUS
        var acceptStatusVal = $("input[name='ACCEPTSTATUS']:checked").val();
        postData["ACCEPTSTATUS"] = acceptStatusVal;

        //所属单位
        postData["HIDDEPART"] = $("#HIDDEPARTNAME").ComboBoxGetValue();
        postData["HIDDEPARTNAME"] = $("#HIDDEPARTNAME").ComboBoxGetText();

        $("#btn_Submit").attr("disabled", "disabled");

        $.SaveForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/OneSubmitForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }

    //上传文件
    function uploadify(objId) {
        var folderId = "";
        var fileType = 'bmp,ico,gif,jpeg,jpg,png,psd';
        var isImage = true;
        switch (objId) {
            case "uploader_hidphoto": //隐患图片
                folderId = $("#HIDPHOTO").val();
                if (!folderId) {
                    folderId = "@Guid.NewGuid().ToString()";
                    $("#HIDPHOTO").val(folderId);
                }
                if (actiontype != "view") {
                    file_upload.init({
                        keyValue: folderId, extensions: fileType, isImage: isImage, el: '#uploader_hidphoto'
                    });
                }
                break;
            case "uploader_hidchangephoto": //整改图片
                folderId = $("#HIDCHANGEPHOTO").val();
                if (!folderId) {
                    folderId = "@Guid.NewGuid().ToString()";
                    $("#HIDCHANGEPHOTO").val(folderId);
                }
                if (actiontype != "view") {
                    file_upload.init({
                        keyValue: folderId, extensions: fileType, isImage: isImage, el: '#uploader_hidchangephoto'
                    });
                }
                break;
            case "uploader_acceptphoto":  //验收图片
                folderId = $("#ACCEPTPHOTO").val();
                if (!folderId) {
                    folderId = "@Guid.NewGuid().ToString()";
                    $("#ACCEPTPHOTO").val(folderId);
                }
                if (actiontype != "view") {
                    file_upload.init({
                        keyValue: folderId, extensions: fileType, isImage: isImage, el: '#uploader_acceptphoto'
                    });
                }
                break;
            case "uploader_attachment":  //整改附件
                folderId = $("#ATTACHMENT").val();
                if (!folderId) {
                    folderId = "@Guid.NewGuid().ToString()";
                    $("#ATTACHMENT").val(folderId);
                }
                isImage = false;
                fileType = 'bmp,ico,gif,jpeg,jpg,png,psd,zip,rar,doc,docx,xls,xlsx,pdf,txt,chm';
                if (actiontype != "view") {
                    file_upload.init({
                        keyValue: folderId, extensions: fileType, isImage: isImage, el: '#uploader_attachment'
                    });
                }
                break;
        }

        $.ajax({
            url: '../../PublicInfoManage/ResourceFile/GetFilesByRecId',
            data: { recId: folderId },
            type: "post",
            success: function (data) {
                var isdelete = actiontype == "view" ? false : true;
                var objdata = eval("(" + data + ")"); //转化为对象类型
                file_upload.bind(objdata, isdelete, isImage, folderId, objId);
            }
        });
    }

