@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/scripts/business/Common.js" type="text/javascript"></script>
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>
<script>
    var keyValue = request("keyValue");
    $(function () { 
        keyValue = "yh" + "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";
        //附件
        file_upload.init({
            keyValue: keyValue, extensions: 'doc,docx,pdf,jpg,gif,png,jpeg,rar,zip', isImage: false, el: '#uploader',fileNumLimit:1
        });
        var isEdit = false;
        if (top.currUserRoleName.indexOf("公司领导") >= 0 || top.currUserRoleName.indexOf("集团管理员") >= 0 || top.currUserRoleName.indexOf("省级管理员") >= 0 || top.currUserRoleName.indexOf("公司管理员") >= 0 || top.currUserRoleName.indexOf("厂级") >= 0 || IsAdmin()) {
            isEdit = true;
        }
        file_upload.bindFiles(isEdit, false, keyValue, "uploader", isEdit);
    });

</script>

<div class="center-Panel">
    <div style="margin-top: 5px;"></div>
    <div class="panel panel-default" style="height: 350px;width: 950px;">
        <div class="panel-heading">
            <strong>&nbsp;&nbsp;</strong>
        </div>
        <div class="panel-body" id="uploaddiv">
            <div id="title">流程说明：</div>
            <div id="uploader" class="uploader" style="border:1px solid #ccc; margin-top:15px; min-height:250px; margin-bottom:10px;">
                <div class="queueList">
                    <div id="uploaderFile1" class="placeholder">
                        <div class="filePicker" style="margin-left:25px; margin-top:10px;"></div>
                    </div>
                </div>
                <div class="statusBar" style="display:none;">
                    <div class="progress">
                        <span class="text">0%</span>
                        <span class="percentage"></span>
                    </div>
                    <div class="info"></div>
                </div>
            </div>
        </div>

    </div>
</div>

