@{;
ViewBag.Title = "表单页面";
Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/scripts/business/Common.js" type="text/javascript"></script>
<!--webUploader文件上传组件-->
<link href="~/content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/content/scripts/business/fileupload.js"></script>

<script>
    var keyValue = request("keyValue"); //主键 隐患信息主键
    var safetyCheckObjectID = request("saftycheckdatarecordid");  //主键 安全检查对象
    var relevanceId = request("relevanceId");  // 关联程序ID
    var relevanceType = request("relevanceType");  // 关联程序类型
    var riskname = request("riskname"); //风险名称
    var actiontype = request("actiontype"); //操作动作
    var ctype = request("ctype"); //检查类型
    var districtid = request("districtid"); //隐患区域id
    var districname = request("districname"); //隐患区域名称
    var checkcontent = request("checkcontent");//检查内容
    var riskdescribe = request("riskdescribe");//风险描述
    var actionDo = request("actionDo"); // 操作动作
    var deviceid = request("deviceid"); // 设备id
    var devicecode = request("devicecode"); // 设备编号
    var devicename = request("devicename"); // 设备名称
    var hiddescribe = request("hiddescribe"); //事故隐患描述(简题)
    var changemeasure = request("changemeasure"); //整改措施
    var roleCard = -1;
    var curUserRole = "@ERCHTMS.Code.OperatorProvider.Provider.Current().RoleName";
    var curUserOrg = "@ERCHTMS.Code.OperatorProvider.Provider.Current().OrganizeId";

    //初始方法
    $(function () {
        //从设备设施过来的
        $("#HIDDESCRIBE").val(hiddescribe);
        $("#CHANGEMEASURE").val(changemeasure);

        //验证当前是否存在flash插件
        var fls = flashChecker();
        var s = "";
        if (!fls.f) {
            var html = "<a href='http://get.adobe.com/cn/flashplayer/' style='text-decoration:none;color:red;' target='_bank'>您的浏览器未安装Flash插件,无法支持文件上传功能,请下载安装!</a>";
            $("#HidMessage").html(html);
        }

        $(".center-Panel").css({ "width": "100%", "height": ($(top.window).height() - 160) + "px", "padding-top": "38px" });
        $("#RISKNAME").val(riskname);

        initControl();


        //设备传值不为空
        if (!!devicename) {
            devicename = decodeURIComponent(devicename);
            //设备设施
            $(".form:eq(0) tr:eq(5)").css("display", "");

            $("#DEVICEID").val(deviceid);
            $("#DEVICECODE").val(devicecode);
            $("#DEVICENAME").val(devicename);
            var chooseDid = $("#HIDTYPE-option ul li:eq(3)").attr("data-value");
            $("#HIDTYPE").ComboBoxSetValue(chooseDid);
            $("#HIDTYPE").attr("disabled", "disabled");
            $("#DEVICECODE").attr("disabled", "disabled");
            $("#DEVICENAME").attr("disabled", "disabled");
        }

        GetApprovalGrid(); //评估评估信息

        //隐患图片
        var curHidPhoto = $("#HIDPHOTO").val();  //
        var isdelete = actiontype == "view" ? false : true;
        if (!curHidPhoto) {
            curHidPhoto = "@Guid.NewGuid().ToString()";
            $("#HIDPHOTO").val(curHidPhoto);
        }
        if (actiontype != "view") {
            file_upload.init({
                keyValue: curHidPhoto, extensions: 'jpg,gif,bmp,png', isImage: true, el: '#uploader'
            });
        }
        //绑定附件
        $.ajax({
            url: '../../PublicInfoManage/ResourceFile/GetFilesByRecId',
            data: { recId: curHidPhoto },
            type: "post",
            success: function (data) {
                var objdata = eval("(" + data + ")"); //转化为对象类型
                file_upload.bind(objdata, isdelete, true, curHidPhoto, "uploader");
            }
        });

        //查看下
        if (actiontype == "view") {
            $("#btn_Save").attr("disabled", "disabled");
            $("#btn_Submit").attr("disabled", "disabled");
            $("#HidStandard").attr("disabled", "disabled");
            $("#HidStandardLib").attr("disabled", "disabled");
            $("#ChooseHaveCheck").attr("disabled", "disabled");
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("disabled", "disabled");
            });
            $("#form1 input,textarea , .ui-select, .ui-select-text , .ui-select-option-content").each(function (ele, index) {
                $(this).attr("readonly", "readonly");
            });
        }

        if (!!actionDo && actionDo == "CheckIn") {
            $("#btn_Submit").css("display", "none");
        }

        //焦点设置到编辑框，移除提示
        $(".form-control").focus(function () {
            $(".poptip").remove();
        });

        //选择隐患类别 (2018-06-14调整)
        $("#HIDTYPE").change(function () {
            var curTextbox = $(this).text();
            if (curTextbox.indexOf("设备设施") >= 0) {
                $(".form:eq(0) tr:eq(5)").css("display", "");
            }
            else {
                $(".form:eq(0) tr:eq(5)").css("display", "none");
            }

            $(".form:eq(0) tr:eq(5) input").each(function (index, ele) {
                $(this).val("");
                $(this).removeAttr("disabled");
            });
        });

        //是否本部门整改切换
        $("input[name='ISSELFCHANGE']").change(function () {
            $("#CHANGEDUTYDEPARTNAME").val("");
            $("#CHANGEDUTYDEPARTCODE").val("");
            $("#CHANGEDUTYDEPARTID").val("");
            $("#CHANGEPERSONNAME").val("");
            $("#CHANGEPERSON").val("");
            $("#CHANGEDUTYTEL").val("");
            //根据是否本部门整改来判定必填项控制
            ControlWriteForGdxj();
        });

        //非省级用户
        if (curUserRole.indexOf("省级用户") < 0) {
            $(".form:eq(0) tr:eq(2)").css("display", "none");
        }
        //公司级用户
        if (curUserRole.indexOf("公司级用户") >= 0) {
            $("input[name='ISSELFCHANGE']:eq(1)").prop("checked", "checked"); // 非本部门整改
        }

        //选择人员
        $("#CHANGEPERSONNAME").click(function () {
            var changedutydepartname = $("#CHANGEDUTYDEPARTNAME").val();
            if (!!changedutydepartname) {
                selectDifferentUser($('#CHANGEDUTYDEPARTID').val(), 0, 19, window.document.body, 'CHANGEPERSONNAME,,CHANGEPERSON,,CHANGEDUTYDEPARTCODE,CHANGEDUTYDEPARTNAME,CHANGEDUTYTEL', 'ACCEPTPERSON', '验收人');
            }
            else {
                dialogMsg('请选择整改责任单位!', 0);
            }
        });
    });


    //评估列表
    function GetApprovalGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#approvalGridTable');
        $gridTable.jqGrid({
            url: "../../HiddenTroubleManage/HTApproval/GetListJson?hideCode=" + $("#HIDCODE").val(),
            datatype: "json",
            height: $(window).height() / 2 - 200,
            autowidth: true,
            colModel: [
                {
                    label: '操作', name: 'ID', index: 'ID', width: 120, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a href=javascript:Detail('" + rowObject.ID + "')  title='查看'><i class='fa fa-eye'></i></a>";
                        return html;
                    }
                },
                { label: '评估人', name: 'APPROVALPERSONNAME', index: 'APPROVALPERSONNAME', width: 120, align: 'center' },
                { label: '评估单位', name: 'APPROVALDEPARTNAME', index: 'APPROVALDEPARTNAME', width: 150, align: 'center' },
                {
                    label: '评估情况', name: 'APPROVALRESULT', index: 'APPROVALRESULT', width: 150, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = rowObject.APPROVALRESULT == "0" ? "不通过" : "通过";
                        return html;
                    }
                },
                {
                    label: '评估时间', name: 'APPROVALDATE', index: 'APPROVALDATE', width: 150, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = formatDate(cellvalue, 'yyyy-MM-dd');
                        return html;
                    }
                }
            ],
            pager: false,
            rowNum: "20",
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            ondblClickRow: function (id) {
            }
        });
    }

    //评估详情
    function Detail(keyValue) {
        dialogOpen({
            id: 'DetailForm',
            title: '隐患评估详情',
            url: '/HiddenTroubleManage/HTApproval/Detail?keyValue=' + keyValue,
            width: ($(top.window).width() - 200) + "px",
            height: ($(top.window).height() - 200) + "px",
            btn: null
        });
    }

    //初始化控件
    function initControl() {
        //设备设施默认隐藏 (2018-06-14调整)
        $(".form:eq(0) tr:eq(5)").css("display", "none");
        $("#DEVICENAME").removeAttr("isvalid");
        $("#DEVICECODE").removeAttr("isvalid");

        //安全检查项目ID
        if (!!safetyCheckObjectID) {
            $("#ChooseHaveCheck").css("display", "none");
            $("#SAFETYCHECKOBJECTID").val(safetyCheckObjectID);
            $("#HidStandardLib").css("display", "none");
            $("#HIDDEPARTNAME").attr("disabled", "disabled");
            $("#CHECKTYPE").attr("disabled", "disabled");
        }
        //区域
        if (!!districtid && !!districname) {
            $("#ChooseHaveCheck").css("display", "none");
            $("#HIDPOINT").val(districtid);
            $("#HIDPOINTNAME").val(districname);
            $("#HIDPOINT").prop("disabled", "disabled");
            $("#HIDPOINTNAME").prop("disabled", "disabled");
        }
        //风险描述
        if (!!riskdescribe) {
            riskdescribe = top.Details.risklength
            $("#HIDDESCRIBE").val(riskdescribe);
        }
        //检查内容
        if (!!checkcontent) {
            $("#CHANGEMEASURE").val(checkcontent); //检查内容填充
        }

        //登记
        $("#btn_Save").click(function () {
            AcceptClick();
        });

        //提交流程
        $("#btn_Submit").click(function () {
            SubmitAction('0');
        });


        //选择已有的隐患数据
        $("#ChooseHaveCheck").click(function () {
            dialogOpen({
                id: 'ChosseForm',
                title: '选择隐患',
                url: '/HiddenTroubleManage/HTBaseInfo/DetailList',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                callBack: function (iframeId) {
                    var data = new Array("HIDDEPARTNAME", "HIDDESCRIBE", "CHECKMANNAME", "CHECKMAN", "CHECKDEPARTNAME", "CHECKDEPARTID",
                        "CHECKTYPE", "CHECKDATE", "HIDRANK", "HIDTYPE", "CHANGEPERSONNAME", "CHANGEPERSON",
                        "CHANGEDUTYTEL", "CHANGEDUTYDEPARTNAME", "CHANGEDUTYDEPARTCODE", "CHANGEDEADINENUM",
                         "PLANMANAGECAPITAL", "CHANGEMEASURE", "ACCEPTPERSONNAME", "ACCEPTPERSON", "ACCEPTDEPARTNAME", "ACCEPTDEPARTCODE", "HIDPOINT", "HIDPOINTNAME");
                    top.document.getElementById(iframeId).contentWindow.GetObjectData(window.document.body, data);
                }
            });
        });

        //隐患级别标准库
        $("#HidStandard").click(function () {
            dialogOpen({
                id: 'HidStandardForm',
                title: '查看隐患级别标准',
                url: '/HiddenTroubleManage/HTBaseInfo/WarningDetail',
                width: ($(top.window).width() - 200) + "px",
                height: ($(top.window).height() - 100) + "px",
                btn: []
            });
        });

        //初始化组件
        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetInitDataJson?vdate=" + new Date(),
            success: function (data) {
                //排查人
                $("#CHECKMANNAME").val(data.User.UserName);
                $("#CHECKMAN").val(data.User.UserId);
                //排查单位
                $("#CHECKDEPARTNAME").val(data.User.DeptName);
                $("#CHECKDEPARTID").val(data.User.DeptCode);
                //隐患图片
                $("#HIDPHOTO").val(data.HidPhoto);
                //隐患编码
                $("#HIDCODE").val($.trim(data.HidCode));
                //删除对象
                var CheckTypeData = new Array();
                for (var i = 0; i < data.CheckType.length; i++) {
                    if (data.CheckType[i].ItemName.indexOf('其他安全检查') < 0) {
                        CheckTypeData.push(data.CheckType[i]);
                    }
                }
                //检查类型
                $("#CHECKTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: CheckTypeData
                });
                $("#CHECKTYPE").ComboBoxSetText("日常安全检查");

                //隐患类型
                $("#HIDTYPE").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidType
                });

                //隐患级别
                $("#HIDRANK").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.HidRank
                });
                $("#HIDRANK").ComboBoxSetText("一般隐患");

                //隐患专业分类
                $("#MAJORCLASSIFY").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "==请选择==",
                    allowSearch: false,
                    data: data.MajorClassify,
                });
                //所属单位
                $("#HIDDEPARTNAME").ComboBox({
                    id: "DepartmentId",
                    text: "FullName",
                    description: "===请选择===",
                    allowSearch: false,
                    data: data.DeptData
                });
                //当前用户所属单位
                $("#HIDDEPARTNAME").ComboBoxSetValue(curUserOrg);

                //默认隐藏重大隐患项目       //(2018-06-14调整)
                for (var i = 15; i <= 20; i++) {
                    $(".form:eq(0) tr:eq(" + i + ")").css("display", "none");
                    $(".form:eq(0) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).css("display", "none");
                    });
                }
            }
        });

        //排查日期
        var curDate = "@DateTime.Now.ToString("yyyy-MM-dd")";
        $("#CHECKDATE").val(curDate);

        //传递过来的ctype不为空
        if (!!ctype) {
            $.SetForm({
                url: "../../HiddenTroubleManage/HTBaseInfo/GetQueryJsonByEnCode?encode=" + ctype + "&itemObj=SaftyCheckType",
                success: function (data) {
                    $("#CHECKTYPE").ComboBoxSetValue(data.ItemDetailId);
                    $("#CHECKTYPE").attr("data-text", data.ItemName);
                    $("#CHECKTYPE").attr("data-value", data.ItemDetailId);
                    $("#CHECKTYPE div:eq(0)").text(data.ItemName);
                    $("#CHECKTYPE").attr("disabled", "disabled");
                }
            });
        }

        //隐藏回退原因.form:eq(1)   (2018-06-14调整)
        $(".form:eq(1) tr:eq(4)").css("display", "none");
        $(".form:eq(1) tr:eq(4) td").each(function (ele, index) {
            $(this).css("display", "none");
        });

        //(2018-06-14调整)
        $("#HIDRANK").change(function (ele) {
            var rankName = $(ele.target).attr("data-text");
            if (rankName.indexOf("重大") >= 0) {
                for (var i = 15; i <= 20; i++) {
                    $(".form:eq(0) tr:eq(" + i + ")").removeAttr("style");
                    $(".form:eq(0) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).removeAttr("style");
                    });
                }
            }
            else {
                for (var i = 15; i <= 20; i++) {
                    $(".form:eq(0) tr:eq(" + i + ")").css("display", "none");
                    $(".form:eq(0) tr:eq(" + i + ") td").each(function (ele, index) {
                        $(this).css("display", "none");
                    });
                }
            }
            //根据是否本部门整改来判定必填项控制
            ControlWriteForGdxj();
        });


        //获取表单数据
        if (!!keyValue) {
            $.SetForm({
                url: "../../HiddenTroubleManage/HTBaseInfo/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    //隐患整改
                    if (null != data.changeInfo) {
                        $("#CHANGEID").val(data.changeInfo.ID); //主键
                        $("#form1").formDeserialize(data.changeInfo);

                        //回退原因(2018-06-14调整)
                        if (!!data.changeInfo.BACKREASON) {
                            $(".form:eq(1) tr:eq(4)").removeAttr("style");
                            $(".form:eq(1) tr:eq(4) td").each(function (index, ele) {
                                $(this).css("display", "");
                            });
                        }
                    }
                    //隐患验收
                    if (null != data.acceptInfo) {
                        $("#ACCEPTID").val(data.acceptInfo.ID);
                        $("#form1").formDeserialize(data.acceptInfo);

                    }
                    //隐患基本信息
                    if (null != data.baseInfo) {

                        if (data.baseInfo.HIDPHOTO == null || data.baseInfo.HIDPHOTO == "") {
                            data.baseInfo.HIDPHOTO = $("#HIDPHOTO").val();
                        }
                        $("#form1").formDeserialize(data.baseInfo);
                        $("#CHECKTYPE").ComboBoxSetValue(data.baseInfo.CHECKTYPE); //排查类型
                        $("#HIDRANK").ComboBoxSetValue(data.baseInfo.HIDRANK);  //隐患级别
                        $("#HIDTYPE").ComboBoxSetValue(data.baseInfo.HIDTYPE); //隐患类别
                        $("#HIDDEPARTNAME").ComboBoxSetValue(data.baseInfo.HIDDEPART); //所属单位

                        //是否挂牌督办
                        if (data.baseInfo.ISGETAFTER == "1") {
                            $("input[name='ISGETAFTER']:eq(0)").prop("checked", "checked");
                        }
                        else {
                            $("input[name='ISGETAFTER']:eq(1)").prop("checked", "checked");
                        }

                        //是否本部门整改
                        if (data.baseInfo.ISSELFCHANGE == "1") {
                            $("input[name='ISSELFCHANGE']:eq(0)").prop("checked", "checked"); //本部门整改
                        }
                        else {
                            $("input[name='ISSELFCHANGE']:eq(1)").prop("checked", "checked"); // 非本部门整改
                        }

                        //根据是否本部门整改来判定必填项控制
                        ControlWriteForGdxj();
                    }

                    //(2018-06-14调整)
                    if ($("#HIDRANK").ComboBoxGetText().indexOf("重大") >= 0) {
                        //隐藏重大隐患填项
                        for (var i = 15; i <= 20; i++) {
                            2
                            $(".form:eq(0) tr:eq(" + i + ")").removeAttr("style");
                            $(".form:eq(0) tr:eq(" + i + ") td").each(function (ele, index) {
                                $(this).css("display", "");
                            });
                        }
                    }

                    //当前隐患类别为设备设施的时候 (2018-06-14调整)
                    var curTextbox = $("#HIDTYPE").text();
                    if (curTextbox.indexOf("设备设施") >= 0) {
                        $(".form:eq(0) tr:eq(5)").css("display", "");
                    }
                    else {
                        $(".form:eq(0) tr:eq(5)").css("display", "none");
                    }
                    var deviceid = $("#DEVICEID").val();
                    if (!!deviceid) {
                        $("#DEVICECODE").attr("disabled", "disabled");
                    }
                }
            });
        }
    }

    //选择整改人
    function ChooseChangePerson() {
        var isselfchange = $("input[name='ISSELFCHANGE']:checked").val();
        var cmode = 0;
        //本部门整改
        if (isselfchange == "1") {
            cmode = 3;
        }
        selectDept('', 0, cmode, '选择部门', window.document.body, 'CHANGEDUTYDEPARTNAME,CHANGEDUTYDEPARTCODE,CHANGEDUTYDEPARTID', $('#CHANGEDUTYDEPARTCODE').val(), ClearChangePerson())
    }

    function ControlWriteForGdxj() {
        var hidrank = $("#HIDRANK").ComboBoxGetText();
        if (!!hidrank) {
            var rankname = hidrank.indexOf("一般隐患") >= 0 ? "一般隐患" : "重大隐患";
            var isselfchange = $("input[name='ISSELFCHANGE']:checked").val();
            //本部门整改
            if (isselfchange == "1") {
                //控制必填项
                $.ajax({
                    data: { rankname: rankname, submittype: "提交", workflow: "隐患登记", endflow: "隐患整改", mark: "厂级隐患排查" },
                    type: "post",
                    url: "../../HiddenTroubleManage/HTBaseInfo/GetCurUserWfAuthOfGDXJ",
                    success: function (data) {
                        if (!!data) {
                            //如果具有直接到整改的权限，则必填项增加进来，反之则不加
                            if (data == "1") {
                                $("#CHANGEDUTYDEPARTNAME").attr("isvalid", "yes");
                                $("#CHANGEPERSONNAME").attr("isvalid", "yes");
                                $("#CHANGEDEADINE").attr("isvalid", "yes");
                                $("#PLANMANAGECAPITAL").attr("isvalid", "yes");
                                $(".form:eq(1) tr:eq(0) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");  //整改责任单位
                                $(".form:eq(1) tr:eq(1) td:eq(0)").html("整改责任人<span style='color:red;'>*</span>");  //整改责任人
                                $(".form:eq(1) tr:eq(2) td:eq(0)").html("整改截止时间<span style='color:red;'>*</span>");  //整改截止时间  计划治理资金(元)
                                $(".form:eq(1) tr:eq(2) td:eq(2)").html("计划治理资金(元)<span style='color:red;'>*</span>"); //计划治理资金(元)
                            }
                            else {
                                if (curUserRole.indexOf("部门级用户") >= 0 && curUserRole.indexOf("安全管理员") >= 0) {
                                    $("#CHANGEDUTYDEPARTNAME").attr("isvalid", "yes");
                                    $("#CHANGEPERSONNAME").attr("isvalid", "yes");
                                    $("#CHANGEDEADINE").attr("isvalid", "yes");
                                    $("#PLANMANAGECAPITAL").attr("isvalid", "yes");
                                    $(".form:eq(1) tr:eq(0) td:eq(0)").html("整改责任单位<span style='color:red;'>*</span>");  //整改责任单位
                                    $(".form:eq(1) tr:eq(1) td:eq(0)").html("整改责任人<span style='color:red;'>*</span>");  //整改责任人
                                    $(".form:eq(1) tr:eq(2) td:eq(0)").html("整改截止时间<span style='color:red;'>*</span>");  //整改截止时间  计划治理资金(元)
                                    $(".form:eq(1) tr:eq(2) td:eq(2)").html("计划治理资金(元)<span style='color:red;'>*</span>"); //计划治理资金(元)
                                }
                                else {
                                    $("#CHANGEDUTYDEPARTNAME").removeAttr("isvalid");
                                    $("#CHANGEPERSONNAME").removeAttr("isvalid");
