@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script src="~/Content/adminDefault/index.js" type="text/javascript"></script>
<script>
    var _parentId = "";
    var _isOrg = "";
    var curUserAccount = "";
    var mode = request("mode");
    var datascope = "";
    var IsEnableMinimalistMode = 0;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {

        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize();
            }
        });

        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 170);
            }, 200);
            e.stopPropagation();
        });

        //获取当前用户
        curUserAccount = "," + "@ERCHTMS.Code.OperatorProvider.Provider.Current().Account" + ",";


        //初始化查询条件
        $.SetForm({
            url: "../../HiddenTroubleManage/HTBaseInfo/GetQueryConditionJson",
            success: function (data) {
                IsEnableMinimalistMode = data.IsEnableMinimalistMode;
                if (IsEnableMinimalistMode > 0) {
                    $("#titleDescribe").html("隐患内容：");
                }
                //所属单位
                $("#HidDepart").ComboBox({
                    id: "DepartmentId",
                    text: "FullName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.DeptData
                });

                //隐患级别
                $("#HidRank").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: data.HidRank
                });

                var dataScope = new Array();
                dataScope.push({ ItemDetailId: "本人制定整改计划", ItemName: "本人制定整改计划" })
                //数据范围
                $("#DataScope").ComboBox({
                    id: "ItemDetailId",
                    text: "ItemName",
                    description: "===全部===",
                    allowSearch: false,
                    data: dataScope
                });

                var curDataValue = $("#DataScope-option li:eq(1)").attr("data-value");
                var curDataText = $("#DataScope-option li:eq(1)").text();
                $("#DataScope").ComboBoxSetValue(curDataValue);
                $("#DataScope").attr("data-text", curDataText);
                $("#DataScope").attr("data-value", curDataValue);
            }
        });
    }


    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        if (!!mode && mode == 0) {
            datascope = "本人制定整改计划";
            $("#DataScope").ComboBoxSetValue(datascope);
            $("#DataScope").attr("data-text", datascope);
            $("#DataScope").attr("data-value", datascope);
        }
        var titleDescribe = IsEnableMinimalistMode > 0 ? "隐患内容" : "事故隐患描述(简题)";
        //隐患基本信息
        var queryJson = {
            code: _parentId,
            isOrg: _isOrg,
            action: "ChangePlan",
            HidRank: $("#HidRank").ComboBoxGetValue(), //隐患级别
            HidDescribe: $("#HidDescribe").val(), //事故隐患描述(简题)
            HidDepart: $("#HidDepart").ComboBoxGetValue(), //所属单位
            DataScope: $("#DataScope").ComboBoxGetText() == "===全部===" ? "" : $("#DataScope").ComboBoxGetText(), //数据范围
        };

        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../HiddenTroubleManage/HTBaseInfo/GetListJson",
            postData: { queryJson: JSON.stringify(queryJson) },
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', index: 'id', width: 100, align: 'center', hidden: true },
                { label: '临时流程用户', name: 'participant', index: 'participant', align: 'center', hidden: true },
                { label: '临时流程用户', name: 'actionperson', index: 'actionperson', align: 'center', hidden: true },
                {
                    label: '操作', name: 'oper', index: 'id', width: 120, align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a href=javascript:viewdata('" + rowObject.id + "')  title='查看'><i class='fa fa-eye'></i></a>";

                        var actionperson = rowObject.actionperson; //增加 ","防止多个字符串对象包含在其他对象里，导致程序Bug  如 admin,admin123, .....  用户 admin, 可以更好区分

                        if (actionperson.indexOf(curUserAccount) >= 0 && rowObject.workstream == "制定整改计划") {
                            html += "&nbsp;&nbsp;&nbsp;<a href=javascript:editdata('" + rowObject.id + "')  title='制定整改计划'><i class='fa fa-pencil-square-o'></i></a>";
                        }
                        return html;
                    }
                },
                {
                    label: '流程状态', name: 'workstream', index: 'workstream', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a href=javascript:OpenViewFlow('" + rowObject.id + "')  style='text-decoration:underline;'  title='隐患流程'>" + rowObject.workstream + "</a>";
                        return html
                    }
                },
                { label: '隐患编码', name: 'hidcode', index: 'hidcode', width: 150, align: 'center', sortable: true },
                { label: '隐患类别', name: 'hidtypename', index: 'hidtypename', width: 150, align: 'center', sortable: true },
                { label: '隐患级别', name: 'hidrankname', index: 'hidrankname', width: 150, align: 'center', sortable: true },
                { label: '排查类型', name: 'checktypename', index: 'checktypename', width: 150, align: 'center', sortable: true },
                { label: '排查单位', name: 'checkdepartname', index: 'checkdepartname', width: 150, align: 'center', sortable: true },
                { label: titleDescribe, name: 'hiddescribe', index: 'hiddescribe', width: 150, align: 'center', sortable: true },
                { label: '所属单位', name: 'hiddepartname', index: 'hiddepartname', align: 'center', sortable: true }
            ],
            viewrecords: true,
            rowNum: 15,
            rowList: [15, 30, 50, 100],
            pager: "#gridPager",
            sortname: 'ordernumber asc ,createdate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).setSelection(selectedRowIndex, false);
            }
        });

        //权限规则
        //$gridTable.authorizeColModel();

        //查询事件
        $("#btn_Search").click(function () {

            if (!!mode && mode == 0) {
                datascope = "本人制定整改计划";
                $("#DataScope").ComboBoxSetValue(datascope);
                $("#DataScope").attr("data-text", datascope);
                $("#DataScope").attr("data-value", datascope);
            }
            var queryJson = {
                code: _parentId,
                isOrg: _isOrg,
                action: "ChangePlan",
                HidRank: $("#HidRank").ComboBoxGetValue(), //隐患级别
                HidDescribe: $("#HidDescribe").val(), //事故隐患描述(简题)
                HidDepart: $("#HidDepart").ComboBoxGetValue(), //所属单位
                DataScope: $("#DataScope").ComboBoxGetText() == "===全部===" ? "" : $("#DataScope").ComboBoxGetText(), //数据范围
            };
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');

            $(".ui-filter-list").css("display", "none");
            $(".ui-filter-text ").removeClass("active");
            $(".ui-filter-text ").removeAttr("style");
        });
    }

    //隐患完善
    function btn_edit() {
        var workstream = $('#gridTable').jqGridRowValue('workstream');
        var keyValue = $('#gridTable').jqGridRowValue('id');
        var actionperson = $('#gridTable').jqGridRowValue('actionperson');
        if (checkedRow(keyValue)) {
            if (actionperson.indexOf(curUserAccount) >= 0 && workstream.indexOf("制定整改计划") >= 0) {
                dialogOpen({
                    id: 'Form',
                    title: '制定整改计划',
                    url: '/HiddenTroubleManage/HTChangePlan/Form?keyValue=' + keyValue,
                    width: ($(top.window).width() - 100) + "px",
                    height: ($(top.window).height() - 100) + "px",
                    btn: null
                });
            }
            else {
                dialogMsg("您当前没有权限对此隐患进行完善!", 0);
            }
        }
    }


    //编辑视图
    function editdata(obj) {
        var rqUrl = '/HiddenTroubleManage/HTChangePlan/Form?keyValue=' + obj;
        var title = "制定整改计划";
        //未整改隐患的编辑页面
        dialogOpen({
            id: 'HidPlanForm',
            title: title,
            url: rqUrl,
            width: ($(top.window).width() - 100) + "px",
            height: ($(top.window).height() - 100) + "px",
            btn: null
        });
    }

    //查看视图
    function viewdata(obj) {
        var rqUrl = '/HiddenTroubleManage/HTChangePlan/Form?keyValue=' + obj + '&actiontype=view';
        var title = "查看隐患";

        dialogOpen({
            id: 'HidPlanForm',
            title: title,
            url: rqUrl,
            width: ($(top.window).width() - 100) + "px",
            height: ($(top.window).height() - 100) + "px",
            btn: null
        });
    }

    //重置所有查询条件
    function ResetCondition() {
        //隐患级别
        $("#HidRank").attr("data-text", "===全部===");
        $("#HidRank").attr("data-value", "");
        $("#HidRank div:eq(0)").text("===全部===");

        //事故隐患描述(简题)
        $("#HidDescribe").val("");

        //所属单位
        $("#HidDepart").attr("data-text", "===全部===");
        $("#HidDepart").attr("data-value", "");
        $("#HidDepart div:eq(0)").text("===全部===");
    }

    //查看流程图
    function OpenViewFlow(keyValue) {
        var title = "隐患流程图";
        var rqUrl = "/SystemManage/WorkFlow/Index?keyValue=" + keyValue;
        dialogOpen({
            id: 'HidFlowForm',
            title: title,
            url: rqUrl,
            width: ($(top.window).width() / 2 + 220) + "px",
            height: ($(top.window).height() - 100) + "px",
            btn: null
        });
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-center">
        <div class="center-Panel" style="margin-left: 10px; margin-right: 10px;">
            <div class="panel-Title">制定整改计划信息</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            <td>查询条件:</td>
                            <td style="padding-left: 10px;">
                                <div class="ui-filter" style="width: 350px;">
                                    <div class="ui-filter-text">
                                        请选择过滤条件
                                    </div>
                                    <div class="ui-filter-list" style="width: 350px; ">
                                        <table class="form" id="filter-form">
                                            <tr>
                                                <td class="formTitle">所属单位：</td>
                                                <td class="formValue">
                                                    <div id="HidDepart" type="select" class="ui-select" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="formTitle">隐患级别：</td>
                                                <td class="formValue">
                                                    <div id="HidRank" type="select" class="ui-select" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="formTitle">数据范围：</td>
                                                <td class="formValue">
                                                    <div id="DataScope" type="select" class="ui-select" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="formTitle" id="titleDescribe"><span style="white-space:pre-wrap;">事故隐患描述(简题)</span>：</td>
                                                <td class="formValue">
                                                    <input id="HidDescribe" type="text" class="form-control" />
                                                </td>
                                            </tr>
                                        </table>
                                        <div class="ui-filter-list-bottom">
                                            <a id="btn_Reset" class="btn btn-default" onclick="ResetCondition()">&nbsp;重&nbsp;&nbsp;置</a>
                                            <a id="btn_Search" class="btn btn-primary">&nbsp;查&nbsp;&nbsp;询</a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                        <a id="edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;制定整改计划</a>
                    </div>
                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>
