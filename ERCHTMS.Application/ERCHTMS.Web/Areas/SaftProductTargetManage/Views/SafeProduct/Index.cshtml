    function againproject(targetproject, gvalue, rvalue, status, type, targetprojectvalue) {
        if (targetprojectvalue != "" && targetprojectvalue != null) {
            if (targetprojectvalue.indexOf("-") < 0) {
                var deptid = "";
                if (_parentnodes != "") {
                    deptid = _belongdeptid;
                }
                else {
                    deptid = belongD;
                }
                var ctype = "";
                switch (targetproject) {
                    case "特种作业人员持证上岗率(%)":
                        ctype = "1";
                        break;
                    case "重大及以上设备事故":
                        ctype = "2";
                        break;
                    case "人身重伤及以上事故":
                        ctype = "3";
                        break;
                    case "误操作事故":
                        ctype = "4";
                        break;
                    case "一般设备事故":
                        ctype = "5";
                        break;
                    //case "环境污染事故":
                    //    ctype = "6";
                    //    break;
                    case "人身轻伤及未遂事件":
                        ctype = "7";
                        break;
                    case "缺煤停机事故":
                        ctype = "8";
                        break;
                    case "交通事故":
                        ctype = "9";
                        break;
                    case "火灾":
                        ctype = "10";
                        break;
                    case "一类障碍":
                        ctype = "11";
                        break;
                    case "二类障碍":
                        ctype = "12";
                        break;
                    case "特种设备检验合格率(%)":
                        ctype = "13";
                        break;
                    case "隐患整改率(%)":
                        ctype = "14";
                        break;
                    default:
                        if (type == "1") {
                            return rvalue;
                        }
                        else {
                            return status;
                        }
                }
                var rvalue = rvalue;
                //4.6.8的实际值为手动输入
                if (ctype != "4" && ctype != "8") {
                    $.ajax({
                        url: '../../SaftProductTargetManage/SafeProduct/calculateGoal',
                        data: { belongtype: ctype, belongdeptid: deptid, year: $("#StartDate").val() },
                        dataType: "JSON",
                        async: false,
                        success: function (result) {
                            if (result != null) {
                                rvalue = result;
                                if (type == "2") {
                                    //特种作业人员持证上岗率,特种设备检验合格率,隐患整改率
                                    if (ctype == "1" || ctype == "13" || ctype == "14") {
                                        //实际值大于等于目标值
                                        if (parseFloat(rvalue) >= parseFloat(gvalue)) {
                                            status = "已完成";
                                        }
                                        else {
                                            status = "未完成";
                                        }
                                    }
                                    else {
                                        //实际值小于等于目标值
                                        if (parseFloat(rvalue) <= parseFloat(gvalue)) {
                                            status = "已完成";
                                        }
                                        else {
                                            status = "未完成";
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
                if (type == "1") {
                    return rvalue;
                }
                else {
                    return status;
                }
            } else {
                if (type == "1") {
                    return rvalue;
                }
                else {
                    return status;
                }
            }
        } else {
            if (type == "1") {
                return rvalue;
            }
            else {
                return status;
            }
        }
    }
