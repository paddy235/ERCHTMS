<script>
    var selectStatus = "";
    var areaCode = "";
    var DistrictCode = request('DistrictCode');
    var IndexStatus = request('selectStatus');
    $(function () {
        locaIndex();
        GetTree();
        InitialPage();
        GetGrid();
        Devicestat();
    });


    //首页统计跳转
    function locaIndex() {
        if (IndexStatus != "") {
            var id = "";
            selectStatus = IndexStatus == 0 ? "在线" : "离线";
            if (selectStatus == "在线") {
                id = "zx";
            }
            else {
                id = "lx";
            }
            var div = $("#status").children('div');
            for (var i = 0; i < div.length; i++) {
                var ids = div.eq(i).attr("id");
                if (ids != "undefined") {
                    $("#" + ids).removeClass();
                    if (id == ids) {
                        $("#" + ids).addClass("activebtndiv");
                    } else {
                        $("#" + ids).addClass("btndiv");
                    }
                }
            }
        }
    }
    //加载组织机构树
    function GetTree() {
        var item = {
            height: $(window).height() - 48,
            url: "../../BaseManage/District/GetTreeJson",
            onnodeclick: function (item) {
                areaCode = item.Code;
                Search();
            }
        };
        //初始化
        $("#itemTree").treeview(item);
        if ($("#itemTree").html().length == 0) {
            $(".ui-layout-west").hide();
            $('.ui-layout-center').css({ "padding-left": "5px" });
        } else {
            $('#layout').layout({
                applyDemoStyles: false,
                onresize: function () {
                    $(window).resize();
                }
            });
        }
    }

    //初始化页面
    function InitialPage() {
        $('#layout').layout({
            applyDemoStyles: false,
            onresize: function () {
                $(window).resize();
            }
        });
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 207);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var queryJson = {
            selectStatus: selectStatus,
            AreaCode: DistrictCode,
            Search: $("#txt_Keyword").val()
        }
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 207,
            url: "../../KbsDeviceManage/Kbsdevice/GetPageListJson",
            postData: { queryJson: JSON.stringify(queryJson) },
            datatype: "json",
            loadonce: true,
            colModel: [
                {
                    label: '操作',
                    name: 'Oper',
                    width: 100,
                    align: 'center',
                    sortable: false
                },
                { label: '主键', name: 'ID', index: 'ID', width: 100, align: 'center', sortable: false, hidden: true },
                { label: '门禁ID', name: 'DeviceId', index: 'DeviceId', width: 200, align: 'center', sortable: true },
                { label: '门禁名称', name: 'DeviceName', width: 200, align: 'center', sortable: false },
                { label: '门禁型号', name: 'DeviceModel', index: 'DeviceModel', width: 200, align: 'center', sortable: true },
                { label: '区域', name: 'AreaName', index: 'AreaName', width: 200, align: 'center', sortable: true },
                { label: '楼层编号', name: 'FloorNo', index: 'FloorNo', width: 200, align: 'center', sortable: true },
                {
                    label: '状态', name: 'status', width: 100, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        return "在线";
                    }
                },
                {
                    label: '进出类型', name: 'OutType', width: 100, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == "0") {
                            return "进门";
                        } else {
                            return "出门";
                        }

                    }
                },
                { label: '创建时间', name: 'CreateDate', index: 'CreateDate', width: 200, align: 'center', sortable: true },
                { label: '操作人', name: 'OperUserName', index: 'OperUserName', width: 100, align: 'center', sortable: true }
                
            ],
            viewrecords: true,
            rowNum: 20,
            rowList: [20, 50, 100],
            pager: "#gridPager",
            sortname: '',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
                kbsgridqx($gridTable);
            }
        });
    }

    function SelectFun(id, pid) {
        var div = $("#" + pid).children('div');
        for (var i = 0; i < div.length; i++) {
            var ids = div.eq(i).attr("id");
            if (ids != "undefined") {
                $("#" + ids).removeClass();
                if (id == ids) {
                    $("#" + ids).addClass("activebtndiv");
                } else {
                    $("#" + ids).addClass("btndiv");
                }
            }
        }
        selectStatus = $("#" + id).attr("sValue");
        Search();
    }

    function Search() {
        var queryJson = {
            selectStatus: selectStatus,
            AreaCode: areaCode,
            Search: $("#txt_Keyword").val()
        }
        $("#gridTable").setGridParam({ url: top.contentPath + "/KbsDeviceManage/Kbsdevice/GetPageListJson" });
        $("#gridTable").setGridParam({ datatype: 'json', page: 1 })
            .jqGrid('setGridParam', { page: 1, postData: { queryJson: JSON.stringify(queryJson) } })
            .trigger("reloadGrid");
        //$('#gridTable').jqGrid('setGridParam', {
        //    postData: { queryJson: JSON.stringify(queryJson) }, page: 1
        //}).trigger('reloadGrid');
        Devicestat();
    }

    //新增
    function add() {
        dialogOpen({
            id: 'Form',
            title: '添加',
            url: '/KbsDeviceManage/Kbsdevice/Form',
            width: '400px',
            height: '600px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function edit(keyValue) {
        //var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑',
                url: '/KbsDeviceManage/Kbsdevice/Form?keyValue=' + keyValue,
                width: '400px',
                height: '600px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function del(keyValue) {
        //var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../KbsDeviceManage/Kbsdevice/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    Search();
                }
            })
        } else {
            dialogMsg('请选择需要删除的门禁数据！', 0);
        }
    }
    var idx;
    //导入
    function Import() {
        idx = dialogOpen({
            id: "Import",
            title: '导入清单',
            url: '/KbsDeviceManage/Kbsdevice/Import',
            width: "500px",
            height: "450px",
            callBack: function (iframeId) {
                top.document.getElementById(iframeId).contentWindow.AcceptClick();
            },
            cancel: function (index) {
                Search();


            }
        });
    }

    //查看标签信息
    function See(keyValue) {
        if (checkedRow(keyValue)) {
            var dlg = dialogOpen({
                id: "LableForm",
                title: '查看绑定信息',
                url: '/KbsDeviceManage/Kbsdevice/See?action=show&keyValue=' + keyValue,
                width: '400px',
                height: '600px',
                btn: ["关闭"],
                callBack: function (iframeId) {
                    top.layer.close(dlg);
                }
            });
        }
    }

    function Test() {
        var dlg = dialogOpen({
            id: "StaticForm",
            title: '查看统计信息',
            url: '/KbsDeviceManage/Kbsdevice/Static',
            width: '800px',
            height: '500px',
            btn: ["关闭"],
            callBack: function (iframeId) {
                top.layer.close(dlg);
            }
        });
    }
</script>
