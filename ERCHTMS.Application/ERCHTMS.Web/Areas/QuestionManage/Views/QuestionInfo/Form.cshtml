                        <td class="formValue" colspan="3">
                            <input id="CHECKNAME" type="text" class="form-control" checkexpession="LenStrOrNull" length="2000" placeholder="请输入或双击选择检查名称" title="双击选择检查名称" ondblclick="selectSafetyCheckName()"  />
