
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');

    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "./GetDetail",
                param: { key: keyValue },
                success: function (data) {
                    $("#form1").formDeserialize(data);
                    jQuery("#PicUrl").attr("src", data.PicUrl);
                }
            })
        }



        $("input").attr("readonly", "readonly");      
        $(".form-button").css("display", "none");       
    }



</script>
<div class="center-Panel">
    <div class="panel panel-default">       
        <div class="panel-body">
            <div style="margin-right: 30px;">
                <table class="form">
                    <tr>
                        <td class="formTitle">预警内容<font face="宋体">*</font></td>
                        <td class="formValue" colspan="2">
                            <input id="WarningContent" type="text" class="form-control" readonly />
                           
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">责任人<font face="宋体">*</font></td>
                        <td class="formValue">
                            <input id="DutyPerson" type="text" class="form-control" readonly />
                        </td>

                    </tr>
                    <tr>
                        <td class="formTitle">班组部门<font face="宋体">*</font></td>
                        <td class="formValue">
                            <input id="DepartName" type="text" class="form-control" readonly />
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">区域<font face="宋体">*</font></td>
                        <td class="formValue" >
                            <input id="AreaName" type="text" class="form-control" readonly/>
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">预警时间<font face="宋体">*</font></td>
                        <td class="formValue">
                            <input id="WarningTime" type="text"  class="form-control" readonly/>
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">抓拍照片<font face="宋体">*</font></td>
                        <td class="formValue" >
                            <img id="PicUrl"  src="" alt=""/>
                        </td>
                    </tr>
                    <tr>
                        <td class="formTitle">摄像头<font face="宋体">*</font></td>
                        <td class="formValue" >
                            <input id="DeviceName" type="text" class="form-control" readonly />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="form-button" style=" top: 40px; text-align: left; padding-left: 20px; position: fixed; bottom: auto; z-index: 1000;">
    <div style="float:left;">
        <a id="btn_Save" class="btn btn-primary" style="background-color: #2e99d4; border-color: #2e99d4; "><i class="fa fa-check"></i>&nbsp;保&nbsp;&nbsp;存</a>
        &nbsp; &nbsp;
        <a id="btn_Submit" class="btn btn-primary" style="background-color: #2e99d4; border-color: #2e99d4; "><i class="fa fa-mail-forward"></i>&nbsp;发&nbsp;&nbsp;送</a>
        &nbsp; &nbsp;
    </div>
</div>


