<script>
    var state = 1;
    var deptCode = "";
    var CarType = "";
    var InLog = "";
    var type = "0";
    var KMHikImgIp = "";//海康图片访问ip地址
     var softName = "@BSFramework.Util.Config.GetValue("SoftName").ToLower()";
    $(function () {
        InitialPage();
        DateTime();
        GetGrid();
    });


    //日期默认
    function DateTime() {
        var date = new Date();
        var year = date.getFullYear();
        var mon = date.getMonth() + 1;
        var day = date.getDate();
        var hour = date.getHours();
        var mi = date.getMinutes();
        var ss = date.getSeconds();
        var stime = "";
        var etime = "";
        if (mon < 10) {
            mon = '0' + mon;
        }
        if (day < 10) {
            day = '0' + day;
        }

        stime = year + "-" + mon + "-" + day;
        etime = year + "-" + mon + "-" + day;

        $("#StartTime").val(stime);
        $("#EndTime").val(etime);
    }

    //初始化页面
    function InitialPage() {
        //$('#layout').layout({
        //    applyDemoStyles: false,
        //    onresize: function () {
        //        $(window).resize()
        //    }
        //});
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 210);
            }, 200);
            e.stopPropagation();
        });
    }




    function getQueryJson() {
        var st = $("#StartTime").val();
        var et = $("#EndTime").val();
        if (st > et && st != "" && et != "") {
            dialogMsg('开始时间不能大于结束时间！', 2);
            return false;
        }
        //else if (st == et) {
        //    dialogMsg('开始时间不能等于结束时间！', 2);
        //    return false;
        //}
        var queryJson = {
            sttime: $("#StartTime").val(),
            endtime: $("#EndTime").val(),
            txt_Keyword: "",
            type: type
        }
        return JSON.stringify(queryJson);
    }


    function TodayPerson(area,type) {
        //查看图片
        var w = 1200;
        var h = 960;
        dialogOpen({
            id: "TodayPerson",
            title: "人员清单",
            url: '/CarManage/Hikinoutlog/Form?type=' + type + "&area=" + area,
            shade: 0.5,
            btn: null,
            width: w + "px",
            height: h + "px",
            callBack: function (iframeId) {

            }
        });
    }

    //播放实时画面
    function playVideo(camid) {
        window.open(top.contentPath + "/KbsDeviceManage/Kbscameramanage/PlayVideo?keyValue=" + camid);
    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 200,
            url: "../../CarVelocity/GetWaringListJson",
            postData: { queryJson: getQueryJson() },
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                {
                    label: '操作',
                    name: 'id',
                    index: 'id',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a style=\"color: blue;\" href='javascript:playVideo(\"" + rowObject.camid + "\")'> 实时影像 </a>";
                        return html;
                    }
                },
                {
                    label: '责任人',
                    name: 'liablename',
                    index: 'liablename',
                    width: 300,
                    align: 'center'
                },
              

                {
                    label: '预警内容',
                    name: 'warningcontent',
                    index: 'warningcontent',
                    width: 400,
                    align: 'center'
                },
                {
                    label: '预警时间',
                    name: 'createdate',
                    index: 'createdate',
                    width: 300,
                    align: 'center'
                },
                {
                    label: '抓拍地点',
                    name: 'deptname',
                    index: 'deptname',
                    width: 300,
                    align: 'center'
                },
                {
                    label: '抓拍照片',
                    name: 'baseid',
                    index: 'baseid',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "";
                        var picpath =GetHikImgUrl(cellvalue);
                        if (cellvalue) {
                            html = "<img width='35'title='点击查看大图' height='35'  onclick=ShowImg('" + picpath +
                                "') src='" + picpath  +
                                "'>";
                        }
                        return html;
                    }
                }
            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            loadComplete: function (data) {

            }
        });

        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            type = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {

            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: getQueryJson() },
                    page: 1
                }).trigger('reloadGrid');
        });
        $("#btn_Reset").click(function () {
            $("#StartTime").val("");
            $("#EndTime").val("");
            $("#DeptName").val("");

            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: getQueryJson() },
                    page: 1
                }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress',
            function (event) {
                if (event.keyCode == "13") {
                    $('#btn_Search').trigger("click");
                }
            });
    }

    function ShowImg(url) {
        ////查看图片
        //var w = 1200;
        //var h = 960;
        //dialogOpen({
        //    id: "DetailPrject",
        //    title: "查看图片",
        //    url: '/CarManage/Hikdevice/ImgShow?Url=' + url,
        //    shade: 0.5,
        //    btn: null,
        //    width: w + "px",
        //    height: h + "px",
        //    callBack: function (iframeId) {

        //    }
        //});
        $("#pop").show();
        $("#imgShow").attr("src", url);


    }

   

    //导出
    function exportResult() {
        var rowArr = $('#gridTable').getRowData();
        if (rowArr.length > 0) {
            var queryJson = JSON.stringify({
                sttime: $("#StartTime").val(),
                endtime: $("#EndTime").val(),
                txt_Keyword: "",
                type: type

            })
            location.href = "../../HJBPerson/CarVelocity/ExportUserData?queryJson=" + queryJson;
        }
        else {
            dialogMsg('没有可以导出的数据！', 1);
        }
    }

    //判读是否是海康的图片路径不是则返回我们自己存储路径
    function GetHikImgUrl(url) {
        if (url) {
            var start = url.indexOf("/Resource");
            if (start != -1) {//是
                return top.contentPath + url;

            } else {//否
                return KMHikImgIp + url;
            }
        } else {
            return '';
        }
    }
</script>
