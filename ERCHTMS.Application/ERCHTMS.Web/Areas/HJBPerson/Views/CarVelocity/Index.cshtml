    //日期默认
    function DateTime() {
        var date = new Date();
        var year = date.getFullYear();
        var mon = date.getMonth() + 1;
        var day = date.getDate();
        var hour = date.getHours();
        var mi = date.getMinutes();
        var ss = date.getSeconds();
        var stime = "";
        var etime = "";
        if (mon < 10) {
            mon = '0' + mon;
        }

        stime = (year - 1) + "-" + mon + "-" + day + " " + hour + ":" + mi + ":" + ss;
        etime = year + "-" + mon + "-" + day + " " + hour + ":" + mi + ":" + ss;

        $("#StartTime").val(stime);
        $("#EndTime").val(etime);
    }

    //初始化页面
