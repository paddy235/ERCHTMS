    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 200,
            url: "../../CarVelocity/GetListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                {
                    label: '车牌号码',
                    name: 'cardno',
                    index: 'cardno',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '车辆类型',
                    name: 'vehicleTypeName',
                    index: 'vehicleTypeName',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '所属单位（部门）',
                    name: 'deptname',
                    index: 'deptname',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '驾驶员',
                    name: 'dirver',
                    index: 'dirver',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '驾驶员电话',
                    name: 'phone',
                    index: 'phone',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '抓拍车速（km/h）',
                    name: 'speed',
                    index: 'speed',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '抓拍地点',
                    name: 'address',
                    index: 'address',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '时间',
                    name: 'createdate',
                    index: 'createdate',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '抓拍照片',
                    name: 'vehiclepicurl',
                    index: 'vehiclepicurl',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "";
                        var picpath = GetHikImgUrl(cellvalue);
                        if (cellvalue) {
                            html = "<img width='35'title='点击查看大图' height='35'  onclick=ShowImg('" + picpath +
                                "') src='" + picpath +
                                "'>";
                        }
                        return html;
                    }
                }

            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            loadComplete: function (data) {
                $("#allnum").html("抓拍总次数:<lable style='color: #199ed8' >" + data.records + "</lable>次");
            }
        });

        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            type = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                StartTime: $("#StartTime").val(),
                EndTime: $("#EndTime").val(),
                txt_Keyword: $("#txt_Keyword").val(),
                type: type
            }
            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: JSON.stringify(queryJson) },
                    page: 1
                }).trigger('reloadGrid');
        });
        $("#btn_Reset").click(function () {
            $("#StartTime").val("");
            $("#EndTime").val("");
            $("#DeptName").val("");

            var queryJson = {
                StartTime: "",
                EndTime: ""
            }
            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: JSON.stringify(queryJson) },
                    page: 1
                }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress',
            function (event) {
                if (event.keyCode == "13") {
                    $('#btn_Search').trigger("click");
                }
            });
    }

    function ShowImg(url) {
        ////查看图片
        //var w = 1200;
        //var h = 960;
        //dialogOpen({
        //    id: "DetailPrject",
