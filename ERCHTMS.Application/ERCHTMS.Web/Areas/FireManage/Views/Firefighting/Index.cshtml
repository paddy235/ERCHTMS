    //统计数据
    function StatisticsData(queryJson) {
        $.ajax({
            url: "../../FireManage/Firefighting/StatisticsData",
            data: { queryJson: JSON.stringify(queryJson) },
            type: "get",
            dataType: "json",
            async: false,
            success: function (data) {
                var counNum = 0;//总数
                var mhqNum = 0;
                var snxfsNum = 0;
                var swxfsNum = 0;
                var qtNum = 0;
                data.rows.forEach(function (val, index) {
                    if (val.equipmentnameno == null) {
                        counNum = val.equipmentnum;
                    }
                    if (val.equipmentnameno == 'MHQ') {
                        mhqNum = val.equipmentnum;
                    }
                    if (val.equipmentnameno == 'SNXHS') {
                        snxfsNum = val.equipmentnum;
                    }
                    if (val.equipmentnameno == 'SWXHS') {
                        swxfsNum = val.equipmentnum;
                    }
                    if (val.equipmentnameno != null && val.equipmentnameno != 'MHQ' && val.equipmentnameno != 'SNXHS' && val.equipmentnameno != 'SWXHS') {
                        qtNum = val.equipmentnum;
                    }
                })
                if (counNum != 0) { qtNum = parseInt(counNum - mhqNum - snxfsNum - swxfsNum);}
                if (qtNum < 0) { qtNum = 0;}
                $('#mhqNum').html(mhqNum + '&nbsp;个');
                $('#snxfsNum').html(snxfsNum + '&nbsp;个');
                $('#swxfsNum').html(swxfsNum + '&nbsp;个');
                $('#qtNum').html(qtNum + '&nbsp;个');
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                dialogMsg(errorThrown, -1);
            }
        });
    }
