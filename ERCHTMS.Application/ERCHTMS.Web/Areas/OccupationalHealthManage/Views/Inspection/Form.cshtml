@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<!--webUploader文件上传组件-->
<link href="~/Content/scripts/plugins/webuploader/webuploader.css" rel="stylesheet" />
<link href="~/Content/scripts/plugins/webuploader/webuploader-demo.css" rel="stylesheet" />
<script type="text/javascript" src="~/Content/scripts/plugins/webuploader/webuploader.min.js"></script>
<script type="text/javascript" src="~/Content/scripts/business/fileupload.js"></script>

<script>
    var keyValue = request('keyValue');
    var action = request('action');
    var ID;// ='@System.Guid.NewGuid().ToString()';//一开始先把主键生成好
    $(function () {
        initControl();
        if (!!keyValue) {
            GetFiles();
        }
    });
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            ID = keyValue;
            $.SetForm({
                url: "../../OccupationalHealthManage/Inspection/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").formDeserialize(data);
                }
            })
        } else
        {
            ID = '@System.Guid.NewGuid().ToString()';
        }


        //文件上传设置
        file_upload.init({
            keyValue: ID, //业务记录Id，必须
            extensions: 'doc,docx,xls,xlsx,zip,rar,jpg,png,gif,bmp,txt,ppt,pptx,pdf', //文件扩展名,如jpg,gif,bmp,png
            isImage: false,  //是否只是上传图片
            //fileDir: '',  //文件存储目录（如AppFile/Images），相对于Resource
            isDate: true,  //是否新建日期目录存储文件
            fileNumLimit: 1, //允许上传的文件个数
            multiple: true //是否可以同时选择多个文件
        });
    }

    //绑定文件
    function GetFiles() {
        $.ajax({
            url: top.contentPath + "/OccupationalHealthManage/Occupatioalstaff/GetFiles",
            data: { keyValue: keyValue },
            type: "GET",
            async: false,
            dataType: "JSON",
            success: function (data) {
                var falg = true;
                if (action == "show") {
                    falg = false;
                }
                file_upload.bind(data, falg, false, keyValue, "uploader", falg);
            }
        });
    }

    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        $("#Id").val(ID);
        var postData = $("#form1").formSerialize(keyValue);
        $.SaveForm({
            url: "../../OccupationalHealthManage/Inspection/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <td class="formTitle">检测机构名称<font face=“宋体”>*</font></td>
            <td class="formValue">
                <input id="InspectionName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
                <input id="Id" type="hidden" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">检测时间<font face=“宋体”>*</font></td>
            <td class="formValue">
                <input id="InspectionTime" type="text" class="form-control input-datepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd', readOnly: true })" isvalid="yes" checkexpession="NotNull" />
            </td>
        </tr>
       <tr>
           <td class="formTitle">检测报告</td>
           <td class="formValue">
               <div id="uploader" class="uploader" style="border:1px solid #ccc; margin-top:10px; min-height:200px; margin-bottom:10px;">
                   <div class="queueList">
                       <div id="dndArea" class="placeholder">
                           <div class="filePicker" style="margin-left:25px; margin-top:10px;"></div>
                       </div>
                   </div>
                   <div class="statusBar" style="display:none;">
                       <div class="progress">
                           <span class="text">0%</span>
                           <span class="percentage"></span>
                       </div>
                       <div class="info"></div>
                   </div>
               </div>
           </td>
       </tr>
    </table>
</div>
