        else if (checkWay == "DEC") {
            $("#tbLEC").find("input[class='form-control']").val('');
            if (val == "DEC")

                $("#IsDangerName").val(checkDanger);
        }
        else {
            $("#IsDangerName").val("");
        }




        if (val == "LEC") {
            $("#tbDEC").hide();
            $("#tbLEC").show();

        } else {
            $("#tbLEC").hide();
            $("#tbDEC").show();
        }
    }
</script>

