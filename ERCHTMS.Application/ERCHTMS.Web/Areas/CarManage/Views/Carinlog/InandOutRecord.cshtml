@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/scripts/business/gridhelper.js"></script>
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
        InitiaCarInfo();
      
    });

    function InitiaCarInfo() {
        //通行门岗
        $("#Status").ComboBox({
            url: top.contentPath + "/CarManage/Carinfo/GetCurrent",
            id: "itemValue",
            text: "itemName",
            height: '100px',
            description: "==请选择==",
            allowSearch: true
        });
        //车辆类型
        $("#CarType").ComboBox({
            url: top.contentPath + "/CarManage/Carinfo/GetCarInfo?name=可门车辆类型",
            id: "itemValue",
            text: "itemName",
            height: '100px',
            description: "==请选择==",
            allowSearch: true
        });
        //进出类型
        $("#IntandOut").ComboBox({
            url: top.contentPath + "/CarManage/Carinfo/GetCarInfo?name=进出类别",
            id: "itemValue",
            text: "itemName",
            height: '100px',
            description: "==请选择==",
            allowSearch: true
        });

    }


    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 108.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../CarManage/Carinlog/GetIntandOutListJson",
            //postData: { queryJson: JSON.stringify({ Type: "" }) },
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                { label: '主键', name: 'createuserid', hidden: true },
                { label: '主键', name: 'createdate', hidden: true },
                { label: '主键', name: 'modifyuserid', hidden: true },
                { label: '主键', name: 'modifydate', hidden: true },
                { label: '主键', name: 'createuserdeptcode', hidden: true },
                { label: '主键', name: 'createuserorgcode', hidden: true },
                { label: '主键', name: 'endtime', hidden: true },
                {
                    label: '操作',
                    name: 'Oper',
                    width: 160,
                    align: 'center',
                    sortable: false,
                    hidden: true

                },
                {
                    label: '车牌号',
                    name: 'carno',
                    index: 'carno',
                    width: 200,
                    align: 'center'
                },
                  {
                      label: '车辆类型',
                      name: 'type',
                      index: 'type',
                      width: 200,
                      align: 'center',
                      formatter: function (cellvalue, options, rowObject) {
                          var html = "";
                          switch (cellvalue) {
                              case 0:
                                  html = "电厂班车";
                                  break
                              case 1:
                                  html = "私家车";
                                  break;
                              case 2:
                                  html = "商务公车";
                                  break;
                              case 3:
                                  html = "拜访车辆";
                                  break;
                              case 4:
                                  html = "物料车辆";
                                  break;
                              case 5:
                                  html = "危化品车辆";
                                  break;
                              case 6:
                                  html = "临时通行车辆";
                                  break;
                              default:
                          }
                          return html;
                      }
                  },
                  
                {
                    label: '驾驶人',
                    name: 'drivername',
                    index: 'drivername',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '驾驶人电话',
                    name: 'phone',
                    index: 'phone',
                    width: 200,
                    align: 'center'
                },
            
                {
                    label: '进出类型',
                    name: 'status',
                    index: 'status',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "";
                        if (cellvalue == 0) {
                            html = "进";
                        }
                        else {
                            html = "出";
                        }
                        return html;
                    }
                },

                  {
                      label: '经过门岗',
                      name: 'address',
                      index: 'address',
                      width: 200,
                      align: 'center'
                  },
                     {
                         label: '时间',
                         name: 'createdate',
                         index: 'createdate',
                         width: 200,
                         align: 'center',
                         formatter: function (cellvalue, options, rowObject) {
                             var html = formatDate(rowObject.createdate, 'yyyy-MM-dd hh:mm')
                             return html;
                         }
                     },
   
            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'createdate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
                gridqx($gridTable);
                //var ids = $("#gridTable").getDataIDs();
                //for (var i = 0; i < ids.length; i++) {
                //    var rowData = $("#gridTable").getRowData(ids[i]);
                //    var nexttime = formatDate(rowData.endtime, 'yyyy-MM-dd');
                //    var now = new Date();
                //    var nowday = now.getFullYear() + "-" + (now.getMonth() + 1) + "-" + now.getDate();
                //    var day = dattdifference(nowday, nexttime);
                //    if (day <= 30 && day >= 0) { //超标则标黄
                //        $('#' + ids[i]).find("td").eq(12).css("background-color", "orange");
                //    } else if (day < 0) {
                //        $('#' + ids[i]).find("td").eq(12).css("background-color", "#ff0000");
                //    }
                //}
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $.trim($("#txt_Keyword").val()),
                startTime: $("#StartTime").val(),
                endTime: $("#EndTime").val(),
                CarType: $("#CarType").attr('data-value'),//车辆类型
                Status: $("#IntandOut").attr('data-value'),//进出类型
                CurrentName: $("#Status").attr('data-value')//通行岗
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {
            $("#txt_Keyword").val("");
            $("#queryCondition .dropdown-text").html("选择条件").attr("data-value", "");
            $("#Status").attr("data-text", "===全部===");
            $("#Status").attr("data-value", "");
            $("#Status div:eq(0)").text("===全部===");
            $("#CarType").attr("data-text", "===全部===");
            $("#CarType").attr("data-value", "");
            $("#CarType div:eq(0)").text("===全部===");
            $("#IntandOut").attr("data-text", "===全部===");
            $("#IntandOut").attr("data-value", "");
            $("#IntandOut div:eq(0)").text("===全部===");
            $("#StartTime").val("");
            $("#EndTime").val("");
            var queryJson = {
                condition: '',
                keyword: '',
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //数据导出
    function export1() {
        var alltableDate = $("#gridTable").jqGrid('getRowData');//所有行
        if (alltableDate.length > 0) {
            location.href = top.contentPath + "/CarManage/Carinlog/Excel?type=0";
        }
        else {
            dialogMsg('没有可以导出的数据！', 0);
        }
    }
    





</script>
