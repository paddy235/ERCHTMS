@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    var numberlimit = request('numberlimit');
    var cid = request('cid');
    $(function () {
        InitialPage();
        GetGrid();
        ini();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 206);
            }, 200);
            e.stopPropagation();
        });
    }

    function ini() {
        $("#Status").ComboBox({
            url: "../../CarManage/Carinlog/GetStatus",
            id: "ItemValue",
            text: "ItemName",
            description: "==请选择==",
            height: "200px",
            allowSearch: true
        });

    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 206,
            url: "../../CarManage/Carinlog/GetListJson",
            postData: { queryJson: JSON.stringify({ CID: cid }) },
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                { label: '主键', name: 'createuserid', hidden: true },
                { label: '主键', name: 'isprocess', hidden: true },
                { label: '主键', name: 'createuserdeptcode', hidden: true },
                { label: '主键', name: 'createuserorgcode', hidden: true },
                {
                    label: '时间',
                    name: 'createdate',
                    index: 'createdate',
                    width: 300,
                    align: 'center'
                },
                {
                    label: '类型',
                    name: 'status',
                    index: 'status',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "入厂";
                        } else {
                            return "出厂";
                        }

                    }
                },
                {
                    label: '经过门岗',
                    name: 'address',
                    index: 'address',
                    width: 200,
                    align: 'center'
                }
                ,
                {
                    label: '随车人员',
                    name: 'pnum',
                    index: 'pnum',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var html = "<a href='javascript:pass(\""+rowObject.id+"\")'> " + cellvalue + "/" + numberlimit + " </a>";
                        return html;



                    }
                }
            ],
            viewrecords: true,
            rowNum: 30,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                CID: cid,
                Time: $("#cratedate").val(),
                Status: $("#Status").attr('data-value')
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {
            $("#cratedate").val("");
            $("#Status").attr("data-value", "");
            $("#Status").attr("data-text", "==请选择==");
            $("#Status div:eq(0)").text("==请选择==");
            var queryJson = {
                CID: cid
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }

    //查看过岗记录
    function pass(keyValue) {
        if (checkedRow(keyValue)) {
            var dlg = dialogOpen({
                id: 'Ride',
                title: '随车人员',
                url: '/CarManage/Carride/Form?keyValue=' + keyValue,
                width: '500px',
                height: '300px',
                btn: ["关闭"],
                callBack: function (iframeId) {
                    top.layer.close(dlg);
                }
            });
        }
    }

    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑车辆进出记录表',
                url: '/CarManage/Carinlog/Form?keyValue=' + keyValue,
                width: 'px',
                height: 'px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }

</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td><input id="cratedate" type="text" readonly="readonly" isvalid="yes" checkexpession="NotNull" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" class="form-control" /></td>
                <td style="padding-left: 5px">查询条件:</td>
                <td style="padding-left: 10px">
                    <div id="Status" type="select" style="width: 200px;" class="ui-select" isvalid="yes" checkexpession="NotNull">
                    </div>
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                    <a id="btn_SearchAll" class="btn btn-primary"><i class="fa fa-search-plus"></i>&nbsp;全部</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
</div>
