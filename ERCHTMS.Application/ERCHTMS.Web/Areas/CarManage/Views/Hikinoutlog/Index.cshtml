                    width: 200,
                    align: 'center'
                }
            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                StartTime: $("#StartTime").val(),
                EndTime: $("#EndTime").val(),
                DeptName: $("#DeptName").val(),
                Name: $("#Name").val(),
                DeviceName: $("#DeviceName").val(),
                AreaName: $("#AreaName").attr('data-value'),
                EventType: $("#EventType").attr('data-value')

            }
            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: JSON.stringify(queryJson) },
                    page: 1
                }).trigger('reloadGrid');
        });
        $("#btn_Reset").click(function () {
            $("#StartTime").val("");
            $("#EndTime").val("");
            $("#DeptName").val("");
            $("#Name").val("");
            $("#DeviceName").val("");
            $("#AreaName").attr("data-text", "===全部===");
            $("#AreaName").attr("data-value", "");
            $("#AreaName div:eq(0)").text("===全部===");
            $("#EventType").attr("data-text", "===全部===");
            $("#EventType").attr("data-value", "");
            $("#EventType div:eq(0)").text("===全部===");
            var queryJson = {
                StartTime: "",
                EndTime: ""
            }
            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: JSON.stringify(queryJson) },
                    page: 1
                }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress',
            function (event) {
                if (event.keyCode == "13") {
                    $('#btn_Search').trigger("click");
                }
            });
