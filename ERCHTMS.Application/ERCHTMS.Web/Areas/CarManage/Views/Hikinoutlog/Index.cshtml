    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 300,
            url: "../../CarManage/Hikinoutlog/GetListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                {
                    label: '姓名',
                    name: 'username',
                    index: 'username',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '部门',
                    name: 'deptname',
                    index: 'deptname',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '门禁点',
                    name: 'devicename',
                    index: 'devicename',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '门禁点区域',
                    name: 'areaname',
                    index: 'areaname',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '出\入',
                    name: 'inout',
                    index: 'inout',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        switch (cellvalue) {
                            case 0:
                                return "进门";
                                break;
                            case 1:
                                return "出门";
                                break;
                        }
                    }
                },
