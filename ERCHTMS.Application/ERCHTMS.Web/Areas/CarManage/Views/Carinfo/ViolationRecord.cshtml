@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/scripts/business/gridhelper.js"></script>
<script>
    var carno = request('carno');
    ;
    $(function () {
        InitialPage();
        GetGrid();
        InitiaCarInfo();

    });

    function InitiaCarInfo() {

        //报警类型
        $("#CarType").ComboBox({
            url: top.contentPath + "/CarManage/Carinfo/GetCarCailthepolice",
            id: "itemValue",
            text: "itemName",
            height: '100px',
            description: "==请选择==",
            allowSearch: true
        });

    }


    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 108.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //处理
    function handle(id) {
        if (id != "") {
            dialogOpen({
                id: 'Form',
                title: '违规处理',
                url: '/CarManage/Carviolation/HandleForm?keyValue=' + id,
                width: '600px',
                height: '400px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //忽略
    function ignore(id) {
        $.ajax({
            url: "../../CarManage/Carviolation/SaveHandleForm?keyValue=" + id + "&Content=",
            type: "POST",
            async: true,
            dataType: "Json",
            success: function (result) {
                $("#gridTable").trigger("reloadGrid");
            }
        });
    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../CarManage/Carviolation/GetViolationdListJson",
            postData: { queryJson: JSON.stringify({ Type: "", condition: "CarNo", keyword: carno}) },
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                { label: '主键', name: 'isprocess', hidden: true },
              
                   {
                    label: '报警时间',
                    name: 'createdate',
                    index: 'createdate',
                    width: 200,
                   align: 'center',
                   formatter: function (cellvalue, options, rowObject) {
                   var html = formatDate(rowObject.createdate, 'yyyy-MM-dd hh:mm')
                   return html;
                  }
               },
                {
                    label: '车牌号',
                    name: 'cardno',
                    index: 'cardno',
                    width: 200,
                    align: 'center'
                },
                  {
                      label: '预警类型',
                      name: 'violationtype',
                      index: 'violationtype',
                      width: 200,
                      align: 'center',
                      formatter: function (cellvalue, options, rowObject) {
                          var html = "";
                          if (cellvalue == 0) {
                              html = "超速报警";
                          }
                          else {
                              html = "越界报警";
                          }
                          return html;
                      }
                  },
                {
                    label: '报警信息',
                    name: 'violationmsg',
                    index: 'violationmsg',
                    width: 300,
                    align: 'center'
                },
               //{
               //    label: '处理时间',
               //    name: 'modifydate',
               //    index: 'modifydate',
               //    width: 200,
               //    align: 'center',
               //    formatter: function (cellvalue, options, rowObject) {
               //        var html = formatDate(rowObject.modifydate, 'yyyy-MM-dd hh:mm')
               //        return html;
               //    }
               //},
               //{
               //    label: '处理信息',
               //    name: 'processmeasure',
               //    index: 'processmeasure',
               //    width: 300,
               //    align: 'center'
               //},
                 {
                     label: '状态',
                     name: 'isprocess',
                     index: 'isprocess',
                     width: 200,
                     align: 'center',
                     formatter: function (cellvalue, options, rowObject) {
                         var html = "";
                         if (cellvalue == 0) {
                             html = "处理中";
                         }
                         else {
                             html = "已处理";
                         }
                         return html;
                     }
                 },
                   //{
                   //    label: '操作',
                   //    name: 'Oper',
                   //    width: 160,
                   //    align: 'center',
                   //    sortable: false,
                   //    formatter: function (cellvalue, options, rowObject) {
                   //        var html = "";
                   //        if (rowObject != null) {
                   //            if (rowObject.isprocess == 0) {
                   //                html += "<a href=\"javascript:handle('" + rowObject.id + "')\" title=\"处理\">处理</a>";
                   //                html += "<a href=\"javascript:ignore('" + rowObject.id + "')\" title=\"忽略\">忽略</a>";
                   //            }
                   //            else {
                   //                html += "<a  title=\"处理\">处理</a>";
                   //                html += "<a  title=\"忽略\">忽略</a>";
                   //            }
                   //        }
                   //        return html;
                   //    }
                   //},
            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'isprocess asc,createdate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
                gridqx($gridTable);
                var ids = $("#gridTable").getDataIDs();
                for (var i = 0; i < ids.length; i++) {
                    var rowData = $("#gridTable").getRowData(ids[i]);
                    if (rowData.isprocess == "处理中") {
                        $('#' + ids[i]).find("td").eq(8).find("a").eq(0).css("color", "#2e99d4");
                        $('#' + ids[i]).find("td").eq(8).find("a").eq(1).css("color", "#2e99d4");
                        $('#' + ids[i]).find("td").eq(7).eq(0).css("color", "red");
                    }
                    else {
                        $('#' + ids[i]).find("td").eq(7).eq(0).css("color", "#64f10a");
                    }
                }
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $.trim($("#txt_Keyword").val()),
                CarType: $("#CarType").attr('data-value')//车辆类型
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {
            $("#txt_Keyword").val("");
            $("#queryCondition .dropdown-text").html("选择条件").attr("data-value", "");
            $("#CarType").attr("data-text", "===全部===");
            $("#CarType").attr("data-value", "");
            $("#CarType div:eq(0)").text("===全部===");

            var queryJson = {
                condition: '',
                keyword: '',
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }





</script>
