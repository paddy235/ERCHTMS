@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script src="~/Content/scripts/business/gridhelper.js"></script>
<script>
    //进来默认是部门的权限列表
    var Type = 0;
    var DeptId = "";
    var UserId = "";
    $(function() {
        InitialPage();
        GetGrid();
        GetTree();
        GetPersonTree();

    });

    //初始化页面
    function InitialPage() {
        $('#layout').layout({
            applyDemoStyles: false,
            west__size: 400,
            onresize: function() {
                $(window).resize();
            }
        });
        //resize重设布局;
        $(window).resize(function(e) {
            window.setTimeout(function() {
                    $('#gridTable').setGridWidth(($('.gridPanel').width()));
                    $('#gridTable').setGridHeight($(window).height() - 110);
                },
                200);
            e.stopPropagation();
        });
    }

    //加载组织机构树
    function GetTree() {
        var json = JSON.stringify(
            {
                SelectMode: 0,
                Mode: 400
            }
        );
        var item = {
            height: $(window).height() - 92,
            url: "../../BaseManage/Department/GetDepartTreeJson?json=" + json,
            onnodeclick: function(item) {
                DeptId = item.id;
                var queryJson = {
                    RID: item.id,
                    Type: 0
                }
                var $gridTable = $('#gridTable');
                $gridTable.jqGrid('setGridParam',
                    {
                        postData: { queryJson: JSON.stringify(queryJson) },
                        page: 1
                    }).trigger('reloadGrid');
            }
        };
        //初始化
        $("#itemTree").treeview(item);
        if ($("#itemTree").html().length == 0) {
            $(".ui-layout-west").hide();
            $('.ui-layout-center').css({ "padding-left": "5px" });
        } else {
            $('#layout').layout({
                applyDemoStyles: false,
                onresize: function() {
                    $(window).resize();
                }
            });
        }
    }

    //加载人员树
    function GetPersonTree() {
        var item = {
            height: $(window).height() - 92,
            url: "../../CarManage/Hikaccessuser/GetListJson",
            //cascadecheck: false,
            showcheck: true,
            onnodeclick: function(item) {
                UserId = item.id;
                var queryJson = {
                    RID: item.id,
                    Type: 1
                }
                var $gridTable = $('#gridTable');
                $gridTable.jqGrid('setGridParam',
                    {
                        postData: { queryJson: JSON.stringify(queryJson) },
                        page: 1
                    }).trigger('reloadGrid');
            }
        };
        //初始化
        $("#PersonTree").treeview(item);
        if ($("#PersonTree").html().length == 0) {
            //$(".ui-layout-west").hide();
            //$('.ui-layout-center').css({ "padding-left": "5px" });
            $("#con2").attr("style", "height:" + ($(window).height() - 60) + "px");
            $('#con2').hide();
        } else {
            $('#layout').layout({
                applyDemoStyles: false,
                onresize: function() {
                    $(window).resize();
                }
            });
        }
    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 190,
            url: "../../CarManage/Hikaccessaurhority/GetListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                {
                    label: '操作',
                    name: 'Oper',
                    width: 160,
                    align: 'center',
                    sortable: false
                },
                {
                    label: '设备名称',
                    name: 'devicename',
                    index: 'devicename',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '设备进出类型',
                    name: 'outtype',
                    index: 'outtype',
                    width: 200,
                    align: 'center',
                    formatter: function(cellvalue, options, rowObject) {
                        switch (cellvalue) {
                        case 0:
                            return "进门设备";
                            break;
                        case 1:
                            return "出门设备";
                            break;
                        }
                    }
                },
                {
                    label: '所在区域',
                    name: 'areaname',
                    index: 'areaname',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '权限开始日期',
                    name: 'starttime',
                    index: 'starttime',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '权限终止日期',
                    name: 'endtime',
                    index: 'endtime',
                    width: 200,
                    align: 'center'
                }
            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function() {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function() {
                $('#' + this.id).setSelection(selectedRowIndex, false);
                gridqx($gridTable);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function() {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function() {
            var queryJson = {
                DeviceName: $.trim($("#DeviceName").val()),
                OutType: $("#OutType").attr('data-value'),
                AreaName: $("#AreaName").attr('data-value'),
                DeviceIP: $.trim($("#DeviceIP").val())
            }
            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: JSON.stringify(queryJson) },
                    page: 1
                }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function() {
            $("#DeviceName").val("");
            $("#DeviceIP").val("");
            $("#OutType").attr("data-text", "===全部===");
            $("#OutType").attr("data-value", "");
            $("#OutType div:eq(0)").text("===全部===");
            $("#AreaName").attr("data-text", "===全部===");
            $("#AreaName").attr("data-value", "");
            $("#AreaName div:eq(0)").text("===全部===");
            var queryJson = {
                condition: '',
                keyword: '',
                Type: "0"
            }
            $gridTable.jqGrid('setGridParam',
                {
                    postData: { queryJson: JSON.stringify(queryJson) },
                    page: 1
                }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress',
            function(event) {
                if (event.keyCode == "13") {
                    $('#btn_Search').trigger("click");
                }
            });
    }

    //新增
    function add() {
        if (Type == 0) {
            dialogOpen({
                id: 'Form',
                title: '按组织配权限',
                url: '/CarManage/Hikaccessaurhority/index',
                width: '1400px',
                height: '800px',
                callBack: function(iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        } else {
            dialogOpen({
                id: 'Form',
                title: '按人员配权限',
                url: '/CarManage/Hikaccessaurhority/Personindex',
                width: '1400px',
                height: '800px',
                callBack: function(iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }

    //编辑
    function edit() {
        var keyValue = $('#gridTable').jqGridRowValue('id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑海康门禁间设备管理',
                url: '/CarManage/Hikaccess/Form?keyValue=' + keyValue,
                width: '500px',
                height: '300px',
                callBack: function(iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }

    //删除
    function del() {
        if (Type == 1) {
            var userids = "";
            var nodes = $("#PersonTree").getTSNs(true);
            if (nodes.length > 0) {
                $.each(nodes,
                    function(i, value) {
                        if (userids == "") {
                            userids = "'" + value.id + "'";

                        } else {
                            userids += ",'" + value.id + "'";
                        }
                    });
            } else {
                dialogMsg('请勾选需要删除的人员！', 0);
                return;
            }

            $.RemoveForm({
                url: '../../CarManage/Hikaccessaurhority/RemoveUserForm',
                param: { keyValue: userids },
                success: function(data) {
                    $('#gridTable').trigger('reloadGrid');
                    GetPersonTree();
                }
            })

        } else {
            dialogMsg('部门无法批量删除！', 0);
        }
    }

    function delaurh() {
        var keyValue = $('#gridTable').jqGridRowValue('id');
        if (checkedRow(keyValue)) {
            $.RemoveForm({
                url: '../../CarManage/Hikaccessaurhority/RemoveForm',
                param: { keyValue: keyValue },
                success: function(data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选中需要删除的数据！', 0);
        }
    }

    function BtnTab(type) {
        var queryJson;
        if (type == 0) {
            Type = 0;
            $('#con1').show();
            $('#con2').hide();
            $('.btn10').removeClass('btn-primary');
            $('.btn10').addClass('btn-default');
            $(this).addClass('btn-primary');
            queryJson = {
                RID: DeptId,
                Type: type
            }
        } else {
            queryJson = {
                RID: UserId,
                Type: type
            }
            Type = 1;
            $('#con1').hide();
            $('#con2').show();
            $('.btn10').removeClass('btn-primary');
            $('.btn10').addClass('btn-default');
            $(this).addClass('btn-primary');
        }


        var $gridTable = $('#gridTable');
        $gridTable.jqGrid('setGridParam',
            {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
    }

    function Control() {
        dialogOpen({
            id: 'ControlIndex',
            title: '远程控制',
            url: '/CarManage/Hikaccess/ControlIndex',
            width: '1200px',
            height: '800px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        })
    }
</script>
<div style="margin-top:10px;">
    <div class="row">
        <table style="width: 100%;">
            <tr>
                <td>
                    <div style="margin-left: 10px;">
                        <div class="btn-group">
                            <button id="btntj" class="btn btn-primary btn10" type="button" onclick="BtnTab(0)"><i class="fa fa fa-pie-chart"></i>&nbsp;按部门配权限</button>
                            <button id="btnqs" class="btn btn-default btn10" type="button" onclick="BtnTab(1)"><i class="fa fa fa-area-chart"></i>&nbsp;按人员配权限</button>
                        </div>
                    </div>
                </td>
            </tr>
        </table>

    </div>

</div>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div id="con1">
                <div class="panel-Title">
                    组织机构
                </div>
                <div id="itemTree"></div>
            </div>

            <div id="con2" style="display: none;">
                <div class="panel-Title">
                    已配置权限人员
                </div>
                <div id="PersonTree"></div>
            </div>

        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">门禁点列表</div>
            <div class="toolbar" style="margin-left: 10px; margin-bottom: 5px;">
                <div class="row" style="width: 100%;">
                    <div class="col-md-6">
                        <div style="float: left; margin-top: 5px;">
                            <a class="btn btn-default" onclick="add();"><i class="fa fa-save"></i>添加权限</a>
                            <a class="btn btn-default" onclick="del();"><i class="fa fa-cut"></i>删除权限</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div style="float: right; margin-top: 5px;">
                            <a class="btn btn-default" onclick="Control();"><i class="fa fa-cut"></i>远程控制</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>

        </div>
    </div>
</div>
