@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script src="~/Content/scripts/business/gridhelper.js"></script>
<script>
    var AreaId = "";
    var AreaName = "";
    $(function () {
        InitialPage();
        GetGrid();
        GetTree();
    });
    //初始化页面
    function InitialPage() {
        $('#layout').layout({
            applyDemoStyles: false,
            west__size: 500,
            onresize: function () {
                $(window).resize();
            }
        });
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 110);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载组织机构树
    function GetTree() {
        var item = {
            height: $(window).height() - 48,
            url: "../../BaseManage/District/GetTreeJson",
            onnodeclick: function (item) {
                AreaId = item.id;
                AreaName = item.text;
                var queryJson = {
                    AreaId: item.id 
                }
                var $gridTable = $('#gridTable');
                $gridTable.jqGrid('setGridParam', {
                    postData: { queryJson: JSON.stringify(queryJson) }, page: 1
                }).trigger('reloadGrid');
            }
        };
        //初始化
        $("#itemTree").treeview(item);
        if ($("#itemTree").html().length == 0) {
            $(".ui-layout-west").hide();
            $('.ui-layout-center').css({ "padding-left": "5px" });
        } else {
            $('#layout').layout({
                applyDemoStyles: false,
                onresize: function () {
                    $(window).resize();
                }
            });
        }
    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 145,
            url: "../../CarManage/Hikaccess/GetListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                {
                    label: '操作',
                    name: 'Oper',
                    width: 160,
                    align: 'center',
                    sortable: false
                },
                {
                    label: '设备名称',
                    name: 'devicename',
                    index: 'devicename',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '设备进出类型',
                    name: 'outtype',
                    index: 'outtype',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        switch (cellvalue) {
                            case 0:
                                return "进门设备";
                                break;
                            case 1:
                                return "出门设备";
                                break;
                        }
                    }
                },

                {
                    label: '设备归属区域',
                    name: 'areaname',
                    index: 'areaname',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '设备配置IP',
                    name: 'deviceip',
                    index: 'deviceip',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '门禁状态',
                    name: 'status',
                    index: 'status',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        switch (cellvalue) {
                        case 0:
                            return "常开";
                            break;
                        case 1:
                            return "门关";
                            break;
                        case 2:
                            return "门开";
                            break;
                        case 3:
                            return "常关";
                            break;
                        }
                    }
                }
            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
                gridqx($gridTable);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                DeviceName: $.trim($("#DeviceName").val()),
                OutType: $("#OutType").attr('data-value'),
                AreaName: $("#AreaName").attr('data-value'),
                DeviceIP: $.trim($("#DeviceIP").val())
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {
            $("#DeviceName").val("");
            $("#DeviceIP").val("");
            $("#OutType").attr("data-text", "===全部===");
            $("#OutType").attr("data-value", "");
            $("#OutType div:eq(0)").text("===全部===");
            $("#AreaName").attr("data-text", "===全部===");
            $("#AreaName").attr("data-value", "");
            $("#AreaName div:eq(0)").text("===全部===");
            var queryJson = {
                condition: '',
                keyword: '',
                Type: "0"
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function add() {
        dialogOpen({
            id: 'Form',
            title: '添加海康门禁间设备管理',
            url: '/CarManage/Hikaccess/Form?AreaId=' + AreaId + "&AreaName=" + AreaName,
            width: '500px',
            height: '300px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function edit() {
        var keyValue = $('#gridTable').jqGridRowValue('id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑海康门禁间设备管理',
                url: '/CarManage/Hikaccess/Form?keyValue=' + keyValue,
                width: '500px',
                height: '300px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function del() {
        var keyValue = $('#gridTable').jqGridRowValue('id');
        if (keyValue) {
            $.RemoveForm({
                url: '../../CarManage/Hikaccess/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的门禁间设备！', 0);
        }
    }
</script>
<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">
                区域列表
            </div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">门禁点列表</div>
            <div class="toolbar" style="margin-left:10px; margin-bottom:5px;">
                <div class="btn-group">
                    <a class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>

            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>

        </div>
    </div>
</div>