    //    $("#GpsId").ComboBox({
    //        url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
    //        param: { EnCode: "CarGps" },
    //        id: "ItemValue",
    //        text: "ItemName",
    //        description: "==请选择==",
    //        height: "200px",
    //        allowSearch: true
    //    });

    //}

</script>
