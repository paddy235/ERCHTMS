@{;
ViewBag.Title = "列表页面";
Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/scripts/business/gridhelper.js"></script>
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
        $("#Status").ComboBox({
            url: top.contentPath + "/CarManage/Visitcar/GetStatus",
            id: "itemValue",
            text: "itemName",
            height: '100px',
            description: "==请选择==",
            allowSearch: true
        });
        
        $("#Transporttype1").ComboBox({
            url: "../../CarManage/MaterialCar/GetWlType",
            id: "ItemValue",
            text: "ItemName",
            description: "==请选择==",
            height: "200px",
            allowSearch: true
        });
        $("#Vnum").ComboBox({
            url: "../../CarManage/Hazardouscar/GetStatus",
            id: "ItemValue",
            text: "ItemName",
            description: "==请选择==",
            height: "200px",
            allowSearch: true
        });
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 108.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../CarManage/MaterialCar/GetListJson",
            postData: { queryJson: JSON.stringify({ Type: "0" }) },
            datatype: "json",
            colModel: [
                { label: '主键', name: 'id', hidden: true },
                { label: '主键', name: 'createuserid', hidden: true },
                { label: '主键', name: 'createdate', hidden: true },
                { label: '主键', name: 'modifyuserid', hidden: true },
                { label: '主键', name: 'modifydate', hidden: true },
                { label: '主键', name: 'createuserdeptcode', hidden: true },
                { label: '主键', name: 'createuserorgcode', hidden: true },
                { label: '主键', name: 'outdate', hidden: true },
                {
                    label: '操作',
                    name: 'Oper',
                    width: 160,
                    align: 'center',
                    sortable: false
                },
                {
                    label: '车辆状态',
                    name: 'examinestatus',
                    index: 'examinestatus',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        switch (cellvalue) {
                            case 0:
                                return "已开票";
                                break;
                            case 1:
                                return "待审核";
                                break;
                            case 2:
                                return "待审核";
                                break;
                            case 3:
                                return "已入厂";
                                break;
                            case 4:
                                return "已离厂";
                                break;
                            case 99:
                                return "已拒绝入厂";
                                break;
                        }
                    }
                },
                {
                    label: '车牌号',
                    name: 'platenumber',
                    index: 'platenumber',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '驾驶人',
                    name: 'drivername',
                    index: 'drivername',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '驾驶人电话',
                    name: 'drivertel',
                    index: 'drivertel',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '运输类型',
                    name: 'transporttype',
                    index: 'transporttype',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '副产品类型',
                    name: 'producttype',
                    index: 'producttype',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '装料点',
                    name: 'dress',
                    index: 'dress',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '入出厂时间',
                    name: 'getdata',
                    index: 'getdata',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        var endtime = "";
                        if (rowObject.outdate != null) {
                            endtime = rowObject.outdate;
                        }
                        return cellvalue + "-" + endtime;
                    }
                },
                {
                    label: '在厂时长',
                    name: 'staytime',
                    index: 'staytime',
                    width: 200,
                    align: 'center'
                },
                {
                    label: '厂内情况',
                    name: 'vnum',
                    index: 'vnum',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "正常";
                        } else {
                            return "异常";
                        }
                    }
                },
                {
                    label: '车辆定位',
                    name: 'cargps',
                    index: 'cargps',
                    width: 200,
                    align: 'center',
                    formatter: function (cellvalue, options, rowObject) {
                        return "<a href=\"javascript:f_OpenItinerary()\" title=\"查看\"><i>查看</i></a>";
                    }
                }

            ],
            viewrecords: true,
            rowNum: 30,
            //multiboxonly: true,
            //multiselect: true,
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            userdata: "userdata",
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
                gridqx($gridTable);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value);
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $.trim($("#txt_Keyword").val()),
                Status: $("#Status").attr('data-value'),
                Vnum: $("#Vnum").attr('data-value'),
                Transporttype: $("#Transporttype1").attr('data-value'),
                Type: "0"
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        $("#btn_SearchAll").click(function () {
            $("#txt_Keyword").val("");
            $("#queryCondition .dropdown-text").html("选择条件").attr("data-value", "");
            $("#Status").attr("data-text", "===全部===");
            $("#Status").attr("data-value", "");
            $("#Status div:eq(0)").text("===全部===");
            $("#Transporttype1").attr("data-text", "===全部===");
            $("#Transporttype1").attr("data-value", "");
            $("#Transporttype1 div:eq(0)").text("===全部===");
            $("#Vnum").attr("data-text", "===全部===");
            $("#Vnum").attr("data-value", "");
            $("#Vnum div:eq(0)").text("===全部===");
            var queryJson = {
                condition: '',
                keyword: '',
                Type: "0"
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }

    //查看
    function show() {
        var keyValue = $('#gridTable').jqGridRowValue('id');
        if (checkedRow(keyValue)) {
            var dlg = dialogOpen({
                id: 'Form',
                title: '查看车辆基础信息表',
                url: '/CarManage/MaterialCar/Form?action=show&keyValue=' + keyValue,
                width: '1000px',
                height: '800px',
                btn: ["关闭"],
                callBack: function (iframeId) {
                    top.layer.close(dlg);
                }
            });
        }




    }

    //厂内行驶路线
    function f_OpenItinerary() {
        var keyValue = $('#gridTable').jqGridRowValue('id');
        if (checkedRow(keyValue)) {
            var dlg = dialogOpen({
                id: 'Form1',
                title: '厂内行驶路线',
                url: '/MatterManage/OurTicket/NotesItinerary?keyValue=' + keyValue + "&type=4",
                width: 1000 + "px",
                height: 750 + "px",
                btn: ["关闭"],
                callBack: function (iframeId) {
                    top.layer.close(dlg);
                }
            });
        }

    }

</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td style="padding-left: 5px">车辆状态：</td>
                <td style="padding-left: 5px">
                    <div id="Status" style="width: 200px;" type="select" class="ui-select"></div>
                </td>
                <td style="padding-left: 5px">
                    运输类型：
                </td>
                <td style="padding-left: 5px">
                    <div id="Transporttype1" style="width:200px;" type="select" class="ui-select">
                    </div>
                </td>
                <td style="padding-left: 5px">
                    违章异常
                </td>
                <td style="padding-left: 10px">
                    <div id="Vnum" style="width: 200px;" type="select" class="ui-select"></div>
                </td>
                <td style="padding-left: 10px">
                    <div id="queryCondition" class="btn-group">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a data-value="CarNo">车牌号</a></li>
                            <li><a data-value="Dirver">驾驶人</a></li>
                            <li><a data-value="Phone">电话号码</a></li>
                        </ul>
                    </div>
                </td>
                <td style="padding-left: 10px">
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                    <a id="btn_SearchAll" class="btn btn-primary"><i class="fa fa-search-plus"></i>&nbsp;全部</a>
                </td>
                <td style="padding-left: 10px"></td>
            </tr>
        </table>

    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>刷新</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
